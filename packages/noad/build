#!/bin/sh

. config/options

require_cxx $1

$SCRIPTS/build toolchain
$SCRIPTS/build libmpeg2
$SCRIPTS/build ffmpeg

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --with-ffmpeg \
            --with-libmpeg2-static \

make
