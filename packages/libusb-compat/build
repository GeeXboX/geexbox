#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --disable-log \
            --disable-debug-log \
            --disable-examples-build \

make
strip_libs .
make_install
sed -i "s:\(['= ]\)/usr:\\1$LIB_PREFIX:g" .install/usr/bin/libusb-config
