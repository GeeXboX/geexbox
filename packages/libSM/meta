PKG_NAME=libSM
PKG_URL="http://xorg.freedesktop.org/releases/individual/lib/libSM-1.1.1.tar.bz2"
PKG_VERSION=1.1.1
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libICE"
PKG_BUILD_DEPENDS="toolchain xproto libICE"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="X11 Session Management library"
PKG_LONGDESC="This package provides the main interface to the X11 Session Management library, which allows for applications to both manage sessions, and make use of session managers to save and restore their state for later use."
