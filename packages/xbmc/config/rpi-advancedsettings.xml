<advancedsettings>
  <useddsfanart>true</useddsfanart>
  <gputempcommand>sed -e 's/\([0-9]*\)[0-9]\{3\}.*/\1 C/' /sys/class/thermal/thermal_zone0/temp</gputempcommand>
  <video>
    <defaultplayer>omxplayer</defaultplayer>
    <defaultdvdplayer>omxplayer</defaultdvdplayer>
  </video>
  <audio>
    <defaultplayer>omxplayer</defaultplayer>
    <streamsilence>false</streamsilence>
  </audio>
  <samba>
    <clienttimeout>10</clienttimeout>
  </samba>
  <fullscreen>true</fullscreen>
  <libass>
    <styleoverrides>
      <style name="Shadow" value="0" />
      <style name="Blur" value="0" />
      <style name="BorderStyle" value="0" />
    </styleoverrides>
  </libass> 
</advancedsettings>
