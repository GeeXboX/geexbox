#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build zlib

export MAKEFLAGS=-j1

case $TARGET_ARCH in
  i386)
    TARGET=linux-elf
    ;;
  x86_64)
    TARGET=linux-x86_64
    ;;
  powerpc)
    TARGET=linux-ppc
    ;;
  powerpc64)
    TARGET=linux-ppc64
    ;;
esac

cd $BUILD/$1*
./Configure zlib-dynamic no-shared no-dso no-krb5 --prefix=$LIB_PREFIX $TARGET 
make CC=$CC LD=$LD RANLIB=$RANLIB
make install
