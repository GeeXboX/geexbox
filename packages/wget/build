#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-opie \
            --disable-digest \
            --disable-ntlm \
            --disable-debug \
            --disable-ipv6 \
            --disable-nls \
            --disable-rpath \
            --without-ssl \
            --without-libssl-prefix \

make
make_install
