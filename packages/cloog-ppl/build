#!/bin/sh

. config/options

$SCRIPTS/install ccache
$SCRIPTS/install ppl

setup_toolchain host

cd $BUILD/$1*
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --disable-shared \
             --enable-static \
             --with-bits=gmp \
             --with-gmp="$ROOT/$TOOLCHAIN" \
             --with-ppl="$ROOT/$TOOLCHAIN" \
             --with-host-libstdcxx="-lstdc++"

make
