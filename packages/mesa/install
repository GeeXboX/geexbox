#!/bin/sh

. config/options

cd $BUILD/$1*

do_install usr/lib/libOSMesa.so*
do_install usr/lib/libGLU.so*
[ "$TARGET_ARCH" = arm ] && do_install usr/lib/libEGL.so*

do_install usr/lib/mesa
ln -s /usr/lib/mesa/libGL.so.1 $INSTALL/usr/lib/libGL.so.1
ln -s libGL.so.1 $INSTALL/usr/lib/libGL.so

if [ "$TARGET_PLATFORM" = easygate ]; then
  do_install usr/lib/dri/i915_dri.so
else
  do_install usr/lib/dri
fi

exit 0
