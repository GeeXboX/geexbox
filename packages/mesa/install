#!/bin/sh

. config/options

$SCRIPTS/install expat

mkdir -p $INSTALLX/usr/lib
cp -PR $BUILD/$1*/src/mesa/libmesa.so* $INSTALLX/usr/lib

mkdir -p $INSTALLX/usr/lib/dri
if [ "$TARGET_PLATFORM" = easygate ]; then
  cp $BUILD/$1*/lib*/i915_dri.so $INSTALLX/usr/lib/dri
elif [ "$TARGET_PLATFORM" = eeepc ]; then
  cp $BUILD/$1*/lib*/i915_dri.so $INSTALLX/usr/lib/dri
else
  cp -PR $BUILD/$1*/lib*/*_dri.so $INSTALLX/usr/lib/dri
fi
