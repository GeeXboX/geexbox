#!/bin/sh

. config/options

$SCRIPTS/build libdrm
$SCRIPTS/build expat

cd $BUILD/$1*
HOST_CC=$HOST_CC \
OPT_FLAGS="$CFLAGS" \
HOST_OPT_FLAGS="$HOST_CFLAGS" \
X11_INCLUDES= \
DRI_DRIVER_INSTALL_DIR="$XORG_PATH_DRI" \
DRI_DRIVER_SEARCH_DIR="$XORG_PATH_DRI" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --exec-prefix=/usr \
            --enable-shared \
            --disable-static \
            --disable-debug \
            --disable-selinux \
            --disable-xcb \
            --disable-glx-tls \
            --enable-driglx-direct \
            --disable-gl-osmesa \
            --disable-egl \
            --disable-glu \
            --disable-glut \
            --disable-glw \
            --disable-motif \
            --disable-gallium \
            --with-driver=dri \
            --with-dri-driverdir="$XORG_PATH_DRI" \
            --with-xorg-driver-dir="$XORG_PATH_DRIVERS" \
            --with-x \
            --without-demos \

make
strip_libs src
strip_libs lib*

# copy GLX headers for xorg-server to build
cp -PR include/* $LIB_PREFIX/include
