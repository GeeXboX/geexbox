#!/bin/sh

. config/options

$SCRIPTS/build libdrm
$SCRIPTS/build expat

cd $BUILD/$1*
HOST_CC=$HOST_CC \
OPT_FLAGS="$CFLAGS" \
HOST_OPT_FLAGS="$HOST_CFLAGS" \
X11_INCLUDES= \
DRI_DRIVER_INSTALL_DIR="$XORG_PATH_DRI" \
DRI_DRIVER_SEARCH_DIR="$XORG_PATH_DRI" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --exec-prefix=/usr \
            --enable-shared \
            --disable-static \
            --disable-debug \
            --disable-selinux \
            --disable-xcb \
            --enable-glx-tls \
            --enable-driglx-direct \
            --enable-gl-osmesa \
            --disable-egl \
            --enable-glu \
            --disable-glut \
            --enable-glw \
            --disable-motif \
            --enable-gallium \
            --with-driver=dri \
            --with-dri-driverdir="$XORG_PATH_DRI" \
            --with-xorg-driver-dir="$XORG_PATH_DRIVERS" \
            --with-x \
            --without-demos \

make
strip_libs lib*

# copy GLX headers for xorg-server to build
cp -PR include/* $LIB_PREFIX/include

# copy GLX libraries
cp -P src/mesa/libmesa.so* $LIB_PREFIX/lib
cp -P src/mesa/libmesagallium.so* $LIB_PREFIX/lib
cp -P src/mesa/libglapi.so $LIB_PREFIX/lib
cp -P lib/libOSMesa.so* $LIB_PREFIX/lib
cp -P lib/libGLU.so* $LIB_PREFIX/lib
cp -P lib/libGLw.so* $LIB_PREFIX/lib
cp -P lib/libGL.s* $LIB_PREFIX/lib

cp src/mesa/drivers/dri/dri.pc $LIB_PREFIX/lib/pkgconfig

