#!/bin/sh

. config/options

cd $BUILD/$1*
make linux CC="$CC" AR="$AR rcu" RANLIB="$RANLIB" CFLAGS="$CFLAGS -DLUA_USE_LINUX"
mkdir -p .install/usr/include .install/usr/lib/pkgconfig
cp src/lua.h src/luaconf.h src/lualib.h src/lauxlib.h .install/usr/include
cp src/liblua.a .install/usr/lib
cp etc/lua.pc .install/usr/lib/pkgconfig
sed -i "s%^prefix=.*%prefix= $LIB_PREFIX%" .install/usr/lib/pkgconfig/lua.pc
