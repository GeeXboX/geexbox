#!/bin/sh

. config/options

$SCRIPTS/build GLib

if [ "$TARGET_ARCH" = arm ]; then
  VFP_CONFIG="--enable-vfp"
else
  VFP_CONFIG="--disable-vfp"
fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --disable-gtk-doc \
            $VFP_CONFIG \

make
strip_libs .
make install
