#!/bin/sh

. config/options

if [ "$TARGET_ARCH" = arm ]; then
  VFP_CONFIG="--enable-vfp"
  export as_cv_unaligned_access=no
else
  VFP_CONFIG="--disable-vfp"
  export as_cv_unaligned_access=yes
fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --disable-gtk-doc \
            $VFP_CONFIG \

make
strip_libs .
make_install
