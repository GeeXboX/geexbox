#!/bin/sh

. config/options

$SCRIPTS/install libusb

mkdir -p $INSTALL/etc
mkdir -p $INSTALL/usr/bin
cp $BUILD/$1*/$1 $INSTALL/usr/bin
cp $PACKAGES/$1/config/$1.conf $INSTALL/etc/

cat <<EOF >$INSTALL/etc/lcddisplay
LCD_ENABLED=$LCD_ENABLED
LCD_MODEL=$LCD_MODEL
LCD_WIDTH=$LCD_WIDTH
LCD_HEIGHT=$LCD_HEIGHT
EOF
