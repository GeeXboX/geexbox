PKG_NAME=xf86-video-s3virge
PKG_VERSION=1.10.4
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain xorg-server"
PKG_DEPENDS="$TARGET_LIBC xorg-server"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORT_DESC="X.Org X server -- S3 ViRGE display driver"
PKG_LONG_DESC=" This package provides the driver for the S3 ViRGE and Trio3D family of chipsets.  It does not support Trio64 or S3 96x cards; support for these can be found in the xf86-video-s3 package.  Support for S3 Savage chipsets can be found in xf86-video-savage."
