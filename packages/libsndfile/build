#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-static \
            --disable-shared \
            --disable-alsa \
            --disable-external-libs \
            --disable-sqlite \
            --disable-octave \

make 
make install
