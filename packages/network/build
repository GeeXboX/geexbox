#!/bin/sh

. config/options

$SCRIPTS/build bftpd
[ "$SAMBA" = yes ] && $SCRIPTS/build samba
$SCRIPTS/build wget

if [ "$WIFI" = yes ]; then
  MADWIFI=madwifi-trunk
  [ "$TARGET_PLATFORM" = eeepc ] && MADWIFI=eeepc-madwifi-nr
  $SCRIPTS/build wireless_tools
  $SCRIPTS/build acx
  $SCRIPTS/build $MADWIFI
  [ "$NDISWRAPPER" = yes ] && $SCRIPTS/build ndiswrapper
  [ "$WPA_SUPPLICANT" = yes ] && $SCRIPTS/build wpa_supplicant
  [ "$OLSR" = yes ] && $SCRIPTS/build olsrd
fi

exit 0
