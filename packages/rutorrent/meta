PKG_NAME=rutorrent
PKG_VERSION=3.5
PKG_URL="http://rutorrent.googlecode.com/files/rutorrent-${PKG_VERSION}.tar.gz http://rutorrent.googlecode.com/files/plugins-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_RUN_DEPENDS="rtorrent xmlrpc-c php lighttpd unrar mediainfo unzip ffmpeg"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=misc
PKG_SHORTDESC="frontend for rtorrent"
PKG_LONGDESC="ruTorrent is a front-end for the popular Bittorrent client rTorrent."
