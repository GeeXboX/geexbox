PKG_NAME=alsa
PKG_VERSION=1.0.23
PKG_REV=1
PKG_ARCH=all
PKG_DEPENDS="alsa-lib alsa-utils"
[ "$PULSEAUDIO" = yes ] && PKG_DEPENDS="$PKG_DEPENDS alsa-plugins"
PKG_KCONFIG_DEPENDS="select PKG_alsa-plugins if GX_PULSEAUDIO"
PKG_PRIORITY=standard
PKG_SECTION=sound
PKG_SHORTDESC="ALSA driver configuration files"
PKG_LONGDESC="This package contains various configuration files for the ALSA drivers. ALSA is the Advanced Linux Sound Architecture."
