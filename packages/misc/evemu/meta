PKG_NAME=evemu
PKG_VERSION=1.0.10
PKG_URL="https://launchpad.net/evemu/trunk/evemu-${PKG_VERSION}/+download/evemu-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=misc
PKG_SHORTDESC="kernel input events recording tool"
PKG_LONGDESC="evemu is a tool to record information about and events from an input device. The data recorded can be re-played on another host, creating a virtual input device that looks identical to all components but the kernel. It is thus ideally suited to input device debugging."
