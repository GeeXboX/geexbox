#! /bin/sh

if [ ! "$1" = remove ]; then
  cfgfile=config.inc.php
  rootdir=/srv/www/htdocs/phpmyadmin
  [ ! -e $rootdir/$cfgfile ] && \
    cp $rootdir/config/$cfgfile $rootdir/

  diff -q $rootdir/$cfgfile $rootdir/config/$cfgfile > /dev/null
  [ $? = 0 ] && \
    rm -rf $rootdir/config
fi

systemctl restart lighttpd
