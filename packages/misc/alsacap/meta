PKG_NAME=alsacap
PKG_VERSION=0.1
PKG_URL="http://www.volkerschatz.com/noise/alsacap.c"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=misc
PKG_SHORTDESC="print ALSA device capabilities"
PKG_LONGDESC="alsacap is a small program I wrote to get to grips with non-trivial hardware configuration spaces and with related peculiarities I had noticed on my system. I think it will be useful to anyone troubleshooting ALSA."
