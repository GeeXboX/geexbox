    ;;
  *)
    PKG_VERSION=4.9-2016.02
    PKG_URL="https://releases.linaro.org/components/toolchain/gcc-linaro/${PKG_VERSION}/gcc-linaro-${PKG_VERSION}.tar.xz"
    GCC_VERSION=4.9.4
esac
