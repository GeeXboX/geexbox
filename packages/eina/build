#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --enable-pthread \
            --enable-static-chained-pool \
            --enable-static-pass-through \

make
$STRIP src/lib/.libs/libeina.so*
make install
