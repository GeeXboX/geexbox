#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --enable-pthread \
            --enable-ememoa \
            --enable-ememoa-fixed \
            --enable-ememoa-unknown \
            --enable-fixed-bitmap \
            --enable-chained-pool \
            --enable-pass-through \
            --enable-default-mempool \

make
strip_libs src
make install
