#!/bin/sh

. config/options

cd $BUILD/$1*

./configure --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=/usr \
             --disable-static \
             --enable-shared \
             --enable-pthread \
             --disable-ememoa \
             --disable-mempool-ememoa-fixed \
             --disable-mempool-ememoa-unknown \
             --enable-mempool-fixed-bitmap \
             --enable-mempool-chained-pool \
             --enable-mempool-pass-through \
             --enable-default-mempool \
             --disable-doc \
             --disable-tests \
             --enable-amalgamation \

make
strip_libs src
make_install
