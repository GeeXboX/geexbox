#!/bin/sh

. config/options

cd $BUILD/$1*

do_install lib/ld*
do_install lib/libc.so.6
do_install lib/libdl.so.2
do_install lib/libpthread.so.0
do_install lib/libm.so.6
do_install lib/libutil.so.1
do_install lib/librt.so.1
do_install lib/libnss_dns.so.2
do_install lib/libnsl.so.1
do_install lib/libnss_compat.so.2
do_install lib/libnss_files.so.2

pkg_uses $1 devtools && do_install usr/bin/ldd

do_install usr/bin/locale

mkdir -p $INSTALL/etc
cp $ROOT/$PACKAGES/$1/config/nsswitch.conf $INSTALL/etc
