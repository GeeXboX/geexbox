#!/bin/sh

. config/options

$SCRIPTS/build toolchain

make -C $BUILD/$1* \
     CC=$CC \
     AR=$AR \
     RANLIB=$RANLIB \
     CFLAGS="$CFLAGS -fomit-frame-pointer -D_FILE_OFFSET_BITS=64" \
     LDFLAGS="$LDFLAGS" \
     bootsect_bin.o \
     ldlinux_bin.o \
     pxelinux.0 \
     isolinux.bin

make -C $BUILD/$1*/mtools \
     CC=$CC \
     OPTFLAGS="$CFLAGS" \
     LDFLAGS="$LDFLAGS" \
     $1

make -C $BUILD/$1*/com32 CC=$CC
