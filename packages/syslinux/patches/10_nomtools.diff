-
-    /*
-     * Run mtools to create the LDLINUX.SYS file
-     */
-    if (setenv("MTOOLSRC", mtools_conf, 1)) {
-	perror(program);
-	exit(1);
-    }
-
-    /* This command may fail legitimately */
-    system("mattrib -h -r -s s:/ldlinux.sys 2>/dev/null");
-
