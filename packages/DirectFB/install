#!/bin/sh

. config/options

DFB_DIR=$INSTALL/usr/lib/directfb

mkdir -p $INSTALL/usr/lib
cp -PR $BUILD/$1*/src/.libs/libdirectfb*.so* $INSTALL/usr/lib
cp -PR $BUILD/$1*/lib/direct/.libs/libdirect*.so* $INSTALL/usr/lib
cp -PR $BUILD/$1*/lib/fusion/.libs/libfusion*.so* $INSTALL/usr/lib

mkdir -p $DFB_DIR/gfxdrivers
cp $BUILD/$1*/gfxdrivers/nvidia/.libs/libdirectfb_nvidia.so $DFB_DIR/gfxdrivers

mkdir -p $DFB_DIR/systems
cp $BUILD/$1*/systems/fbdev/.libs/libdirectfb_fbdev.so $DFB_DIR/systems

mkdir -p $DFB_DIR/wm
cp $BUILD/$1*/wm/default/.libs/libdirectfbwm_default.so $DFB_DIR/wm
