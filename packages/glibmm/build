#!/bin/sh

. config/options

require_cxx $1

export ac_cv_path_PKG_CONFIG="$ROOT/$TOOLCHAIN/bin/pkg-config"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-dependency-tracking \

make
make_install
