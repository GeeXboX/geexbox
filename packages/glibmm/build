#!/bin/sh

. config/options

require_cxx $1

$SCRIPTS/build toolchain
$SCRIPTS/build GLib
$SCRIPTS/build libsigc++

export ac_cv_path_PKG_CONFIG="$ROOT/$TOOLCHAIN/bin/pkg-config"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --disable-dependency-tracking 
make
$STRIP glib/glibmm/.libs/libglibmm*.so*
$STRIP gio/giomm/.libs/libgiomm*.so*
make install
