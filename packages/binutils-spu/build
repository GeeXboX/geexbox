#!/bin/sh

. config/options

$SCRIPTS/build toolchain

setup_toolchain host

cd $BUILD/binutils*
mkdir -p objdir-spu
cd objdir-spu
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=spu \
             --prefix=$ROOT/$TOOLCHAIN \
             --program-prefix=spu- \
             --with-sysroot=$SYSROOT_PREFIX \
             --disable-werror \
             --disable-multilib \
             --enable-64-bit-bfd \
             --disable-nls
make
