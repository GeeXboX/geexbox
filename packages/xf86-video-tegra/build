#!/bin/sh

. config/options

require_glibc $1

cd $BUILD/$1*

# X.org driver
mkdir -p .install/$XORG_PATH_MODULES/drivers
cp -P ./$XORG_PATH_MODULES/drivers/tegra_drv.so .install/$XORG_PATH_MODULES/drivers

# System Libs
mkdir -p .install/usr/lib
cp -P usr/lib/*.so .install/usr/lib

# Daemon
mkdir -p .install/usr/sbin
cp -P usr/sbin/nvrm_daemon .install/usr/sbin

# Support files
mkdir -p .install/etc/avp
cp -P etc/avp/* .install/etc/avp

# Testing utilities
if pkg_uses $1 devtools; then
  mkdir -p .install/usr/lib/tegra
  cp -P home/ubuntu/* .install/usr/lib/tegra
fi

exit 0
