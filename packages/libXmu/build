#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xorg-protocols

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --enable-static \
            --disable-IPv6
cd src
# Work around to only build/install libXmuu and not libXmu
make libXmuu.la
cp .libs/*.a $LIB_PREFIX/lib
cp .libs/*.la* $LIB_PREFIX/lib
cp .libs/*.so* $LIB_PREFIX/lib
cp -rf ../include/X11/Xmu $LIB_PREFIX/include/X11
cp ../xmuu.pc $LIB_PREFIX/lib/pkgconfig
