PKG_NAME=wine-gecko
PKG_VERSION=1.8
PKG_URL="$SFNET_SRCS/wine/Wine%20Gecko/${PKG_VERSION}/wine_gecko-${PKG_VERSION}-x86.msi"
PKG_REV=1
PKG_RUN_DEPENDS="wine"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=utils
PKG_SHORTDESC="Wine's custom Mozilla's Gecko Layout Engine"
PKG_LONGDESC="Wine implements its own version of Internet Explorer. The implementation is based on a custom version of Mozilla's Gecko Layout Engine. When your application tries to display a web page, it loads Wine's custom Gecko."
