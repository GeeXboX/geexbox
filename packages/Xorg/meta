PKG_NAME=Xorg
PKG_VERSION=2.0
PKG_REV=1
PKG_DEPENDS="xorg-fonts xorg-server xorg-drivers xrandr xkbcomp xkeyboard-config setxkbmap"
[ "$DEVTOOLS" = "yes" ] && PKG_DEPENDS="$PKG_DEPENDS xvinfo"
PKG_KCONFIG_DEPENDS="select PKG_xvinfo if GX_DEVTOOLS"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORT_DESC="X.Org X Window System"
PKG_LONG_DESC="This metapackage provides the components for a standalone workstation running the X Window System. It provides the X libraries, an X server, a set of fonts, and a group of basic X clients and utilities."
