#!/bin/sh

. config/options

export INSTALLX="$INSTALL/X"

$SCRIPTS/install xorg-libs
$SCRIPTS/install xorg-fonts
$SCRIPTS/install xorg-server
$SCRIPTS/install xorg-drivers
$SCRIPTS/install xrandr
$SCRIPTS/install xkbcomp
$SCRIPTS/install xkeyboard-config
$SCRIPTS/install xresprobe
[ "$DEVTOOLS" = yes ] && $SCRIPTS/install intel-gpu-tools
$SCRIPTS/install read-edid

mkdir -p $INSTALL/usr/bin
cp $PACKAGES/$1/scripts/xorgconfig $INSTALL/usr/bin

mkdir -p $INSTALL/etc/X11
cp $PACKAGES/$1/config/X.cfg.sample $INSTALL/etc/X11
cp $PACKAGES/$1/config/xorg.default $INSTALL/etc/X11

exit 0
