#!/bin/sh

. config/options

$SCRIPTS/install xorg-libs
$SCRIPTS/install xorg-fonts
$SCRIPTS/install xorg-server
$SCRIPTS/install xorg-drivers
$SCRIPTS/install xinit
$SCRIPTS/install xwininfo

mkdir -p $INSTALL/usr/bin
cp $PACKAGES/$1/scripts/xorgconfig $INSTALL/usr/bin

mkdir -p $INSTALL/etc/X11
cp $PACKAGES/$1/config/X.cfg $INSTALL/etc/X11
