#!/bin/sh

. config/options

export INSTALLX="$INSTALL/X"

$SCRIPTS/install xorg-libs
$SCRIPTS/install xorg-fonts
$SCRIPTS/install xorg-server
$SCRIPTS/install xorg-drivers
$SCRIPTS/install xrandr
$SCRIPTS/install xresprobe
$SCRIPTS/install read-edid

mkdir -p $INSTALLX/usr/bin
cp $PACKAGES/$1/scripts/xorgconfig $INSTALLX/usr/bin

mkdir -p $INSTALLX/etc/X11
cp $PACKAGES/$1/config/X.cfg.sample $INSTALLX/etc/X11
cp $PACKAGES/$1/config/xorg.default $INSTALLX/etc/X11
cp $PACKAGES/$1/config/drivers $INSTALLX/etc/X11
[ "$NVIDIA" = yes ] && echo "nvidia" >> $INSTALLX/etc/X11/drivers

exit 0
