PKG_VERSION=2.4.2
PKG_URL="http://ftp.gnu.org/gnu/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain"
PKG_SECTION=libs
PKG_SHORTDESC="GNU libtool is a generic library support script"
PKG_LONGDESC="GNU libtool is a generic library support script. Libtool hides the complexity of using shared libraries behind a consistent, portable interface."
