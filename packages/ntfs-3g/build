#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build fuse
$SCRIPTS/build libiconv

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --enable-static \
            --disable-dependency-tracking \
            --with-fuse=external
make 
