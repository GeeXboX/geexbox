#!/bin/sh

. config/options

$SCRIPTS/build toolchain

configure() {
  setup_toolchain $1
  rm -rf $1
  mkdir -p $1
  cd $1
  HOST=`eval echo \\\$$(echo ${1}_NAME | tr '[a-z]' '[A-Z]')`
  ../configure --host=$HOST \
               --build=$HOST_NAME
}

cd $BUILD/$1*

configure host
make depmod

cd ..

configure target
make modprobe
