#!/bin/sh

. config/options

$SCRIPTS/build toolchain

setup_toolchain host

cd $BUILD/$1*
./configure --host=$HOST_NAME \
            --build=$HOST_NAME
make depmod

mv depmod $ROOT/$TOOLCHAIN/bin

make clean

setup_toolchain target

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME
make modprobe

mv $ROOT/$TOOLCHAIN/bin/depmod .
