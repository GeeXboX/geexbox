#!/bin/sh

. config/options

case "$2" in
  modules-ramfs)
    mkdir -p $INSTALL/sbin
    cp $BUILD/$1*/target/modprobe $INSTALL/sbin
    cp $BUILD/$1*/target/depmod $INSTALL/sbin
    ;;

  config)
    mkdir -p $INSTALL/etc/modprobe.d
    cp $PACKAGES/$1/config/options $INSTALL/etc/modprobe.d
    cp $PACKAGES/$1/config/blacklist $INSTALL/etc/modprobe.d
    ;;
esac
