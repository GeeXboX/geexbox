#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xorg-protocols

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-malloc0returnsnull \
            --enable-shared \
            --enable-static
make
$STRIP src/.libs/libXinerama.so*
make install
