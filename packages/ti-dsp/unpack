#!/bin/sh

. config/options

TI_PKG="DSPbinaries-3.09-Linux-x86-Install"
[ -d $BUILD/$1 ] && rm -rf $BUILD/$1

mkdir -p $BUILD/$1

cat > $BUILD/$1/response <<EOF
InstallDir: $ROOT/$BUILD/$1
InstallMode: Silent
InstallType: Typical
ProgramFolderName: DSPbinaries
SelectedComponents: Default Component
ViewReadme: No
EOF

chmod +x $SOURCES/$1/$TI_PKG
./$SOURCES/$1/$TI_PKG --response-file $BUILD/$1/response
