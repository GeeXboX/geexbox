#!/bin/sh

. config/options

require_glibc $1

mkdir -p $INSTALL/usr/lib $INSTALL/usr/sbin
cp -PR $BUILD/$1*/etc $INSTALL
cp -P $BUILD/$1*/usr/sbin/nvrm_daemon $INSTALL/usr/sbin
cp -P $BUILD/$1*/usr/lib/libnv*.so $INSTALL/usr/lib
cp -P $BUILD/$1*/usr/lib/libcgdrv.so $INSTALL/usr/lib

if pkg_uses $1 devtools; then
  cp -P $BUILD/$1*/usr/lib/libPerfHUD*.so $INSTALL/usr/lib
  cp -PR $BUILD/$1*/usr/lib/tegra $INSTALL/usr/lib
  cp -PR $BUILD/$1*/usr/bin $INSTALL/usr
fi

exit 0
