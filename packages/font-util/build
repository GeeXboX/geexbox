#!/bin/sh

. config/options

$SCRIPTS/build toolchain

setup_toolchain host

cd $BUILD/$1*
./configure --host=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --enable-static \
            --with-mapdir=$XORG_PATH_MAPS
make
make install-pkgconfigDATA
make install-binPROGRAMS prefix=$ROOT/$TOOLCHAIN
