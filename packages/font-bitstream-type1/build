#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --enable-static \
            --with-fontdir=$XORG_PATH_FONTS
make
mkdir -p fonts
cp *.afm fonts
cp *.pfb fonts
cd fonts
mkfontdir
