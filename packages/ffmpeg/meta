PKG_NAME=ffmpeg
PKG_URL="GEEXBOX_SRCS/ffmpeg-r23630.tar.bz2"
PKG_VERSION=r21465
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain faad2 zlib libvpx"
PKG_RUN_DEPENDS="$TARGET_LIBC faad2 zlib libvpx"
if [ "$VDPAU" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libvdpau"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libvdpau"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="audio and video library"
PKG_LONG_DESC="FFmpeg is a complete, cross-platform solution to record, convert and stream audio and video. It includes libavcodec - the leading audio/video codec library."
