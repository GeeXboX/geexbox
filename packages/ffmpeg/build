#!/bin/sh

. config/options

$SCRIPTS/build libvpx
if [ "$VDPAU" = yes ]; then
  VDPAU_CONFIG="--enable-vdpau"
else
  VDPAU_CONFIG="--disable-vdpau"
fi

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug --disable-stripping"
else
  DEBUG_CONFIG="--disable-debug --enable-stripping"
fi

if [ "$OPTIMIZATIONS" = size ]; then
  OPTIM_CONFIG="--enable-small"
else
  OPTIM_CONFIG="--disable-small"
fi

cd $BUILD/$1*
./configure --enable-cross-compile \
            --cross-prefix=$TARGET_PREFIX \
            --arch=$TARGET_ARCH \
            --prefix=/usr \
            --target-os=linux \
            --extra-cflags="$CFLAGS" \
            --cpu=$TARGET_CPU \
            --disable-static \
            --enable-shared \
            --enable-gpl \
            --disable-ffserver \
            --disable-ffmpeg \
            --enable-postproc \
            --disable-avfilter \
            --disable-avfilter-lavf \
            --enable-pthreads \
            --disable-x11grab \
            $OPTIM_CONFIG \
            --enable-encoders \
            --enable-decoders \
            --enable-muxers \
            --enable-demuxers \
            --enable-parsers \
            --enable-bsfs \
            --enable-protocols \
            --disable-indevs \
            --disable-outdevs \
            --disable-devices \
            --enable-filters \
            --enable-zlib \
            --enable-libfaad \
            --disable-ffplay \
            --enable-libvpx \
            $DEBUG_CONFIG \
            $VDPAU_CONFIG \

make
make_install
