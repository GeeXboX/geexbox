#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib
cp -P $BUILD/$1*/libavcodec/libavcodec.so* $INSTALL/usr/lib
cp -P $BUILD/$1*/libavformat/libavformat.so* $INSTALL/usr/lib
cp -P $BUILD/$1*/libavutil/libavutil.so* $INSTALL/usr/lib
cp -P $BUILD/$1*/libswscale/libswscale.so.* $INSTALL/usr/lib
cp -P $BUILD/$1*/libpostproc/libpostproc.so.* $INSTALL/usr/lib

if [ "$DEVTOOLS" = "yes" ]; then
  mkdir -p $INSTALL/usr/bin
  cp -P $BUILD/$1*/ffmpeg $INSTALL/usr/bin
  cp -P $BUILD/$1*/libavdevice/libavdevice.so.* $INSTALL/usr/lib
fi
