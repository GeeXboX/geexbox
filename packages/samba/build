#!/bin/sh

. config/options

export samba_cv_HAVE_GETTIMEOFDAY_TZ=yes
export samba_cv_USE_SETEUID=yes
export samba_cv_HAVE_IFACE_IFCONF=yes
export SMB_BUILD_CC_NEGATIVE_ENUM_VALUES=no
export samba_cv_have_longlong=yes

cd $BUILD/$1*/source
do_configure \
            --disable-pie \
            --disable-cups \
            --without-smbmount \
            --with-cifsmount \
            --without-ldap \
            --without-winbind \
            --with-included-popt \
            --with-libsmbclient \
            --without-ads \
            --without-quotas \
            --without-sys-quotas \
            --with-syslog \
            --with-libiconv=$LIB_PREFIX \
            --localstatedir=/var \
            --with-configdir=/etc \
            --with-privatedir=/etc \

make include/proto.h
make

make_install
rm -rf ../.install
mv .install ..
