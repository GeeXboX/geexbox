#!/bin/sh

. config/options

$SCRIPTS/install libiconv

SMB=`ls -d $BUILD/$1*/source`

if [ "$LIBSTRIP" = yes ]; then
  SO=$SMB/libsmbclient.so.0
  libstrip $SO $SMB/bin/libsmbclient.a "$SMB/bin/mount.cifs $SMB/bin/smbtree"
else
  cp $SMB/bin/libsmbclient.so $SMB/bin/libsmbclient.so.0
  SO=$SMB/bin/libsmbclient.so.0
fi

mkdir -p $INSTALL/usr/lib
cp $SO $INSTALL/usr/lib

mkdir -p $INSTALL/usr/bin
cp $BUILD/$1*/source/bin/mount.cifs $INSTALL/usr/bin
cp $BUILD/$1*/source/bin/smbtree $INSTALL/usr/bin
cp $PACKAGES/$1/scripts/automount_samba $INSTALL/usr/bin
