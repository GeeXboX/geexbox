#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-static=yes \
            --enable-shared=no \
            --enable-gettext=no \
            --enable-lib64=no \

make
make install
cp -f libattr/.libs/libattr.a $LIB_PREFIX/lib/
cp -f libattr/.libs/libattr.la $LIB_PREFIX/lib/
mkdir -p $LIB_PREFIX/include/attr
cp -af include/* $LIB_PREFIX/include/attr
