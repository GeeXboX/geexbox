PKG_NAME=libvdpau
PKG_URL="http://people.freedesktop.org/~aplattner/vdpau/libvdpau-0.4.tar.gz"
PKG_VERSION=0.4
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11 libXext dri2proto"
PKG_DEPENDS="$TARGET_LIBC libX11 libXext"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="Video Decode and Presentation API for Unix (libraries)"
PKG_LONG_DESC="VDPAU (Video Decode and Presentation API for Unix) is an open source library (libvdpau) and API designed by NVIDIA originally for its GeForce 8 series and later GPU hardware, targeted at the X Window System on Unix operating-systems (including Linux, FreeBSD, and Solaris). This VDPAU API allows video programs to offload portions of the video decoding process and video post-processing to the GPU video-hardware. This package contains the VDPAU wrapper and trace libraries."
