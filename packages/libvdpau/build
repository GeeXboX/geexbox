#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xorg-libs

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --disable-documentation

make
strip_libs src
strip_libs trace
make install
