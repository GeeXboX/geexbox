#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib
cp $BUILD/$1*/src/lib/.libs/libImlib2.so $INSTALL/usr/lib

mkdir -p $INSTALL/usr/lib/imlib2/loaders
cp $BUILD/$1*/src/modules/loaders/.libs/*.so $INSTALL/usr/lib/imlib2/loaders

mkdir -p $INSTALL/usr/lib/imlib2/filters
cp $BUILD/$1*/src/modules/filters/.libs/*.so $INSTALL/usr/lib/imlib2/filters
