PKG_NAME=imlib2
PKG_URL_REV=`( get_meta EFL; echo $PKG_URL_REV )`
PKG_VERSION=1.4+${PKG_URL_REV}
PKG_URL_PROTO=svn
PKG_URL="http://svn.enlightenment.org/svn/e/trunk/${PKG_NAME}"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="freetype libpng libjpeg-turbo tiff zlib bzip2"
PKG_USE="xorg devtools"
PKG_DEPENDS_xorg="libX11 libXext"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="imlib2 graphics library"
PKG_LONGDESC="Imlib2 is a graphics library for fast file loading, saving, rendering and manipulation"
