#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libpng
$SCRIPTS/build jpeg
$SCRIPTS/build libungif
$SCRIPTS/build tiff
$SCRIPTS/build zlib

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --disable-amd64 \
            --without-x \
            --with-jpeg \
            --with-png \
            --with-tiff \
            --with-gif \
            --with-zlib \
            --without-bzip2 \
            --without-id3
make
make install
