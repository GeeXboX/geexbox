#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libpng
$SCRIPTS/build jpeg
$SCRIPTS/build libungif
$SCRIPTS/build tiff
$SCRIPTS/build zlib
$SCRIPTS/build freetype

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --with-freetype-config=$LIB_PREFIX/bin/freetype-config \
            --disable-static \
            --enable-shared \
            --disable-amd64 \
            --without-x \
            --with-jpeg \
            --with-png \
            --with-tiff \
            --with-gif \
            --with-zlib \
            --without-bzip2 \
            --without-id3

sed -i 's%#define PACKAGE_LIB_DIR.*%#define PACKAGE_LIB_DIR "/usr/lib"%' config.h

make
make install
