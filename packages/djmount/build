#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build fuse
$SCRIPTS/build talloc
$SCRIPTS/build libupnp

export CFLAGS="$CFLAGS -D_GNU_SOURCE"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --with-external-talloc \
            --with-external-libupnp \
            --without-libiconv-prefix \
            --with-fuse-prefix=$LIB_PREFIX \
            --with-talloc-prefix=$LIB_PREFIX \
            --with-libupnp-prefix=$LIB_PREFIX \
            --disable-charset \
            --disable-debug
make
