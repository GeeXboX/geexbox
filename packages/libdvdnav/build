#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libdvdread

cd $BUILD/$1*
./configure2 --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=$LIB_PREFIX \
             --disable-static \
             --enable-shared \
             --disable-debug \
             --disable-strip \
             --cc=$CC \
             --with-dvdread-config="$LIB_PREFIX/bin/dvdread-config" \

make
strip_libs obj
make install
