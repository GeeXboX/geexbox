#!/bin/sh

. config/options

cd $BUILD/$1*
make glew.pc GLEW_DEST="$LIB_PREFIX"
make lib/libGLEW.a \
  CC="$TARGET_CC" \
  AR="$TARGET_AR" \
  GLEW_DEST="$LIB_PREFIX" \
  CFLAGS="$TARGET_CFLAGS -Iinclude"

mkdir -p .install/usr/lib/pkgconfig .install/usr/include/GL
cp -f lib/libGLEW.a .install/usr/lib
cp -f glew.pc .install/usr/lib/pkgconfig
cp -f include/GL/* .install/usr/include/GL

