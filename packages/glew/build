#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xorg-libs

cd $BUILD/$1*
make glew.pc GLEW_DEST="$LIB_PREFIX"
make lib/libGLEW.a CC="$TARGET_CC" AR="$TARGET_AR" GLEW_DEST="$LIB_PREFIX" 
cp -f lib/libGLEW.a $LIB_PREFIX/lib
cp -f glew.pc $LIB_PREFIX/lib/pkgconfig
cp -f include/GL/* $LIB_PREFIX/include/GL
