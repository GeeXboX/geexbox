#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build curl

cd $BUILD/$1*

./configure --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=$LIB_PREFIX \
             --disable-dependency-tracking \
             --enable-static \
             --disable-shared \
             --enable-curl \
             --disable-ssl-curl \
             --enable-sha256 \
             --disable-pathfinder \
             --disable-openssl \
             --disable-gpg \
             --with-opkglibdir=/var/lib \
             --with-opkgetcdir=/etc 

make
