PKG_NAME=gssdp
PKG_VERSION=0.12.1
PKG_URL="ftp://ftp.gnome.org/pub/gnome/sources/gssdp/0.12/gssdp-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libsoup"
PKG_RUN_DEPENDS="$TARGET_LIBC libsoup"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="GObject-based library for SSDP"
PKG_LONGDESC="A GObject-based API for doing SSDP (Simple Service Discovery Protocol) transparently."
