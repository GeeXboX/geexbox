#!/bin/sh

. config/options

cd $BUILD/$1*
do_configure host \
                  --disable-bmp \
                  --disable-gif \
                  --enable-jpg \
                  --disable-jpg-shared \
                  --disable-lbm \
                  --disable-pcx \
                  --enable-png \
                  --disable-png-shared \
                  --disable-pnm \
                  --disable-tga \
                  --disable-tif \
                  --disable-tif-shared \
                  --disable-webp \
                  --disable-webp-shared \
                  --disable-xcf \
                  --disable-xpm \
                  --disable-xv \
                  --with-sdl-prefix=$ROOT/$TOOLCHAIN \

make
make_install toolchain
