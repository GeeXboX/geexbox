PKG_PARENT=SDL-image
PKG_NAME=${PKG_PARENT}-host
PKG_NO_PARENT_DEPENDS=yes
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain SDL-host zlib libjpeg-turbo libpng"
PKG_SHORTDESC="image loading library for Simple DirectMedia Layer 1.2"
PKG_LONGDESC="This is a simple library to load images of various formats as SDL surfaces. This library currently supports BMP, PPM, PCX, GIF, JPEG, PNG, TIFF, and XPM formats."
