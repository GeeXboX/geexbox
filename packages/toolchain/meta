PKG_NAME=toolchain
PKG_VERSION=2.0
PKG_REV=1
PKG_BUILD_DEPENDS="configtools make ccache sed pkg-config"
case "$TOOLCHAIN_TYPE" in
  geexbox)
    PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS binutils gcc-core $TARGET_LIBC gcc-final"
    ;;
  codesourcery)
    PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS codesourcery-toolchain"
    ;;
esac
