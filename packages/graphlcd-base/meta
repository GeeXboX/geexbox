PKG_NAME=graphlcd-base
PKG_URL="http://download.berlios.de/graphlcd/graphlcd-base-0.1.5.tgz"
PKG_VERSION=0.1.5
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain freetype"
PKG_DEPENDS="$TARGET_LIBC freetype"
if [ "$TARGET_LIBC" = uClibc ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libiconv"
  PKG_DEPENDS="$PKG_DEPENDS libiconv"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="graphical LCD library"
PKG_LONG_DESC="The GraphLCD base is a project to support graphical LC displays. It is mainly used by the graphlcd plugin for the Video Disc Recorder to display its information."
