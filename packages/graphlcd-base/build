#!/bin/sh

. config/options

$SCRIPTS/build freetype
[ "$TARGET_LIBC" = "uClibc" ] && $SCRIPTS/build libiconv

cd $BUILD/$1*
cat > Make.config <<EOF
DESTDIR = $LIB_PREFIX 
BINDIR = $LIB_PREFIX/bin
LIBDIR = $LIB_PREFIX/lib
INCDIR = $LIB_PREFIX/include
MANDIR = $LIB_PREFIX/man
INCLUDES += -I`ls -d ../freetype-*/include`
DEFINES += -D_GNU_SOURCE
HAVE_FREETYPE2=1
EOF
[ "$TARGET_LIBC" = "uClibc" ] && echo 'LIBS += -liconv' >>Make.config
make
make install
