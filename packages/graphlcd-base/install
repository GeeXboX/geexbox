#!/bin/sh

. config/options

$SCRIPTS/install freetype
[ "$TARGET_LIBC" = "uClibc" ] && $SCRIPTS/install libiconv

mkdir -p $INSTALL/usr/lib
cp -P $BUILD/$1*/glcdgraphics/*.so* $INSTALL/usr/lib
cp -P $BUILD/$1*/glcddrivers/*.so* $INSTALL/usr/lib

mkdir -p $INSTALL/etc
cp $BUILD/$1*/graphlcd.conf $INSTALL/etc
