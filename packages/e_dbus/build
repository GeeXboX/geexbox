#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build eina
$SCRIPTS/build evas
$SCRIPTS/build ecore
$SCRIPTS/build dbus

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --disable-ehal \

make
rm -f src/lib/notification/.libs/libenotify*.so*T
strip_libs src
make install
