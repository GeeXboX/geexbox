#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build eina
$SCRIPTS/build evas
$SCRIPTS/build ecore
$SCRIPTS/build dbus

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \

make
$STRIP src/lib/hal/.libs/libehal.so
$STRIP src/lib/notification/.libs/libenotify.so
$STRIP src/lib/nm/.libs/libenm.so
$STRIP src/lib/dbus/.libs/libedbus.so
make install
