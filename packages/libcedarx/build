#!/bin/sh

. config/options

cd $BUILD/$1*

mkdir -p .install/lib .install/include

if [ "$ARM_HARDFLOAT_ABI" = yes ] ; then
  cd libcedarv/linux-armhf
else
  cd libcedarv/linux-armel
fi

export CROSS_COMPILE=$TARGET_PREFIX
make

cp libvecore/libvecore.so ../../.install/lib/
cp libcedarv/libcedarv.h ../../.install/include/
cp libvecore/*.h ../../.install/include/
cp adapter/*.h ../../.install/include/
cp *.h ../../.install/include/
cp libcedarv.a ../../.install/lib/

cd -
