#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure2 --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=$LIB_PREFIX \
             --disable-static \
             --enable-shared \
             --disable-debug \
             --cc=$CC \

make
make install
cp obj/dvdread-config $ROOT/$TOOLCHAIN/bin
