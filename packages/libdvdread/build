#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libdvdcss

cd $BUILD/$1*
./configure2 --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=$LIB_PREFIX \
             --disable-static \
             --enable-shared \
             --disable-debug \
             --disable-strip \
             --cc=$CC \

make
$STRIP obj/$1.so
make install
