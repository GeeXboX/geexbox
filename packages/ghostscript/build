#!/bin/sh

. config/options


get_meta $1

cd $PKG_BUILD_DIR

mkdir -p obj/aux
for i in genarch genconf echogs gendev genht mkromfs; do
  ln -sf $ROOT/$TOOLCHAIN/bin/$i obj/aux/$i
done

cp $ROOT/$PACKAGES/$1/config/$TARGET_ARCH-objarch obj/arch.h


do_autoconf || true
export TARGET_CFLAGS="$TARGET_CFLAGS -DHAVE_SYS_TIME_H=1"
do_configure --without-jbig2dec \
             --without-x \
             --with-system-libtiff \
             --without-jasper \
             --with-install-cups \
             --without-libidn


make
make_install

if [ -d .install/usr/lib64 ] ; then 
  mv .install/usr/lib64 .install/usr/lib
fi
