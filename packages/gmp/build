#!/bin/sh

. config/options

$SCRIPTS/install ccache

setup_toolchain host

CFG_CXX="--disable-cxx"
[ "$TOOLCHAIN_CXX" = yes ] && CFG_CXX="--enable-cxx"

cd $BUILD/$1*
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --disable-shared \
             --enable-static \
             $CFG_CXX \

make
make check
