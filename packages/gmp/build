#!/bin/sh

. config/options
get_meta $1

export CFLAGS="$CFLAGS -fPIC"
export CPPFLAGS="$CPPFLAGS -fexceptions"

cd $BUILD/${PKG_NAME}-${PKG_VERSION}

mkdir -p objdir-host
cd objdir-host
do_configure host \
	--enable-mpbsd \
	--enable-cxx \

make
#make check
make_install toolchain
cd ..

mkdir -p objdir-target
cd objdir-target
do_configure target \
	--enable-mpbsd \
	--enable-cxx \


make
#make check
make_install

