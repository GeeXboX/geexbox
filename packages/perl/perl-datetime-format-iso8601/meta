PKG_NAME=perl-datetime-format-iso8601
PKG_VERSION=0.08
PKG_URL="$CPAN_SRCS/J/JH/JHOBLITT/DateTime-Format-ISO8601-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="perl"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Parse and format strp and strf time patterns"
PKG_LONGDESC="This module implements most of strptime, the POSIX function that is the reverse of strftime, for DateTime. While strftime takes a DateTime and a pattern and returns a string, strptime takes a string and a pattern and returns the DateTime object associated."
