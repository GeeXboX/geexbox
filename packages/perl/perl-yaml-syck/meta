PKG_NAME=perl-yaml-syck
PKG_VERSION=1.17
PKG_URL="$CPAN_SRCS/A/AV/AVAR/YAML-Syck-${PKG_VERSION}.tar.gz"
PKG_REV="2"
PKG_RUN_DEPENDS="$TARGET_LIBC"
