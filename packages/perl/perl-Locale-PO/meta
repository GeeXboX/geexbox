PKG_NAME=perl-Locale-PO
PKG_VERSION=0.17
PKG_URL="$CPAN_SRCS/A/AL/ALANSZ/Locale-PO-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="perl"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Locale::PO - Perl module for manipulating .po entries from GNU gettext"
PKG_LONGDESC="This module simplifies management of GNU gettext .po files and is an alternative to using emacs po-mode. It provides an object-oriented interface in which each entry in a .po file is a Locale::PO object."
