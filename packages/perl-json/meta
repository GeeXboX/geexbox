PKG_NAME=perl-json
PKG_VERSION=2.53
PKG_URL="$CPAN_SRCS/M/MA/MAKAMAKA/JSON-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="JSON::PP - JSON::XS compatible pure-Perl module"
PKG_LONGDESC="This module is JSON::XS compatible pure Perl module. JSON::XS is the fastest and most proper JSON module on CPAN. It is written by Marc Lehmann in C, so must be compiled and installed in the used environment. JSON::PP is a pure-Perl module and has compatibility to JSON::XS."
