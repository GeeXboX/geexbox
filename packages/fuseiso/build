#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build fuse
$SCRIPTS/build GLib

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --enable-static \
            LIBS="$LIBS -lpthread -ldl -lrt"
make 
