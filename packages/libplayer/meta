PKG_NAME=libplayer
PKG_VERSION=r1475
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11 libvdpau"
PKG_DEPENDS="$TARGET_LIBC libX11 libvdpau"
[ "$LIBPLAYER_MPLAYER" = yes ] && PKG_DEPENDS="$PKG_DEPENDS MPlayer"
if [ "$LIBPLAYER_XINE" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS xine-lib"
  PKG_DEPENDS="$PKG_DEPENDS xine-lib"
fi
if [ "$LIBPLAYER_GSTREAMER" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS GStreamer"
  PKG_DEPENDS="$PKG_DEPENDS GStreamer"
fi
PKG_KCONFIG_EXTRA="config GX_LIBPLAYER_MPLAYER
  bool \"Enable MPlayer backend\"
  depends on PKG_libplayer
  select PKG_MPlayer
  default y

config GX_LIBPLAYER_XINE
  bool \"Enable Xine backend\"
  depends on PKG_libplayer
  select PKG_xine-lib
  default n

config GX_LIBPLAYER_GSTREAMER
  bool \"Enable GStreamer backend\"
  depends on PKG_libplayer
  select PKG_GStreamer
  default n
"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="a multimedia A/V abstraction layer API"
PKG_LONG_DESC="libplayer provides a generic A/V API that relies on various multimedia player for Linux systems. It currently supports MPlayer and xine. Its main goal is to provide an unique API that player frontends can use to control any kind of multimedia player underneath."
