#!/bin/sh

. config/options

$SCRIPTS/install MPlayer
$SCRIPTS/install xine-lib
[ "$GSTREAMER" = yes ] && $SCRIPTS/install GStreamer
$SCRIPTS/install libX11
$SCRIPTS/install libvdpau

if [ "$DEVTOOLS" = yes ]; then
  mkdir -p $INSTALL/usr/bin
  cp $BUILD/$1*/libplayer-test $INSTALL/usr/bin
  cp $BUILD/$1*/libplayer-testvdr $INSTALL/usr/bin
fi
