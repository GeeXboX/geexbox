#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build MPlayer
$SCRIPTS/build xine-lib

cd $BUILD/$1*
./configure --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --enable-mplayer \
            --enable-xine \
            --disable-vlc \
            --disable-gstreamer \
            --disable-debug \
            --cross-compile \
            --disable-doc \
            --enable-logcolor \

make -C src
make -C src install
cp -f libplayer.pc $LIB_PREFIX/lib/pkgconfig/
