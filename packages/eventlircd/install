#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

do_install etc/eventlircd.d
do_install lib/udev
do_install usr/sbin
echo $INSTALL

cp $ROOT/$PACKAGES/$1/config/eventlircd.conf $INSTALL/etc
cp $ROOT/$PACKAGES/$1/config/evmap/* $INSTALL/etc/eventlircd.d

mkdir -p $INSTALL/usr/bin
cp $ROOT/$PACKAGES/$1/scripts/* $INSTALL/usr/bin

# ir-kbd-i2c applies to PC hardware only
if [ "$TARGET_ARCH" != i386 ] && [ "$TARGET_ARCH" != x86_64 ] ; then 
  sed -i -e "s/ir-kbd-i2c/#ir-kbd-i2c/g" $INSTALL/usr/lib/modules-load.d/eventlircd-mod.conf
fi
