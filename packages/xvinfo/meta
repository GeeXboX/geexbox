PKG_NAME=xvinfo
PKG_URL="http://xorg.freedesktop.org/releases/individual/app/xvinfo-1.1.0.tar.bz2"
PKG_VERSION=1.1.0
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11 libXv"
PKG_DEPENDS="$TARGET_LIBC libX11 libXv"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORT_DESC="print out X-Video extension adaptor information"
PKG_LONG_DESC="xvinfo  prints  out  the  capabilities of any video adaptors associated with the display that are accessible through the X-Video extension."
