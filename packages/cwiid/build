#!/bin/sh

. config/options

$SCRIPTS/build bluez

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-static \
            --disable-shared \
            --without-python \
            --with-cwiid-config-dir=/etc/cwiid \
            --with-cwiid-plugins-dir=/usr/lib/cwiid/plugins
make
