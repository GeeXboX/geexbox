#!/bin/sh

. config/options

$SCRIPTS/install bluez

mkdir -p $INSTALL/usr/bin
cp $BUILD/$1*/wminput/wminput $INSTALL/usr/bin

mkdir -p $INSTALL/usr/lib
cp -P $BUILD/$1*/libcwiid/libcwiid.so* $INSTALL/usr/lib

mkdir -p $INSTALL/usr/lib/cwiid/plugins
for plugin in acc ir_ptr led nunchuk_acc nunchuk_stick2btn; do
  cp $BUILD/$1*/wminput/plugins/$plugin/$plugin.so \
    $INSTALL/usr/lib/cwiid/plugins
done

mkdir -p $INSTALL/etc
cp $PACKAGES/$1/config/wiimote $INSTALL/etc

mkdir -p $INSTALL/etc/cwiid/wminput
cp $PACKAGES/$1/config/enna $INSTALL/etc/cwiid/wminput

