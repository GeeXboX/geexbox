PKG_NAME=libnice
PKG_VERSION=0.0.13
PKG_URL="http://nice.freedesktop.org/releases/libnice-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC GLib gstreamer gst-plugins-base gupnp gupnp-igd"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="GLib ICE implementation"
PKG_LONGDESC="Libnice is an implementation of the IETF's Interactice Connectivity Establishment (ICE) standard (RFC 5245) and the Session Traversal Utilities for NAT (STUN) standard (RFC 5389)."
