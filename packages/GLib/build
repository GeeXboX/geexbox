#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libiconv

ICONV_DIR=`ls -d $ROOT/$BUILD/libiconv*/objdir`
export CFLAGS="-I$ICONV_DIR/include $CFLAGS"
export LDFLAGS="-L$ICONV_DIR/lib $LDFLAGS"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-largefiles \
            --enable-debug=no \
            --disable-man \
            --disable-rebuilds \
            --disable-gtk-doc
make
make install
