PKG_NAME=GLib
PKG_VERSION=2.22.4
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain GLib-host"
[ "$TARGET_LIBC" = "uClibc" ] && \
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libiconv"
PKG_PRIORITY=required
PKG_SECTION=libs
PKG_SHORTDESC="The GLib library of C routines"
PKG_LONGDESC=" GLib is a library containing many useful C routines for things such as trees, hashes, lists, and strings.  It is a useful general-purpose C library used by many projects. This package contains the shared libraries."
