#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-cxx \
            --without-cd-drive \
            --without-cd-info \
            --with-cd-paranoia \
            --without-cdda_player \
            --without-cd-read \
            --without-iso-info \
            --without-iso-read \
            --without-versioned-libs \

make
make_install
