PKG_NAME=gcc-final
PKG_VERSION=`( get_meta gcc-$TOOLCHAIN_TYPE; echo $PKG_VERSION )`
PKG_REV=1
PKG_DEV_DEPENDS="ccache make sed binutils $TARGET_LIBC"
PKG_BUILD_DEPENDS="$PKG_DEV_DEPENDS gmp-host mpfr ppl cloog libelf mpc linux-headers gperf"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_PRIORITY=required
PKG_SECTION=system
PKG_SHORTDESC="GCC support library"
PKG_LONGDESC="Shared version of the support library, a library of internal subroutines that GCC uses to overcome shortcomings of particular machines, or special needs for some languages."
case "$TOOLCHAIN_FLAVOR" in
  next)
    PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS isl"
esac
