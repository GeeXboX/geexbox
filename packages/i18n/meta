PKG_NAME=i18n
PKG_VERSION=2.0
PKG_REV=1
# TODO reinstate i18n-fonts and i18n-texts in some way
PKG_RUN_DEPENDS="i18n-keymaps"
[ "$TARGET_LIBC" = "uClibc" ] && PKG_RUN_DEPENDS="$PKG_DEPENDS libiconv"
[ "$TARGET_LIBC" = glibc -o "$TARGET_LIBC" = eglibc ] && \
  [ -n "$DEFAULT_LOCALE" ] && PKG_RUN_DEPENDS="$PKG_DEPENDS i18n-locales"
PKG_PRIORITY=standard
PKG_SECTION=libs
PKG_SHORTDESC="GeeXboX i18n support"
PKG_LONGDESC="This package contains several scripts and support files used to implement internazionalization (i18n) in GeeXboX"
