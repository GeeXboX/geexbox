PKG_NAME=i18n
PKG_VERSION=2.0
PKG_REV=1
# TODO reinstate i18n-fonts and i18n-texts in some way
PKG_DEPENDS="i18n-keymaps"
[ "$TARGET_LIBC" = "uClibc" ] && PKG_DEPENDS="$PKG_DEPENDS libiconv"
PKG_KCONFIG_DEPENDS="select PKG_libiconv if TARGET_LIBC_UCLIBC"
PKG_PRIORITY=standard
PKG_SECTION=libs
PKG_SHORTDESC="GeeXboX i18n support"
PKG_LONGDESC="This package contains several scripts and support files used to implement internazionalization (i18n) in GeeXboX"
