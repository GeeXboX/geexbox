#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --enable-music-cmd \
            --enable-music-wave \
            --disable-music-libmikmod \
            --disable-music-mod \
            --disable-music-midi \
            --disable-music-timidity-midi \
            --enable-music-native-midi \
            --enable-music-native-midi-gpl \
            --disable-music-ogg \
            --disable-music-ogg-shared \
            --disable-music-mp3 \
            --disable-smpegtest \
            --enable-music-mp3-shared \

make
make_install
