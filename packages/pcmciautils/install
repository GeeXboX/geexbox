#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build linux
$SCRIPTS/build sysfsutils

mkdir -p $INSTALL/etc/pcmcia $INSTALL/etc/udev/rules.d $INSTALL/sbin

cp $PACKAGES/$1/config/70_pcmcia.rules $INSTALL/etc/udev/rules.d
cp $BUILD/$1*/config/config.opts $INSTALL/etc/pcmcia
cp $BUILD/$1*/pccardctl \
   $BUILD/$1*/pcmcia-socket-startup \
   $BUILD/$1*/pcmcia-check-broken-cis \
   $INSTALL/sbin
