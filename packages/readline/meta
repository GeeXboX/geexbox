PKG_NAME=readline
PKG_VERSION=6.2
PKG_URL="ftp://ftp.gnu.org/gnu/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="ncurses"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="GNU readline and history libraries, run-time libraries"
PKG_LONGDESC="The GNU readline library aids in the consistency of user interface across discrete programs that need to provide a command line interface"
