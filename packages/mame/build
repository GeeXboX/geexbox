#!/bin/sh

. config/options

require_cxx $1

$SCRIPTS/build toolchain
$SCRIPTS/build SDL

cd $BUILD/$1*

if [ "$TARGET_ARCH" = x86_64 ]; then
  ARCH_OPTS="PTR64=1"
else
  ARCH_OPTS="PTR64=0"
fi

if [ "$DEBUG" = yes ]; then
  DEBUG_OPTS="OPTIMIZE=0 DEBUG=1 SYMBOLS=1 PROFILER=1 PROFILE=1"
else
  DEBUG_OPTS="OPTIMIZE=3"
fi

make CC="$CC" AR="$AR" LD="$CXX" ARCHOPTS="$CFLAGS" NO_DEBUGGER=1 $ARCH_OPTS $DEBUG_OPTS
