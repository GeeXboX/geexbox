#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

if pkg_uses $1 zeroconf; then
  CFG_AVAHI="--enable-avahi"
else
  CFG_AVAHI="--disable-avahi"
fi

if pkg_uses $1 dvbcsa; then
  CFG_DVBCSA="--enable-dvbcsa"
else
  CFG_DVBCSA="--disable-dvbcsa"
fi

./configure \
            --prefix=/usr \
            --arch=$TARGET_ARCH \
            --cpu=$TARGET_CPU \
            --cc="$TARGET_CC" \
            $CFG_AVAHI \
            $CFG_DVBCSA \
            --disable-libav \

make
make_install
