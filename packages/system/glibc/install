#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

do_install lib
do_install etc/rpc

do_install usr/bin/ldd
do_install usr/bin/locale
do_install sbin/ldconfig
do_install usr/share/i18n/locales

mkdir -p $INSTALL/etc
cp $ROOT/$PACKAGES/$PKG_SECTION/$1/config/nsswitch.conf $INSTALL/etc

exit 0
