PKG_NAME=i18n-locales
PKG_VERSION=`( get_meta $TARGET_LIBC ; echo $PKG_VERSION )`
PKG_REV="3"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain $TARGET_LIBC"
PKG_RUN_DEPENDS="${TARGET_LIBC}-gconv-minimal"
PKG_BUILD_DEPENDS="${TARGET_LIBC}-localedef"
PKG_PRIORITY=standard
PKG_SECTION=system
PKG_SHORTDESC="National Language (locale) data"
PKG_LONGDESC="Machine-readable data files, shared objects and programs used by the C library for localization (l10n) and internationalization (i18n) support."

