PKG_NAME=sudo
PKG_VERSION=1.8.8
PKG_URL="http://www.sudo.ws/sudo/dist/sudo-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=system
PKG_SHORTDESC="sudo"
PKG_LONGDESC=" allows a system administrator to delegate authority to give certain users (or groups of users) the ability to run some (or all) commands as root or another user while providing an audit trail of the commands and their arguments."
