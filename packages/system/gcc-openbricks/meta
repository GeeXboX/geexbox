PKG_NAME=gcc-openbricks
PKG_SECTION=system

case "$TOOLCHAIN_FLAVOR" in
  next)
    PKG_VERSION=6.3.0
    PKG_MD5="677a7623c7ef6ab99881bc4e048debb6"
    GCC_VERSION=${PKG_VERSION}
    ;;
  *)
    PKG_VERSION=4.9.3
    PKG_MD5="6f831b4d251872736e8e9cc09746f327"
    GCC_VERSION=${PKG_VERSION}
esac

PKG_URL="ftp://ftp.fu-berlin.de/unix/languages/gcc/releases/gcc-${PKG_VERSION}/gcc-${PKG_VERSION}.tar.bz2"
