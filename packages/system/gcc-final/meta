PKG_NAME=gcc-final
PKG_SECTION=system
PKG_PRIORITY=required
PKG_VERSION=$( get_meta gcc-$TOOLCHAIN_TYPE; echo $PKG_VERSION )
PKG_REV="3"
PKG_DEV_DEPENDS="ccache make sed binutils $TARGET_LIBC"
PKG_BUILD_DEPENDS="$PKG_DEV_DEPENDS gmp-host mpfr cloog libelf mpc linux-headers gperf"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_SHORTDESC="C++ runtime and GCC support libraries"
PKG_LONGDESC="Shared version of the standard C++ runtime library and GCC support libraries"
