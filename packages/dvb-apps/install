#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/bin
cp $BUILD/$1*/util/scan/scan $INSTALL/usr/bin/dvbscan

# Build DVB transponders frequencies archive
if [ "$COMPRESSION_METHOD" = lzma ]; then
  tar cf - -C $BUILD/$1/util/scan/ dvb | lzma e $INSTALL/usr/share/dvb.tar.lzma -si -a2
else
  tar cf $INSTALL/usr/share/dvb.tar -C $BUILD/$1/util/scan/ dvb
  gzip -9 $INSTALL/usr/share/dvb.tar
fi
