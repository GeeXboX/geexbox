#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build ncurses
$SCRIPTS/build e2fsprogs-libs
$SCRIPTS/build parted

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-nls \
            --enable-cfdisk \
            --with-gnu-ext
make
