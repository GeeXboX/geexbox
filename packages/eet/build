#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build eina
$SCRIPTS/build gnutls
$SCRIPTS/build jpeg

cd $BUILD/$1*

mkdir -p objdir-target
cd objdir-target
../configure --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=$LIB_PREFIX \
             --disable-static \
             --enable-shared \
             --disable-doc \
             --disable-openssl \
             --enable-gnutls \
             --disable-eet \

make
strip_libs src
make install

cd ..
mkdir -p objdir-host
cd objdir-host
setup_toolchain host
export EINA_CFLAGS="-I$ROOT/$TOOLCHAIN/include/eina-0 -I$ROOT/$TOOLCHAIN/include/eina-0/eina"
export EINA_LIBS="-L$ROOT/$TOOLCHAIN/lib -leina"
../configure --prefix=$ROOT/$TOOLCHAIN \
             --disable-static \
             --enable-shared \
             --disable-doc \
             --disable-openssl \
             --disable-gnutls \
             --enable-eet
make
make install
