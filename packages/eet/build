#!/bin/sh

. config/options

cd $BUILD/$1*

setup_toolchain host
NOCONFIGURE=yes ./autogen.sh

mkdir -p objdir-host
cd objdir-host
do_configure host \
            --disable-doc \
            --disable-tests \
            --disable-openssl \
            --disable-gnutls \
            --enable-eet \
            --disable-amalgamation \
            --disable-old-eet-file-format \

make
make_install toolchain
cd ..

setup_toolchain target
NOCONFIGURE=yes ./autogen.sh

mkdir -p objdir-target
cd objdir-target
do_configure target \
            --disable-doc \
            --disable-tests \
            --disable-openssl \
            --enable-gnutls \
            --disable-eet \
            --disable-amalgamation \
            --disable-old-eet-file-format \

make
make_install
