#!/bin/sh

. config/options

cd $BUILD/$1*

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-doc \
            --disable-tests \
            --disable-openssl \
            --enable-gnutls \
            --disable-eet \
            --enable-amalgamation \

make
strip_libs src
make_install
