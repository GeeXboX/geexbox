#!/bin/sh

. config/options

$SCRIPTS/build toolchain

sed -i "s%^CFLAGS=.*%%" $BUILD/$1*/configure

for i in `find $BUILD/$1* -name Makefile.in`; do
  sed -i "s%^depmod = .*%depmod = true%" "$i"
  sed -i "s%@depmod@%true%g"             "$i"
  sed -i "s%^mknod = .*%mknod = true%"   "$i"
  sed -i "s%@mknod@%true%g"              "$i"
done
