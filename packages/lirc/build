#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libirman
$SCRIPTS/build libftdi
$SCRIPTS/build linux

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug --disable-stripping"
else
  DEBUG_CONFIG="--disable-debug --enable-stripping"
fi

export ac_cv_path_LIBUSB_CONFIG=
export ac_cv_func_forkpty=no
export ac_cv_lib_util_forkpty=no
export LDFLAGS="$LDFLAGS -lusb"
export MAKEFLAGS=-j1

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --without-x \
            --with-driver=none \
            --with-port=0x3f8 \
            --with-irq=4 \
            --with-kerneldir=$(kernel_path) \
            $DEBUG_CONFIG
make
make -C tools install
