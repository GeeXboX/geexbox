#!/bin/sh

. config/options

require_cxx $1

$SCRIPTS/build toolchain

cd $BUILD/$1*/
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-dependency-tracking \
            --disable-shared
make
make install
cp -p $LIB_PREFIX/bin/cxxtools-config $ROOT/$TOOLCHAIN/bin
