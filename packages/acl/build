#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build attr

export ac_cv_lib_attr_getxattr=yes

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-static=yes \
            --enable-shared=no \
            --enable-gettext=no \
            --enable-lib64=no \

make
make install
cp -f libacl/.libs/libacl.a $LIB_PREFIX/lib/
cp -f libacl/.libs/libacl.la $LIB_PREFIX/lib/
mkdir -p $LIB_PREFIX/include/acl
cp -f include/libacl.h $LIB_PREFIX/include/acl
mkdir -p $LIB_PREFIX/include/sys
cp -f include/acl.h $LIB_PREFIX/include/sys
