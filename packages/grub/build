#!/bin/sh

. config/options

$SCRIPTS/build toolchain

export CFLAGS="$CFLAGS -O2"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix="`ls -d $ROOT/$BUILD/$1*`/build" \
            --disable-shared \
            --without-curses \
            --enable-graphics
make
make install
