#!/bin/sh
#
# configure and launch VDR
#
# runlevels: geexbox, debug

if [ ! -f /var/dvbcard ]; then
  echo "No DVB card found, not starting VDR"
  exit 0
fi

echo "### Starting VDR ###"

PLUGINS=""
for file in /etc/vdr/plugins.d/*; do
  . $file
  PLUGINS="$PLUGINS -P$PLUGIN"
done

# create /video if missing
mkdir -p /video

# start VDR
runvdr "$PLUGINS" &

exit 0
