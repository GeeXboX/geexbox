#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/unpack linux
$SCRIPTS/build jpeg
$SCRIPTS/build freetype

cd $BUILD/$1*
cat > Make.config <<EOF
VFAT=1
PLUGINLIBDIR=/usr/lib/vdr
VIDEODIR=/video
CONFDIR=/etc/vdr
LOCDIR=/usr/share/vdr/locale
INCLUDES += -I`ls -d ../freetype-*/include`
DEFINES  += -DUSE_LIEMIKUUTIO -DUSE_CHANNELSCAN -DUSE_DOLBYINREC -DUSE_MAINMENUHOOKS -DUSE_MENUORG
EOF

make

# to build extra plugins
make include-dir

