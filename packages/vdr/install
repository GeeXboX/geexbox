#!/bin/sh

. config/options

require_glibc $1
require_cxx $1

$SCRIPTS/install jpeg
$SCRIPTS/install freetype
$SCRIPTS/install libiconv

VDR_DIR=`basename $BUILD/vdr-1*`

mkdir -p $INSTALL/usr/bin
cp $BUILD/$VDR_DIR/vdr $INSTALL/usr/bin
cp $PACKAGES/$1/scripts/runvdr $INSTALL/usr/bin

mkdir -p $INSTALL/usr/lib/vdr

mkdir -p $INSTALL/usr/share/vdr/locale
cp -a $BUILD/$VDR_DIR/locale/* $INSTALL/usr/share/vdr/locale

mkdir -p $INSTALL/etc/vdr/plugins
mkdir -p $INSTALL/etc/vdr/plugins.d
cp -a $BUILD/$VDR_DIR/*.conf $INSTALL/etc/vdr
