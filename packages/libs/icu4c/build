#!/bin/sh

. config/options

require_cxx $1

get_meta $1
cd $PKG_BUILD_DIR/source

# force little endian
export ac_cv_c_bigendian=no

# target icu needs a prebuilt host icu to crosscompile
mkdir -p objdir-host
cd objdir-host
do_configure host
make
make_install toolchain
cd ..

do_configure target \
  --with-cross-build="`pwd`/objdir-host" \
  --with-data-packaging=archive \
  --disable-samples

make
make_install
