PKG_VERSION=3.2.0
PKG_URL="http://www.libarchive.org/downloads/$PKG_NAME-$PKG_VERSION.tar.gz"
PKG_REV="4"
PKG_DEPENDS="$TARGET_LIBC zlib"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Support for reading various archive formats"
PKG_LONGDESC="C library and command-line tools for reading and writing tar, cpio, zip, ISO, and other archive formats"
