PKG_NAME=jemalloc
PKG_VERSION=3.5.1
PKG_URL="http://www.canonware.com/download/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Optimized malloc library"
PKG_LONGDESC="jemalloc is a general purpose malloc(3) implementation that emphasizes fragmentation avoidance and scalable concurrency support."
