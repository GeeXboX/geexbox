PKG_NAME=telepathy-farsight
PKG_VERSION=0.0.14
PKG_URL="http://telepathy.freedesktop.org/releases/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC GLib dbus libtelepathy farsight"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Glue library between telepathy and farsight2"
PKG_LONGDESC="Telepathy-Farsight is a helper library to glue together Telepathy's media signalling and the media streaming capabilities of Farsight2."
