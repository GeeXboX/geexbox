PKG_NAME=libpbc
PKG_VERSION=0.5.12
PKG_URL="http://crypto.stanford.edu/pbc/files/pbc-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC gmp"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="libpbc crypto library"
PKG_LONGDESC="The PBC (Pairing-Based Cryptography) library is a free C library (released under the LGPL) built on the GMP library that performs the mathematical operations underlying pairing-based cryptosystems."
