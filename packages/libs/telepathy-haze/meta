PKG_NAME=telepathy-haze
PKG_VERSION=0.4.0
PKG_URL="http://telepathy.freedesktop.org/releases/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC GLib dbus libtelepathy libpurple"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="A telepathy connection manager that use libpurple"
PKG_LONGDESC="Haze is a telepathy connection manager based on libpurple. This allow telepathy based application to connect all protocols supported by libpurple (pidgin)"
