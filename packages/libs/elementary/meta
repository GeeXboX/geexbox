PKG_REV="2"
PKG_DEPENDS="ecore eet eina evas edje efreet ethumb"
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_USE="uclibc"
PKG_DEPENDS_uclibc="libiconv"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="The Elementary widget set library"
PKG_LONGDESC="Elementary is a widget set based on the Enlightenment Foundation Libraries, primarily aimed at creating graphical user interfaces for mobile and embedded devices."
