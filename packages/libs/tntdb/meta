PKG_NAME=tntdb
PKG_VERSION=1.3
PKG_URL="http://www.tntnet.org/download/tntdb-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC cxxtools"
PKG_BUILD_DEPENDS="toolchain cxxtools"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="tntdb Tntdb is a C++ library "
PKG_LONGDESC="Tntdb is a C++ library which makes accessing SQL databases easy and robust. Just a few lines of code is enough to connect to the database and accessing data."
