PKG_NAME=libtheora
PKG_VERSION=1.1.1
PKG_URL="http://downloads.xiph.org/releases/theora/libtheora-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libogg"
PKG_BUILD_DEPENDS="toolchain libogg"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="The Theora Video Compression Codec"
PKG_LONGDESC="Theora is an open video codec being developed by the Xiph.org Foundation as part of their Ogg project. Theora is originally derived from On2's VP3 codec, and has improved on it significantly with the merging of code from the Thusnelda branch."
