PKG_NAME=mpc
case "$TOOLCHAIN_FLAVOR" in
  next)
    PKG_VERSION=1.0.3
    ;;
  *)
    PKG_VERSION=1.0.3
esac
PKG_URL="http://ftp.gnu.org/gnu/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV="2"
PKG_SECTION=libs
PKG_BUILD_DEPENDS="ccache gmp-host mpfr"
PKG_SHORTDESC="C library for the arithmetic of complex numbers"
PKG_LONGDESC="GNU MPC is a C library for the arithmetic of complex numbers with arbitrarily high precision and correct rounding of the result"
