PKG_NAME=libtelepathy
PKG_VERSION=0.3.3
PKG_URL="http://telepathy.freedesktop.org/releases/libtelepathy/libtelepathy-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC GLib dbus dbus-glib telepathy-glib"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Telepathy communication framework"
PKG_LONGDESC="Telepathy is a D-Bus framework for unifying real time communication, including instant messaging, voice calls and video calls. It abstracts differences between protocols to provide a unified interface for applications."
