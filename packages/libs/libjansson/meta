PKG_NAME=libjansson
PKG_VERSION=2.6
PKG_URL="http://www.digip.org/jansson/releases/jansson-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="libjansson Jansson is a C library for encoding, decoding and manipulating JSON data."
PKG_LONGDESC="Jansson is a C library for encoding, decoding and manipulating JSON data. It features:◾Simple and intuitive API and data model ◾Comprehensive documentation ◾No dependencies on other libraries ◾Full Unicode support (UTF-8) ◾Extensive test suite" 
