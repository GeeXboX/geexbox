#!/bin/sh

. config/options

mkdir -p $INSTALL/sbin
cp $BUILD/$1*/tools/lvm $INSTALL/sbin/lvm

mkdir -p $INSTALL/usr/lib
cp $BUILD/$1*/liblvm/liblvm2app.so $INSTALL/usr/lib/liblvm2app.so.2.0.2
ln -sf /usr/lib/liblvm2app.so.2.0.2 $INSTALL/usr/lib/liblvm2app.so
cp $BUILD/$1*/tools/liblvm2cmd.so $INSTALL/usr/lib

cp $BUILD/$1*/libdm/ioctl/libdevmapper.so $INSTALL/usr/lib/libdevmapper.so.1.02
ln -sf /usr/lib/libdevmapper.so.1.02 $INSTALL/usr/lib/libdevmapper.so
