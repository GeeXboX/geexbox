#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-lvm1_fallback \
            --disable-static_link \
            --disable-readline \
            --enable-realtime \
            --enable-debug \
            --disable-profiling \
            --enable-devmapper \
            --disable-compat \
            --enable-o_direct \
            --enable-applib \
            --enable-cmdlib \
            --enable-pkgconfig \
            --enable-driver \
            --enable-fsadm \
            --disable-dmeventd \
            --disable-selinux \
            --disable-nls \

make
