#!/bin/sh

. config/options

$SCRIPTS/build toolchain

EXTRA_OPTS=""
if [ $DEBUG == "yes" ]; then EXTRA_OPTS="--enable-debug"; else EXTRA_OPTS="--disable-debug"; fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-lvm1_fallback \
            --disable-static_link \
            --disable-readline \
            --enable-realtime \
            --disable-profiling \
            --enable-devmapper \
            --enable-udev_sync \
            --enable-udev_rules \
            --disable-compat \
            --disable-units-compat \
            --enable-o_direct \
            --enable-applib \
            --enable-cmdlib \
            --enable-pkgconfig \
            --enable-driver \
            --enable-fsadm \
            --disable-dmeventd \
            --disable-selinux \
            --disable-nls \
            $EXTRA_OPTS

make
