#!/bin/sh

. config/options

#FIXME [ "$TARGET_LIBC" = "uClibc" ] && $SCRIPTS/build libiconv

export NIH_DBUS_TOOL="$ROOT/$TOOLCHAIN/bin/nih-dbus-tool"

cd $BUILD/$1*

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --exec-prefix=/ \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-nls \
            --enable-threading \

make
make_install
