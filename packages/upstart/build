#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libiconv
$SCRIPTS/build dbus
$SCRIPTS/build expat
$SCRIPTS/build libnih

export NIH_DBUS_TOOL="$ROOT/$TOOLCHAIN/bin/nih-dbus-tool"

cd $BUILD/$1*

# Ugly hack to avoid autotools rebuild
export ACLOCAL=/bin/true
export AUTOCONF=/bin/true
export AUTOMAKE=/bin/true
export AUTOHEADER=/bin/true
export MAKEINFO=/bin/true

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --exec-prefix=/ \
            --libdir=$LIB_PREFIX/lib \
            --libexecdir=/usr/lib \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --datarootdir=/usr/share \
            --datadir=/usr/share \
            --localedir=/usr/share/locale \
            --disable-static \
            --enable-shared \
            --disable-nls \
            --enable-threading \

make
