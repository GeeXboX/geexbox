#!/bin/sh

. config/options

#FIXME [ "$TARGET_LIBC" = "uclibc" ] && $SCRIPTS/build libiconv

export NIH_DBUS_TOOL="$ROOT/$TOOLCHAIN/bin/nih-dbus-tool"

cd $BUILD/$1*

do_configure \
            --exec-prefix=/ \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-nls \
            --enable-threading \

make
make_install
