#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libiconv
$SCRIPTS/build dbus
$SCRIPTS/build expat

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --exec-prefix=/ \
            --libdir=$LIB_PREFIX/lib \
            --libexecdir=/usr/lib \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --datarootdir=/usr/share \
            --datadir=/usr/share \
            --localedir=/usr/share/locale \
            --disable-static \
            --enable-shared \
            --disable-nls \
            --enable-threading \

make
