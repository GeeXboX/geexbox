PKG_NAME=upstart
PKG_URL="http://upstart.ubuntu.com/download/0.6/upstart-0.6.5.tar.gz"
PKG_VERSION=0.6.5
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC dbus expat libnih"
PKG_BUILD_DEPENDS="toolchain dbus expat libnih"
PKG_PRIORITY=required
PKG_SECTION=admin
PKG_SHORTDESC="event-based init daemon"
PKG_LONGDESC="upstart is a /sbin/init daemon which handles starting of tasks and services during boot, stopping them during shutdown and supervising them while the system is running."
