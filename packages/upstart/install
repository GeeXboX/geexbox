#!/bin/sh

. config/options

$SCRIPTS/install dbus
$SCRIPTS/install expat

mkdir -p $INSTALL/sbin
cp -P $BUILD/$1*/init/init $INSTALL/sbin/init2

for i in initctl reboot runlevel shutdown telinit; do
  cp -P $BUILD/$1*/util/$i $INSTALL/sbin
done

for i in start stop restart reload status halt poweroff; do
  ln -s initctl $INSTALL/sbin/$i
done

mkdir -p $INSTALL/etc/dbus-1/system.d
cp -P $BUILD/$1*/dbus/Upstart.conf $INSTALL/etc/dbus-1/system.d

mkdir -p $INSTALL/etc/init
cp -P $BUILD/$1*/conf/control-alt-delete.conf $INSTALL/etc/init
cp -P $BUILD/$1*/conf/rc.conf $INSTALL/etc/init
cp -P $BUILD/$1*/conf/rc-sysinit.conf $INSTALL/etc/init
cp -P $BUILD/$1*/conf/rcS.conf $INSTALL/etc/init
