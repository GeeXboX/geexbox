#!/bin/sh

. config/options

setup_toolchain host

cd $BUILD/$1*
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=/usr \
             --disable-shared \
             --enable-static \
             --enable-interfaces="c,cxx" \
             --with-libgmp-prefix="$ROOT/$TOOLCHAIN" \
             --with-libgmpxx="$ROOT/$TOOLCHAIN" \

make
make_install toolchain
rm -rf ../.install
mv .install ..
