#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-malloc0returnsnull \

make -C util CC=$HOST_CC CFLAGS=$HOST_CFLAGS makestrs
make
$STRIP src/.libs/*.so*
make install
