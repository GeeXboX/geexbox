#!/bin/sh

. config/options

$SCRIPTS/build toolchain

HOST_PYTHON_DIR=`ls -d $ROOT/$BUILD/Python*/objdir/buildpython`
HOST_PYTHON="$HOST_PYTHON_DIR/python"
PYTHON_DIR=`ls -d $ROOT/$BUILD/Python*`

export CFLAGS="$CFLAGS -I$PYTHON_DIR/Include -I$PYTHON_DIR/objdir"
export LDSHARED="$CC -shared"

cd $BUILD/$1*
ln -s $HOST_PYTHON_DIR/pyconfig.h ./
$HOST_PYTHON setup.py build --ldflags="$LDFLAGS" \
                            --without-xpath \
                            --without-xslt
