#!/bin/sh

. config/options

$SCRIPTS/install pygame
$SCRIPTS/install imlib2
$SCRIPTS/install pysqlite
$SCRIPTS/install kaa
$SCRIPTS/install PyXML
$SCRIPTS/install skin-geexbox

SITE_PACKAGES="`ls -d $INSTALL/usr/lib/python*`/site-packages"

mkdir -p $INSTALL/usr/bin
cp $PACKAGES/$1/scripts/freevo_set_option $INSTALL/usr/bin
cp $LIB_PREFIX/bin/beacon $INSTALL/usr/bin
cp $LIB_PREFIX/bin/freevo* $INSTALL/usr/bin
cp $LIB_PREFIX/bin/mminfo $INSTALL/usr/bin

mkdir -p $INSTALL/usr/share
cp -rf $LIB_PREFIX/share/freevo $INSTALL/usr/share
cp -rf $LIB_PREFIX/share/locale $INSTALL/usr/share

mkdir -p $INSTALL/etc/freevo
cp -rf $PACKAGES/$1/config/freevo.conf $INSTALL/etc/freevo
cp -rf $PACKAGES/$1/config/player.conf $INSTALL/etc/freevo
cp -rf $PACKAGES/$1/config/local_conf.py $INSTALL/etc/freevo
cp -rf $PACKAGES/$1/config/webserver.conf $INSTALL/etc/freevo

mkdir -p $SITE_PACKAGES
cp -rf $LIB_PREFIX/lib/python*/site-packages/freevo $SITE_PACKAGES
cp -rf $LIB_PREFIX/lib/python*/site-packages/mbus $SITE_PACKAGES
cp -rf $LIB_PREFIX/lib/python*/site-packages/notifier $SITE_PACKAGES
