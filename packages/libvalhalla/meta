PKG_NAME=libvalhalla
PKG_URL="GEEXBOX_SRCS/libvalhalla-r1006.tar.bz2"
PKG_VERSION=r1006
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain curl sqlite libxml2 libnfo ffmpeg libexif"
PKG_RUN_DEPENDS="$TARGET_LIBC libexif sqlite libxml2 libnfo ffmpeg curl"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="a tiny media scanner library"
PKG_LONG_DESC="libvalhalla is a scanner and parser library for audio/video files based on SQLite and FFmpeg/libavformat. Media files are retrieved in paths defined by the user and metadata are saved in a database. It provides a very simple API and it can use several parsers concurrently to speed up on a multi-core/cpu system."
