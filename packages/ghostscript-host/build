#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

export HOST_CFLAGS="$HOST_CFLAGS -DHAVE_SYS_TIME_H=1"
setup_toolchain host

./configure  --without-jbig2dec --without-x --with-system-libtiff --without-jasper \
             --without-libidn
make

mkdir -p .install/bin
cp obj/aux/* .install/bin
