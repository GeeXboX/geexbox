#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build ncurses
$SCRIPTS/build e2fsprogs-libs

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-mtrace \
            --disable-debug \
            --disable-shared \
            --enable-static \
            --disable-nls \
            --disable-Werror \
            --enable-largefile \
            --without-readline
make
make install DESTDIR="$SYSROOT_PREFIX"
