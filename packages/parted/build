#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build ncurses
$SCRIPTS/build e2fsprogs-libs

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-mtrace \
            --disable-debug \
            --disable-shared \
            --enable-static \
            --disable-nls \
            --disable-pc98 \
            --disable-Werror \
            --enable-largefile \
            --without-readline
make -C libparted
make -C include install DESTDIR="$SYSROOT_PREFIX"
make -C libparted install DESTDIR="$SYSROOT_PREFIX"
cp -P libparted.pc $LIB_PREFIX/lib/pkgconfig
