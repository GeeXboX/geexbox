#!/bin/sh

. config/options

case $TARGET_ARCH in
  i386|x86_64)
    FPM=intel
    ;;

  powerpc|powerpc64)
    FPM=ppc
    ;;

  arm)
    FPM=arm
    ;;

  mips)
    FPM=mips
    ;;
esac

cd $BUILD/$1*
do_configure \
  --enable-speed \
  --enable-sso \
  --enable-fpm=$FPM \
  --disable-profiling \
  --disable-debugging \

make
make_install
