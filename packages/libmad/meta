PKG_NAME=libmad
PKG_VERSION=0.15.1b
PKG_URL="ftp://ftp.mars.org/pub/mpeg/libmad-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="MPEG audio decoder library"
PKG_LONGDESC="MAD is an MPEG audio decoder. It currently only supports the MPEG 1 standard, but fully implements all three audio layers (Layer I, Layer II, and Layer III, the latter often colloquially known as MP3.)."
