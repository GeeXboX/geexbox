#!/bin/sh
#
# setup the Digimatrix
#
# runlevels: geexbox, debug, configure

[ -x /usr/bin/dmidecode -a `dmidecode | grep -c "ASUS P4SQ"` -eq 1 ] || exit 1

echo "### Setting up Digimatrix ###"

[ -x /usr/bin/digifan ] && digifan -g 5 -i
[ -x /usr/bin/digipanel ] && digipanel -lts
echo '' > /var/digimatrix

# PAL-I/SECAM requires tda9887 options for audio
echo "options tda9887 port2=0" >> /etc/modprobe.d/options.conf

exit 0
