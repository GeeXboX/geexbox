PKG_NAME=dbus-glib
PKG_VERSION=0.82
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC GLib expat dbus"
PKG_BUILD_DEPENDS="toolchain GLib expat dbus"
[ "$TARGET_LIBC" = "uClibc" ] && \
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS gettext"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="simple interprocess messaging system"
PKG_LONGDESC="D-Bus is a message bus, used for sending messages between applications. Conceptually, it fits somewhere in between raw sockets and CORBA in terms of complexity. This package provides the GLib-based shared library for applications using the GLib interface to D-Bus."
