#!/bin/sh

. config/options

$SCRIPTS/build libtool
$SCRIPTS/build libsndfile
$SCRIPTS/build speex
$SCRIPTS/build intltool

cd $BUILD/$1*
LIBS="-L$SYSROOT_PREFIX/usr/lib -ldl" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --disable-rpath \
            --disable-nls \
            --disable-samplerate \
            --disable-oss-output \
            --disable-oss-wrapper \
            --disable-solaris \
            --disable-glib2 \
            --disable-gtk2 \
            --disable-gconf \
            --disable-avahi \
            --disable-jack \
            --disable-lirc \
            --disable-hal \
            --disable-hal-compat \
            --disable-bluez \
            --disable-ipv6 \
            --disable-openssl \
            --disable-manpages \
            --disable-per-user-esound-socket \
            --disable-legacy-runtime-dir \
            --with-database=simple \
            --with-system-user=root \
            --with-system-group=root \
            --with-access-group=root \

make
strip_libs .
make -j1 install
