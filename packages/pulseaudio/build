#!/bin/sh

. config/options

cd $BUILD/$1*
LIBS="-ldl" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-rpath \
            --disable-nls \
            --enable-alsa \
            --enable-dbus \
            --enable-udev \
            --disable-samplerate \
            --disable-oss-output \
            --disable-oss-wrapper \
            --disable-solaris \
            --disable-glib2 \
            --disable-gtk2 \
            --disable-gconf \
            --disable-avahi \
            --disable-jack \
            --disable-lirc \
            --disable-hal \
            --disable-hal-compat \
            --disable-bluez \
            --disable-ipv6 \
            --disable-openssl \
            --disable-manpages \
            --disable-per-user-esound-socket \
            --disable-legacy-runtime-dir \
            --with-database=simple \
            --with-system-user=root \
            --with-system-group=root \
            --with-access-group=root \

make
strip_libs .
export MAKEFLAGS=-j1
make_install
sed -i 's%user="pulse"%user="root"%g' \
  .install/etc/dbus-1/system.d/pulseaudio-system.conf
