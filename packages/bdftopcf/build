#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libXfont

XFONT=`ls -d $ROOT/$BUILD/libXfont*/host_build`

setup_toolchain host

# Override pkgconfig
export CFLAGS="$CFLAGS -I$XFONT/include"
export BDFTOPCF_LIBS="$LDFLAGS -L$XFONT/lib -lXfont -lz"

cd $BUILD/$1*
./configure --host=$HOST_NAME \
            --build=$HOST_NAME
make
make install-binPROGRAMS prefix=$ROOT/$TOOLCHAIN
