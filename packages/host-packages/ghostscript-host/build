#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

mkdir -p zlib
get_meta zlib
ZLIB_D=$ROOT/$PKG_BUILD_DIR

cp -R $ZLIB_D/* zlib

export HOST_CFLAGS="$HOST_CFLAGS -DHAVE_SYS_TIME_H=1"
setup_toolchain host

do_configure host --without-jbig2dec --without-x --without-system-libtiff --without-jasper --disable-fontconfig --without-libidn --disable-freetype

#make XTRALIBS="-lz"
make all obj/aux/genht

mkdir -p .install/bin
cp obj/aux/* .install/bin
