#!/bin/sh

. config/options

get_meta $1

$SCRIPTS/unpack $PKG_PARENT

cd $BUILD/${PKG_PARENT}-${PKG_VERSION}

cd autoconf
aclocal --force --verbose -I m4
autoconf -v -f -I m4 -o ../configure
cd ..

mkdir -p objdir-target
cd objdir-target

mkdir -p BuildTools && cd BuildTools

do_configure host \
             --disable-polly \
             --enable-optimized \
             --disable-profiling \
             --disable-assertions \
             --disable-expensive-checks \
             --disable-debug-runtime \
             --disable-debug-symbols \
             --enable-jit \
             --disable-docs \
             --disable-doxygen \
             --enable-threads \
             --enable-pthreads \
             --enable-pic \
             --enable-shared \
             --enable-embed-stdcxx \
             --enable-timestamps \
             --disable-libffi \
             --enable-ltdl-install \
             --disable-zlib \

cd ..

make -C BuildTools BUILD_DIRS_ONLY=1 CFLAGS= CXXFLAGS=

#make_install toolchain

mkdir -p .install

mkdir -p $ROOT/$PKG_BUILD_DIR
rm -rf $ROOT/$PKG_BUILD_DIR/.install
mv .install $ROOT/$PKG_BUILD_DIR
