#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build pygame
$SCRIPTS/build glib

HOST_PYTHON="`ls -d $ROOT/$BUILD/Python*/objdir/buildpython`/python"
PYTHON_DIR=`ls -d $ROOT/$BUILD/Python*`

export CFLAGS="$CFLAGS -I$PYTHON_DIR/Include -I$PYTHON_DIR/objdir -DX_DISPLAY_MISSING -DUSE_IMLIB2"
export LDSHARED="$CC -shared"

cd $BUILD/$1*
$HOST_PYTHON setup.py build
