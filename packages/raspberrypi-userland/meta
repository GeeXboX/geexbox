PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain cmake"
PKG_USE="devtools"
PKG_DEPENDS_devtools="freetype"
PKG_ARCH=arm
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="userland libraries for Raspberry Pi board"
PKG_LONGDESC="This package contains the ARM side libraries used on Raspberry Pi to interface to: EGL, mmal, GLESv2, vcos, openmaxil, vchiq_arm, bcm_host, WFC, OpenVG."
