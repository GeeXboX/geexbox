#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --disable-build-docs \
            --disable-composite \
            --disable-damage \
            --disable-dpms \
            --enable-dri2 \
            --enable-glx \
            --enable-randr \
            --disable-record \
            --enable-render \
            --disable-resource \
            --disable-screensaver \
            --disable-shape \
            --enable-shm \
            --disable-sync \
            --disable-xevie \
            --enable-xfixes \
            --enable-xfree86-dri \
            --disable-xinerama \
            --enable-xinput \
            --disable-xprint \
            --disable-selinux \
            --disable-xtest \
            --enable-xv \
            --disable-xvmc
make
strip_libs src
make_install
