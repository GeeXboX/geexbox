#!/bin/sh

. config/options

$SCRIPTS/build toolchain

BUSYBOX=`ls -d $BUILD/$1*`

cp $PACKAGES/$1/config/$1.conf $BUSYBOX/.config

[ -n "$TIMEZONE" ] && sed -i -e 's/^# CONFIG_HWCLOCK .*$/CONFIG_HWCLOCK=yes/g' -e 's/^# CONFIG_FEATURE_HWCLOCK_LONG_OPTIONS .*/CONFIG_FEATURE_HWCLOCK_LONG_OPTIONS=yes/g' $BUSYBOX/.config

[ "$DEVTOOLS" = "yes" ] && sed -i -e 's/^# CONFIG_DIFF .*$/CONFIG_DIFF=y/g' -e 's/^# CONFIG_FEATURE_DIFF_LONG_OPTIONS .*/CONFIG_FEATURE_DIFF_LONG_OPTIONS=y/g' -e 's/^# CONFIG_FEATURE_DIFF_DIR .*/CONFIG_FEATURE_DIFF_DIR=y/g' -e 's/^# CONFIG_DEVMEM .*/CONFIG_DEVMEM=y/g' -e 's/^# CONFIG_NC_SERVER .*/CONFIG_NC_SERVER=y/g' $BUSYBOX/.config

# make -C $BUSYBOX oldconfig HOSTCC=$HOST_CC
