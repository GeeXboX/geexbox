PKG_NAME=libfontenc
PKG_URL="http://xorg.freedesktop.org/archive/individual/lib/libfontenc-1.0.5.tar.bz2"
PKG_VERSION=1.0.5
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC zlib"
PKG_BUILD_DEPENDS="toolchain zlib xproto"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="X11 font encoding library"
PKG_LONGDESC="libfontenc is a library which helps font libraries portably determine and deal with different encodings of fonts."
