#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xorg-protocols
$SCRIPTS/build xorg-libs

MODULE_DIR=/usr/lib/xorg/modules

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-werror \
            --disable-debug \
            --disable-builddocs \
            --enable-install-libxf86config \
            --disable-composite \
            --disable-shm \
            --disable-xres \
            --disable-xtrap \
            --disable-record \
            --enable-xv \
            --disable-xvmc \
            --enable-dga \
            --disable-screensaver \
            --disable-xdmcp \
            --disable-xdm-auth-1 \
            --disable-glx \
            --disable-aiglx \
            --disable-glx-tls \
            --disable-dri \
            --disable-xinerama \
            --enable-xf86vidmode \
            --enable-xf86misc \
            --disable-xcsecurity \
            --disable-xevie \
            --disable-lbx \
            --disable-appgroup \
            --disable-cup \
            --disable-evi \
            --disable-multibuffer \
            --enable-fontcache \
            --enable-dbe \
            --disable-xf86bigfont \
            --disable-dpms \
            --enable-xinput \
            --enable-xorg \
            --disable-dmx \
            --disable-xvfb \
            --disable-xnest \
            --disable-xwin \
            --disable-xprint \
            --disable-xgl \
            --disable-xglx \
            --disable-xegl \
            --disable-kdrive \
            --disable-xephyr \
            --disable-xsdl \
            --enable-freetype \
            --disable-install-setuid \
            --disable-secure-rpc \
            --disable-xorgcfg \
            --enable-kbd_mode \
            --with-module-dir=$MODULE_DIR \
            --with-xkb-path=/usr/lib/X11/xkb \
            --with-log-dir=/var/log \
            --with-fontdir=/usr/lib/X11/fonts \
            --with-rgb-path=/usr/lib/X11/rgb
make
make install \
  XKB_COMPILED_DIR=$LIB_PREFIX/lib/X11/xkb \
  moduledir=$SYSROOT_PREFIX/$MODULE_DIR
