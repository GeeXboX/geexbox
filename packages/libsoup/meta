PKG_VERSION=2.4.1
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain gnutls GLib libxml2"
PKG_RUN_DEPENDS="$TARGET_LIBC gnutls GLib libxml2"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="an HTTP library implementation in C"
PKG_LONG_DESC="libsoup uses the Glib main loop and is designed to work well with GTK+ applications."
