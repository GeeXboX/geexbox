#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build gnutls
$SCRIPTS/build libgcrypt

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug"
else
  DEBUG_CONFIG="--disable-debug"
fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-dependency-tracking \
            --enable-static \
            --disable-shared \
            --disable-glibtest \
            --enable-ssl \
            $DEBUG_CONFIG
make
make install
