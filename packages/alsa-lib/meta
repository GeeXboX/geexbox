PKG_VERSION=1.0.23
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=standard
PKG_SECTION=libs
PKG_SHORTDESC="shared library for ALSA applications"
PKG_LONGDESC="This package contains the ALSA library and its standard plugins. ALSA is the Advanced Linux Sound Architecture."
