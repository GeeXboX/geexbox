#!/bin/sh

. config/options

$SCRIPTS/build libbridge
$SCRIPTS/build libomxil-bellagio

cd $BUILD/$1*

make -j1 \
     CC="$TARGET_CC" \
     DBAPI_CFLAGS="-I$LIB_PREFIX/include/libbridge" \
     DBAPI_LIBS="-L$LIB_PREFIX/lib -lbridge"

cp -P src/*.so $LIB_PREFIX/lib
cp -P src/components/*.so $LIB_PREFIX/lib

mkdir -p $LIB_PREFIX/include/omx
cp -PR include/* $LIB_PREFIX/include/omx
