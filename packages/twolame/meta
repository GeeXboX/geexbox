PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="MPEG Audio Layer 2 encoding library"
PKG_LONGDESC="TwoLAME is an optimized MPEG Audio Layer 2 encoder. It is based on tooLAME by Mike Cheng, which in turn is based upon the ISO dist10 code and portions of LAME."
