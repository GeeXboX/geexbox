#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --enable-static \
            --disable-kernel-module \
            --enable-lib \
            --with-kernel=$(kernel_path)
make
make -C include install
make -C lib install
make install-pkgconfigDATA
