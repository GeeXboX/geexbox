#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build fuse
$SCRIPTS/build GLib
$SCRIPTS/build libiconv
$SCRIPTS/build curl

export ac_cv_path__libcurl_config=$LIB_PREFIX/bin/curl-config
export ac_cv_func_malloc_0_nonnull=yes
export ac_cv_func_realloc_0_nonnull=yes

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --enable-static \
            --disable-dependency-tracking
make 
