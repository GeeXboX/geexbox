#!/bin/sh

. config/options

require_cxx $1

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --disable-dependency-tracking 
make
$STRIP sigc++/.libs/libsigc*.so*
make install
