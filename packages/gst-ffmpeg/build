#!/bin/sh

. config/options

$SCRIPTS/build gstreamer
$SCRIPTS/build gst-plugins-base
$SCRIPTS/build ffmpeg

export LIBS="-L$SYSROOT_PREFIX/usr/lib"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --with-system-ffmpeg \

make
strip_libs ext
make install
