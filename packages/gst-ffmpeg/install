#!/bin/sh

. config/options

$SCRIPTS/install ffmpeg

GST_VERSION=0.10
GST_PLUGINS_PATH=$INSTALL/usr/lib/gstreamer-$GST_VERSION

mkdir -p $GST_PLUGINS_PATH
cp -P $BUILD/$1*/ext/ffmpeg/.libs/libgstffmpeg.so $GST_PLUGINS_PATH
cp -P $BUILD/$1*/ext/libpostproc/.libs/libgstpostproc.so $GST_PLUGINS_PATH
cp -P $BUILD/$1*/ext/libswscale/.libs/libgstffmpegscale.so $GST_PLUGINS_PATH
