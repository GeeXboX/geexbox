#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libpciaccess

export ac_cv_file___src_AtomBios_includes_atombios_h=yes
export ac_cv_file___src_AtomBios_includes_Decoder_h=yes

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --with-xorg-module-dir=$XORG_PATH_MODULES
make
