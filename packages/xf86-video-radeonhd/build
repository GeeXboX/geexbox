#!/bin/sh

. config/options

$SCRIPTS/build toolchain

export PKG_CONFIG="$ROOT/$TOOLCHAIN/bin/pkg-config"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-dri \
            --with-xorg-module-dir=$XORG_PATH_MODULES

#FIXME: when disabling exa, build doesn't work with current version
#            --disable-exa \

make
strip_libs src
