PKG_NAME=evas
PKG_URL_REV=`( get_meta EFL; echo $PKG_URL_REV )`
PKG_VERSION=1.2+${PKG_URL_REV}
PKG_URL_PROTO=svn
PKG_URL="http://svn.enlightenment.org/svn/e/trunk/${PKG_NAME}"
PKG_REV=1
PKG_DEPENDS="eina eet libpng libjpeg-turbo tiff libungif freetype fontconfig expat fribidi"
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_USE="uclibc xorg sdl directfb opengl opengles"
PKG_DEPENDS_uclibc="libiconv"
PKG_BUILD_DEPENDS_opengles="OpenGLES"
PKG_DEPENDS_xorg="libX11 libxcb libXrender mesa"
PKG_DEPENDS_sdl="SDL"
PKG_DEPENDS_directfb="DirectFB"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Enlightenment DR17 advanced canvas library"
PKG_LONGDESC="Evas is an advanced canvas library, providing six engines for rendering: X11, OpenGL (hardware accelerated), DirectFB, the framebuffer, Microsof Windows and Qtopia. Due to its simple API, evas can be developed with rapidly, and cleanly."
