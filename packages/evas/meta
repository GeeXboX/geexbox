PKG_NAME=evas
PKG_URL="http://download.enlightenment.org/snapshots/2010-06-07/evas-0.9.9.49539.tar.bz2"
PKG_VERSION=0.9.9.49539
PKG_REV=1
PKG_DEPENDS="eina eet libpng jpeg tiff libungif freetype fontconfig"
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_USE="uclibc arm xorg"
PKG_DEPENDS_uclibc="libiconv"
PKG_DEPENDS_arm="sgx-OpenGLES"
PKG_DEPENDS_xorg="libX11 libXrender mesa"
if [ "$SDL" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS SDL"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS SDL"
fi
if [ "$DIRECTFB" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS DirectFB"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS DirectFB"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Enlightenment DR17 advanced canvas library"
PKG_LONGDESC="Evas is an advanced canvas library, providing six engines for rendering: X11, OpenGL (hardware accelerated), DirectFB, the framebuffer, Microsof Windows and Qtopia. Due to its simple API, evas can be developed with rapidly, and cleanly."
