#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build eina
$SCRIPTS/build eet
$SCRIPTS/build libpng
$SCRIPTS/build jpeg
$SCRIPTS/build tiff
$SCRIPTS/build libungif
[ "$TARGET_LIBC" = "uClibc" ] && $SCRIPTS/build libiconv

if [ "$XORG" = yes ]; then
  $SCRIPTS/build xorg-libs
  WITH_X="--with-x --enable-software-xlib --enable-software-16-x11 --enable-xrender-x11 --enable-gl-x11"
  EXTRA_LIBS="-lstdc++"
fi

if [ $TARGET_ARCH = arm ]; then
  $SCRIPTS/build sgx-OpenGLES
  OPENGL_ES="--enable-gl-flavor-gles --enable-gles-variety-sgx"
fi 

[ "$TARGET_LIBC" = "uClibc" ] && EXTRA_LIBS="-liconv $EXTRA_LIBS"

cd $BUILD/$1*
export LIBS="$EXTRA_LIBS"
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --enable-pthreads \
            --enable-pipe-render \
            --enable-async-preload \
            --enable-async-events \
            --enable-async-render \
            --disable-doc \
            --enable-image-loader-eet \
            --enable-image-loader-gif \
            --enable-image-loader-jpeg \
            --enable-image-loader-png \
            --enable-image-loader-tiff \
            --enable-image-loader-pmaps \
            --enable-image-loader-xpm \
            --enable-font-loader-eet \
            --disable-software-xcb \
            --disable-xrender-xcb \
            --enable-fb \
            $OPENGL_ES \
            $WITH_X \

make
strip_libs src
make install
