#!/bin/sh
#
# configure nvidia binary driver
#
# runlevels: geexbox, debug, configure

# include video configuration file
. /etc/video

[ "$BINARY_DRIVERS" = yes ] || exit 0

if lspci -n | grep 0300 | grep -q 10de; then
  echo "## Found nVidia card, enabling binary driver as requested ##"
  echo "" > /var/use_opengl
  ln -sf /usr/lib/nvidia/libGL.so.1 /usr/lib/libGL.so.1
  ln -sf /usr/lib/nvidia/libglx.so /usr/lib/xorg/modules/extensions/libglx.so
fi

exit 0
