#!/bin/sh

. config/options

require_glibc $1

if [ "$TARGET_ARCH" = x86_64 ]; then
  NV_ARCH=x86_64
  NV_ARCH_PKG=2
else
  NV_ARCH=x86
  NV_ARCH_PKG=1
fi

get_meta $1

NV_PKG="NVIDIA-Linux-${NV_ARCH}-${PKG_VERSION}-pkg${NV_ARCH_PKG}.run"
[ -d $BUILD/$1 ] && rm -rf $BUILD/$1

sh $SOURCES/$1/$NV_PKG --extract-only --target $BUILD/$1

if [ -d "$PACKAGES/$1/patches.nvidia/" ]; then
  for i in $PACKAGES/$1/patches.nvidia/*.diff*; do
    apply_patch $1 $i
  done
fi
