#!/bin/sh

. config/options

mkdir -p "`ls -d $INSTALL/lib/modules/*`/kernel/drivers/acpi"

cp $BUILD/$1*/eeepc_acpi.ko $INSTALL/lib/modules/*/kernel/drivers/acpi

mkdir -p $INSTALL/etc/acpi/events
cp $PACKAGES/$1/config/eee $INSTALL/etc/acpi/events

mkdir -p $INSTALL/etc/acpi/scripts
cp $PACKAGES/$1/scripts/eee-hotkeys.sh $INSTALL/etc/acpi/scripts
