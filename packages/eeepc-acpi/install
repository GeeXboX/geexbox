#!/bin/sh

. config/options

mkdir -p $INSTALL/etc/acpi
cp $PACKAGES/$1/config/eee-common $INSTALL/etc/acpi

mkdir -p $INSTALL/etc/acpi/ATKD
cp $PACKAGES/$1/scripts/lcd.sh $INSTALL/etc/acpi/ATKD/00000030
cp $PACKAGES/$1/scripts/crt.sh $INSTALL/etc/acpi/ATKD/00000031
cp $PACKAGES/$1/scripts/lcd-crt.sh $INSTALL/etc/acpi/ATKD/00000032
cp $PACKAGES/$1/scripts/mute.sh $INSTALL/etc/acpi/ATKD/00000013
cp $PACKAGES/$1/scripts/volume_down.sh $INSTALL/etc/acpi/ATKD/00000014
cp $PACKAGES/$1/scripts/volume_up.sh $INSTALL/etc/acpi/ATKD/00000015

