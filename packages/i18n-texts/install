#!/bin/sh

. config/options

mkdir -p $INSTALL/etc/mplayer
mkdir -p $INSTALL/etc/installator
mkdir -p $INSTALL/etc/configurator

for MENU_LANG in $INCLUDED_LANGS; do
  test -f $PACKAGES/$1/config/$MENU_LANG.install && cp $PACKAGES/$1/config/$MENU_LANG.install $INSTALL/etc/installator
  test -f $PACKAGES/$1/config/$MENU_LANG.config && cp $PACKAGES/$1/config/$MENU_LANG.config $INSTALL/etc/configurator
done

exit 0
