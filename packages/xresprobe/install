#!/bin/sh

. config/options

$SCRIPTS/install laptop-detect

mkdir -p $INSTALLX/usr/bin
cp $BUILD/$1*/$1 $INSTALLX/usr/bin
cp $BUILD/$1*/ddcprobe/ddcprobe $INSTALLX/usr/bin

mkdir -p $INSTALLX/usr/share/$1
cp $BUILD/$1*/bitdepth.sh $INSTALLX/usr/share/$1
cp $BUILD/$1*/ddcprobe.sh $INSTALLX/usr/share/$1
cp $BUILD/$1*/lcdsize.sh $INSTALLX/usr/share/$1
cp $BUILD/$1*/rigprobe.sh $INSTALLX/usr/share/$1
cp $BUILD/$1*/xorg.conf $INSTALLX/usr/share/$1
cp $BUILD/$1*/xprobe.sh $INSTALLX/usr/share/$1
