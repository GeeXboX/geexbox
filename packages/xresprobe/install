#!/bin/sh

. config/options

$SCRIPTS/install laptop-detect

mkdir -p $INSTALL/usr/bin
cp $BUILD/$1*/$1 $INSTALL/usr/bin
cp $BUILD/$1*/ddcprobe/ddcprobe $INSTALL/usr/bin

mkdir -p $INSTALL/usr/share/$1
cp $BUILD/$1*/bitdepth.sh $INSTALL/usr/share/$1
cp $BUILD/$1*/ddcprobe.sh $INSTALL/usr/share/$1
cp $BUILD/$1*/lcdsize.sh $INSTALL/usr/share/$1
cp $BUILD/$1*/rigprobe.sh $INSTALL/usr/share/$1
cp $BUILD/$1*/xorg.conf $INSTALL/usr/share/$1
cp $BUILD/$1*/xprobe.sh $INSTALL/usr/share/$1
