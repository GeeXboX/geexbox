PKG_NAME=OpenGLES
PKG_VERSION=1
PKG_REV=1
[ "$TARGET_PLATFORM" = omap3 ] && \
  PKG_RUN_DEPENDS="sgx-OpenGLES"
[ "$TARGET_PLATFORM" = tegra ] && \
  PKG_RUN_DEPENDS="tegra-gl"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="OpenGL|ES metapackage"
PKG_LONGDESC="OpenGL|ES is a royalty-free, cross-platform API for full-function 2D and 3D graphics on embedded systems"
