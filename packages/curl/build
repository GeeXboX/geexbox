#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

do_configure \
            --disable-debug \
            --enable-http \
            --enable-ftp \
            --enable-file \
            --disable-ldap \
            --enable-proxy \
            --disable-ipv6 \
            --enable-thread \
            --with-random=/dev/urandom \
            --with-gnutls=$LIB_PREFIX \
            --with-ssl \

make
make_install
sed -i "s:\(['= ]\)/usr:\\1$LIB_PREFIX:g" .install/usr/bin/curl-config
