#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-debug \
            --enable-http \
            --enable-ftp \
            --enable-file \
            --disable-ldap \
            --enable-proxy \
            --disable-ipv6 \
            --enable-thread \
            --with-random=/dev/urandom \
            --with-gnutls \
            --without-ssl \

make
make_install
sed -i "s:\(['= ]\)/usr:\\1$LIB_PREFIX:g" .install/usr/bin/curl-config
