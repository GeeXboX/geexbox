PKG_NAME=libgif
PKG_VERSION=4.1.6
PKG_URL="http://downloads.sourceforge.net/giflib/giflib-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain nasm"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="libraries for reading and writing GIFs"
PKG_LONGDESC=" libraries for reading and writing GIFs as well as programs for converting and working with GIF files"
