PKG_NAME=libXfixes
PKG_URL="http://xorg.freedesktop.org/archive/individual/lib/libXfixes-4.0.4.tar.bz2"
PKG_VERSION=4.0.4
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libX11"
PKG_BUILD_DEPENDS="toolchain libX11 fixesproto" 
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="X11 miscellaneous fixes extension library"
PKG_LONGDESC="libXfixes provides an X Window System client interface to the XFIXES extension to the X protocol. It provides support for Region types, and some cursor functions."
