#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build intltool

cd $BUILD/$1*
XKBCOMP="/usr/bin/xkbcomp" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --exec-prefix=/usr \
            --with-xkb-base=$XORG_PATH_XKB \
            --enable-compat-rules \
            --disable-xkbcomp-symlink \
            --with-xkb-rules-symlink=xorg

make
make DESTDIR="`ls -d $ROOT/$BUILD/$1*`/.install" install
