#!/bin/sh

. config/options

# mandatory for xkbcomp to put files into
mkdir -p $INSTALL/$XORG_PATH_XKB_OUTPUT

mkdir -p $INSTALL/usr/share/X11/xkb/rules
cp $BUILD/$1*/rules/base $INSTALL/usr/share/X11/xkb/rules/xorg
cp $BUILD/$1*/rules/base $INSTALL/usr/share/X11/xkb/rules/base
cp $BUILD/$1*/rules/evdev $INSTALL/usr/share/X11/xkb/rules/evdev
