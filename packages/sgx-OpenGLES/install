#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib
cp -P $BUILD/$1*/usr/lib/lib* $INSTALL/usr/lib

mkdir -p $INSTALL/usr/bin
cp -P $BUILD/$1*/usr/bin/pvrsrvinit $INSTALL/usr/bin

if [ "$DEVTOOLS" = yes ]; then
  cp -P $BUILD/$1*/usr/bin/eglinfo $INSTALL/usr/bin
  cp -P $BUILD/$1*/usr/bin/gl2info $INSTALL/usr/bin

  mkdir -p $INSTALL/usr/lib/sgx_demos
  cp -PR $BUILD/$1*/usr/lib/sgx_demos/* $INSTALL/usr/lib/sgx_demos
fi

exit 0
