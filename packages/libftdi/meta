PKG_NAME=libftdi
PKG_VERSION=0.20
PKG_URL="http://www.intra2net.com/en/developer/${PKG_NAME}/download/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libusb-compat"
PKG_SECTION=libs
PKG_SHORTDESC="library to talk to FTDI chips"
PKG_LONGDESC="libFTDI is an open source library to talk to FTDI chips: FT232BM, FT245BM, FT2232C, FT2232D, FT245R and FT232H including the popular bitbang mode."
