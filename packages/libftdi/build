#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libusb

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --disable-libftdipp \

make -C src
strip_libs src
make -C src install
make install-pkgconfigDATA
