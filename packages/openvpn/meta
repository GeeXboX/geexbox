PKG_NAME=openvpn
PKG_VERSION=2.1.3
PKG_URL="http://openvpn.net/release/openvpn-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC openssl lzo"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="smartcard"
PKG_DEPENDS_smartcard="pkcs11-helper"
PKG_PRIORITY=optional
PKG_SECTION=net
PKG_SHORTDESC="virtual private network daemon"
PKG_LONGDESC="OpenVPN is an application to securely tunnel IP networks over a single UDP or TCP port. It can be used to access remote sites, make secure point-to-point connections, enhance wireless security, etc."
