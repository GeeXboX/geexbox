PKG_NAME=efreet
PKG_URL_REV=`( get_meta EFL; echo $PKG_URL_REV )`
PKG_VERSION=1.2+${PKG_URL_REV}
PKG_URL_PROTO=svn
PKG_URL="http://svn.enlightenment.org/svn/e/trunk/${PKG_NAME}"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC eina ecore eet"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="EFL wrapper for freedesktop.org specifications"
PKG_LONGDESC="An implementation of several specifications from freedesktop.org intended for use in Enlightenment DR17 (e17) and other applications using the EnlightenmentFoundation Libraries (EFL). Currently, the following specifications are included: Base Directory, Desktop Entry, Icon Theme, Menu, Trash, Mime"
