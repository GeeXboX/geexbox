#!/bin/sh

. config/options

install_va_driver() {
  cp -P $BUILD/$2*/$1_drv_video/.libs/$1_drv_video.so \
    $INSTALL/usr/lib/va/drivers
}

mkdir -p $INSTALL/usr/lib
cp -P $BUILD/$1*/va/.libs/libva*.so* $INSTALL/usr/lib

mkdir -p $INSTALL/usr/lib/va/drivers
[ "$VAAPI_DRIVERS" = all ] && VAAPI_DRIVERS="dummy i965"
for d in $VAAPI_DRIVERS; do
    install_va_driver $d
done

if [ "$DEVTOOLS" = yes ]; then
  mkdir -p $INSTALL/usr/bin
  cp -P $BUILD/$1*/test/.libs/vainfo $INSTALL/usr/bin
fi
