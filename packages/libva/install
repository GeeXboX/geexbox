#!/bin/sh

. config/options

cd $BUILD/$1*

do_install usr/lib/libva*.so*[.0-9]

mkdir -p $INSTALL/usr/lib/va/drivers
[ "$VAAPI_DRIVERS" = all ] && VAAPI_DRIVERS="dummy i965"
for d in $VAAPI_DRIVERS; do
  [ -d ${d}_drv_video ] && \
    cp -P ${d}_drv_video/.libs/${d}_drv_video.so $INSTALL/usr/lib/va/drivers
done

if pkg_uses $1 devtools; then
  mkdir -p $INSTALL/usr/bin
  cp -P test/.libs/vainfo $INSTALL/usr/bin
fi

exit 0
