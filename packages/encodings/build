#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --enable-static \
            --disable-gzip-small-encodings \
            --disable-gzip-large-encodings \
            --with-encodingsdir=$XORG_PATH_ENCODINGS
make
