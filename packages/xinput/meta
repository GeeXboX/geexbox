PKG_NAME=xinput
PKG_VERSION=1.6.0
PKG_URL="$XORG_SRCS/app/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11 libXv libXinerama"
PKG_RUN_DEPENDS="$TARGET_LIBC libX11 libXv libXinerama"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="utility to configure and test X input devices"
PKG_LONGDESC="xinput is a utility to list available input devices, query information about a device and change input device settings."
