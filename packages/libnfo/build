#!/bin/sh

. config/options

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG=""
else
  DEBUG_CONFIG="--disable-debug"
fi

cd $BUILD/$1*
./configure --prefix=/usr \
            --enable-static \
            --disable-shared \
            --cross-compile \
            --disable-doc \
            --enable-logcolor \
            $DEBUG_CONFIG \

make
make_install
