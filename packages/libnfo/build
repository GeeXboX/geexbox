#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libxml2

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG=""
else
  DEBUG_CONFIG="--disable-debug"
fi

cd $BUILD/$1*
./configure --prefix=$LIB_PREFIX \
            --enable-static \
            --disable-shared \
            --cross-compile \
            --disable-doc \
            --enable-logcolor \
            $DEBUG_CONFIG \

make -C src
make -C src install
cp -f libnfo.pc $LIB_PREFIX/lib/pkgconfig/
