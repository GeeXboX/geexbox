#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-nls \
            --disable-cxx \
            --disable-guile \
            --with-included-opencdk \
            --with-included-libtasn1 \
            --with-included-lzo \
            --with-included-libcfg \
            --without-libreadline-prefix \
            --with-libgcrypt
make
make_install
