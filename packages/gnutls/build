#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build zlib
$SCRIPTS/build readline
$SCRIPTS/build libgpg-error
$SCRIPTS/build libgcrypt

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-static \
            --disable-shared \
            --disable-nls \
            --disable-cxx \
            --disable-guile \
            --with-included-opencdk \
            --with-included-libtasn1 \
            --with-included-lzo \
            --with-included-libcfg \
            --with-libgcrypt
make
make install
