#!/bin/sh

. config/options

cd $BUILD/$1*
LIBS="-lgpg-error" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-static \
            --disable-shared \
            --disable-nls \
            --disable-cxx \
            --disable-guile \
            --with-included-opencdk \
            --with-included-libtasn1 \
            --with-included-lzo \
            --with-included-libcfg \
            --without-libreadline-prefix \
            --with-libgcrypt
make
make_install
sed -i "s:\(['= ]\)/usr:\\1$LIB_PREFIX:g" .install/usr/bin/libgnutls*-config
