#!/bin/sh

. config/options

cd $BUILD/$1*
do_configure \
            --disable-nls \
            --disable-cxx \
            --disable-guile \
            --with-included-opencdk \
            --with-included-libtasn1 \
            --with-included-lzo \
            --with-included-libcfg \
            --without-libreadline-prefix \
            --with-libgcrypt-prefix=$LIB_PREFIX \

make
make_install
