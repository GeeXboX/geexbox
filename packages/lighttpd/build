#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

do_autoconf
do_configure \
             --without-bzip2 \
             --without-ldap \
             --without-lua \
             --without-memcache \
             --with-pcre \
             --without-webdav-props \
             --without-webdav-locks \
             --without-openssl \


make
make_install

mkdir -p .install/etc .install/www/logs .install/www/pages

cp $ROOT/$PACKAGES/$1/config/lighttpd.conf .install/etc
cp $ROOT/$PACKAGES/$1/config/index.html .install/www/pages
