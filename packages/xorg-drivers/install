#!/bin/sh

. config/options

$SCRIPTS/install xf86-input-mouse
$SCRIPTS/install xf86-input-keyboard

if [ "$TARGET_PLATFORM" = easygate ]; then
$SCRIPTS/install xf86-video-intel
else
$SCRIPTS/install xf86-video-ati
$SCRIPTS/install xf86-video-glint
$SCRIPTS/install xf86-video-i740
$SCRIPTS/install xf86-video-intel
$SCRIPTS/install xf86-video-mga
$SCRIPTS/install xf86-video-nv
$SCRIPTS/install xf86-video-radeonhd
$SCRIPTS/install xf86-video-s3
$SCRIPTS/install xf86-video-s3virge
$SCRIPTS/install xf86-video-savage
$SCRIPTS/install xf86-video-sis
$SCRIPTS/install xf86-video-tdfx
$SCRIPTS/install xf86-video-vesa
$SCRIPTS/install xf86-video-via
$SCRIPTS/install xf86-video-vmware
fi
