#!/bin/sh

. config/options

$SCRIPTS/install xf86-input-evdev

[ "$XORG_DRIVERS" = all ] && XORG_DRIVERS="`ls -d $ROOT/$PACKAGES/xf86-video-* | sed s/.*xf86-video-//`"
for drv in $XORG_DRIVERS; do
  [ "$drv" = nvidia -a "$NVIDIA" != yes ] && continue
  $SCRIPTS/install xf86-video-$drv
done

for drv in `ls $INSTALLX/usr/lib/xorg/modules/drivers/*_drv.so`; do
  $STRIP "$drv"
  echo "$drv" | sed -e 's,.*/,,;s,_drv.so,,' >> $INSTALLX/etc/X11/drivers
done
