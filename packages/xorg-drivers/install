#!/bin/sh

. config/options

$SCRIPTS/install xf86-input-mouse
$SCRIPTS/install xf86-input-keyboard

[ "$XORG_DRIVERS" = all ] && XORG_DRIVERS="`ls -d $ROOT/$PACKAGES/xf86-video-* | sed s/.*xf86-video-//`"
for drv in $XORG_DRIVERS; do
  [ "$drv" = nvidia -a "$NVIDIA" != yes ] && continue
  $SCRIPTS/install xf86-video-$drv
done
