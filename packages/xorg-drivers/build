#!/bin/sh

. config/options

$SCRIPTS/build xf86-input-mouse
$SCRIPTS/build xf86-input-keyboard

if [ "$TARGET_PLATFORM" = easygate ]; then
  $SCRIPTS/build xf86-video-intel
else
  [ "$XORG_DRIVERS" = all ] && XORG_DRIVERS="`ls -d $ROOT/$PACKAGES/xf86-video-* | sed s/.*xf86-video-//`"
  for drv in $XORG_DRIVERS; do
    $SCRIPTS/build xf86-video-$drv
  done
fi
