#!/bin/sh

. config/options

$SCRIPTS/build xf86-input-evdev
$SCRIPTS/build xf86-input-synaptics

[ "$XORG_DRIVERS" = all ] && XORG_DRIVERS="`ls -d $ROOT/$PACKAGES/xf86-video-* | sed s/.*xf86-video-//`"
for drv in $XORG_DRIVERS; do
  [ "$drv" = nvidia -a "$NVIDIA" != yes ] && continue
  [ "$drv" = omapfb -a "$TARGET_ARCH" != arm ] && continue
  $SCRIPTS/build xf86-video-$drv
done
