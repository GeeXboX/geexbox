#!/bin/sh

. config/options

$SCRIPTS/build vdr
$SCRIPTS/build ffmpeg
$SCRIPTS/build em8300 

VDR_DIR=`basename $BUILD/vdr-1*`

cd $BUILD/$1*
make all \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="." \
  LOCALEDIR="./locale" \
  FFMDIR="$LIB_PREFIX" \
  EM8300="$LIB_PREFIX/include" \
  CXX="$CXX" \
  CXXFLAGS="$CXXFLAGS"
