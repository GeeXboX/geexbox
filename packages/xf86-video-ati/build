#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
xorg_drv_configure_prepend
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --enable-dri \
            --enable-exa \
            --enable-kms \
            --with-xorg-module-dir=$XORG_PATH_MODULES
make
strip_libs src
make_install
