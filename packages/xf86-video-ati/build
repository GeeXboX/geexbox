#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-dri \
            --disable-exa \
            --with-xorg-module-dir=$XORG_PATH_MODULES
make
$STRIP src/.libs/theatre_drv.so
$STRIP src/.libs/theatre200_drv.so
$STRIP src/.libs/theatre_detect_drv.so
