#!/bin/sh

. config/options

case $TARGET_ARCH in
  i386)
    TGT=x86-linux-gcc
    ;;

  x86_64)
    TGT=x86_64-linux-gcc
    ;;

  powerpc)
    TGT=generic-gnu
    ;;

  powerpc64)
    TGT=ppc64-linux-gcc
    ;;

  arm)
    TGT=armv7-linux-gcc
    ;;
esac

export MAKEFLAGS=-j1
export LD="$CC"

cd $BUILD/$1*
./configure --target=$TGT \
            --prefix=/usr \
            --enable-shared \
            --enable-codec-srcs \
            --enable-vp8 \
            --enable-postproc \
            --enable-multithread \
            --enable-spatial-resampling \
            --enable-runtime-cpu-detect \
            --disable-examples \

make
make_install
