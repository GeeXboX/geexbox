#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build zlib

[ "$TARGET_ARCH" = x86_64 ] && export CFLAGS="$CFLAGS -fPIC"

cd $BUILD/$1*
./configure \
            --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --with-zlib
make
make install
