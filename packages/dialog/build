#!/bin/sh

. config/options

cd $BUILD/$1*
export ac_cv_path_NCURSES_CONFIG="$ROOT/$TOOLCHAIN/bin/ncurses-config"
do_configure \
            --disable-nls \
            --without-dbmalloc \
            --without-dmalloc \
            --with-ncurses \
            --disable-widec \
            --disable-rc-file \
            --disable-Xdialog \
            --disable-form \
            --disable-mixedform \
            --disable-tailbox
make
make_install 
