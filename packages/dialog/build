#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build ncurses

cd $BUILD/$1*
export ac_cv_path_NCURSES_CONFIG="$ROOT/$TOOLCHAIN/bin/ncurses-config"
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-nls \
            --without-dbmalloc \
            --without-dmalloc \
            --with-ncurses \
            --disable-widec \
            --disable-rc-file \
            --disable-Xdialog \
            --disable-form \
            --disable-mixedform \
            --disable-tailbox
make 
