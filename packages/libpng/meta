PKG_NAME=libpng
PKG_VERSION=1.5.12
PKG_URL="${SFNET_SRCS}/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain zlib"
PKG_RUN_DEPENDS="$TARGET_LIBC zlib"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="PNG library"
PKG_LONGDESC="libpng is a library implementing an interface for reading and writing PNG (Portable Network Graphics) format files."
