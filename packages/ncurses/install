#!/bin/sh

. config/options

SO=`ls -d $BUILD/$1*`/lib/libncurses.so.5
S1=`ls -d $BUILD/$1*`/lib/libmenu.so.5
S2=`ls -d $BUILD/$1*`/lib/libform.so.5
S3=`ls -d $BUILD/$1*`/lib/libpanel.so.5

if [ "$LIBSTRIP" = yes ]; then
  $SCRIPTS/build dialog
  $SCRIPTS/build util-linux-ng
  [ "$GDB" = yes ] && $SCRIPTS/build gdb

  libstrip $SO $BUILD/$1*/lib/libncurses.a "$BUILD/dialog*/dialog $BUILD/gnu-fdisk*/src/cfdisk $BUILD/gdb*/objdir/gdb/gdb $BUILD/sqlite*/.libs/sqlite3"
else
  SO=`ls -d $BUILD/$1*`/lib/libncurses.so.5
fi

mkdir -p $INSTALL/usr/lib
cp $SO $INSTALL/usr/lib/libncurses.so.5
cp $S1 $INSTALL/usr/lib/libmenu.so.5
cp $S2 $INSTALL/usr/lib/libform.so.5
cp $S3 $INSTALL/usr/lib/libpanel.so.5

mkdir -p $INSTALL/usr/share/terminfo/l
TERMINFO=$INSTALL/usr/share/terminfo LD_LIBRARY_PATH=`ls -d $BUILD/$1*/ncurses-host/lib`:$LD_LIBRARY_PATH $BUILD/$1*/ncurses-host/progs/tic -xe linux $BUILD/$1*/misc/terminfo.src
