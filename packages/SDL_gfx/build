#!/bin/sh

. config/options

$SCRIPTS/build toolchain

if [ "$TARGET_ARCH" = i386 ]; then
  MMX_CONFIG="--enable-mmx"
else
  MMX_CONFIG="--disable-mmx"
fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            $MMX_CONFIG
make
strip_libs .libs
make install
