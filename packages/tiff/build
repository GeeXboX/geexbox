#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --enable-largefiles \
            --disable-mdi \
            --disable-cxx \
            --with-jpeg-lib-dir=$LIB_PREFIX/lib \
            --with-jpeg-include-dir=$LIB_PREFIX/include \
            --without-x
make
strip_libs libtiff
make_install
