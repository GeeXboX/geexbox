#!/bin/sh

. config/options

$SCRIPTS/install ffmpeg

mkdir -p $INSTALL/usr/lib/vdr
cp -a $BUILD/$1*/lib$1*.so.* $INSTALL/usr/lib/vdr

mkdir -p $INSTALL/usr/share/vdr/locale
cp -a $BUILD/$1*/locale/* $INSTALL/usr/share/vdr/locale

if [ "$XORG" = yes ]; then
  VO_DRIVER="xv"
  mkdir -p $INSTALL/usr/bin
  cp $BUILD/$1*/ShmClient $INSTALL/usr/bin
else
  VO_DRIVER="fb"
fi

NAME=`echo $1 | sed s/vdr-//`
mkdir -p $INSTALL/etc/vdr/plugins.d
echo "PLUGIN=${NAME}" > $INSTALL/etc/vdr/plugins.d/50_$NAME
echo "OPTIONS=\"-vo $VO_DRIVER: -ao alsa:\"" >> \
  $INSTALL/etc/vdr/plugins.d/50_$NAME
if [ $VDR_OUTPUT != $NAME ]; then
  echo "ENABLED=no" >> $INSTALL/etc/vdr/plugins.d/50_$NAME
fi
