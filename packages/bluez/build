#!/bin/sh

. config/options

cd $BUILD/$1*

if [ $DEBUG = yes ]; then
  DEBUG_CONFIG="--enable-debug"
else
  DEBUG_CONFIG="--disable-debug"
fi
if pkg_uses $1 devtools; then
  DEVTOOLS_CONFIG="--enable-bccmd --enable-test --enable-tools"
else
  DEVTOOLS_CONFIG="--disable-bccmd --disable-test --disable-tools"
fi

do_configure \
            --localstatedir=/var \
            --disable-dependency-tracking \
            --disable-network \
            --disable-serial \
            --disable-input \
            --disable-audio \
            --disable-service \
            --disable-gstreamer \
            --enable-alsa \
            --disable-usb \
            --disable-netlink \
            --disable-hidd \
            --disable-pand \
            --disable-dund \
            --disable-configfiles \
            --disable-udevrules \
            $DEBUG_CONFIG \
            $DEVTOOLS_CONFIG \

make
make_install
