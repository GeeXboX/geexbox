#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build ecore
$SCRIPTS/build edje
$SCRIPTS/build eet
$SCRIPTS/build eina
$SCRIPTS/build elementary
$SCRIPTS/build elementary-theme
$SCRIPTS/build embryo
$SCRIPTS/build evas

if [ "$XORG" = yes ]; then
  $SCRIPTS/build xorg-libs
  WITH_X="--with-x --enable-software-x11 --enable-software-16-x11 --enable-opengl-x11"
fi

cd $BUILD/$1*

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --exec-prefix=/usr \
            --datadir=/usr/share \
            --enable-fb \
            $WITH_X \

make
