#!/bin/sh

. config/options

require_cxx $1

if pkg_uses $1 xorg; then
  WITH_X="--with-x --enable-software-x11 --enable-software-16-x11 --enable-opengl-x11"
fi

if pkg_uses $1 directfb; then
  CFG_DFB="--enable-directfb"
else
  CFG_DFB="--disable-directfb"
fi

if pkg_uses $1 sdl; then
  CFG_SDL="--enable-software-sdl"
  if pkg_uses $1 xorg && ! pkg_uses $1 arm; then
    CFG_SDL="$CFG_SDL --enable-opengl-sdl"
  fi
else
  CFG_SDL="--disable-software-sdl --disable-opengl-sdl"
fi

cd $BUILD/$1*
do_configure \
            --datadir=/usr/share \
            --enable-fb \
            $CFG_DFB \
            $CFG_SDL \
            $WITH_X \

make
make_install
