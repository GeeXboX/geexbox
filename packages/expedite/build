#!/bin/sh

. config/options

if [ "$XORG" = yes ]; then
  WITH_X="--with-x --enable-software-x11 --enable-software-16-x11 --enable-opengl-x11"
fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --datadir=/usr/share \
            --enable-fb \
            $WITH_X \

make
make_install
