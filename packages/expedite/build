#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build ecore
$SCRIPTS/build edje
$SCRIPTS/build eet
$SCRIPTS/build eina
$SCRIPTS/build elementary
$SCRIPTS/build elementary-theme
$SCRIPTS/build embryo
$SCRIPTS/build evas

cd $BUILD/$1*

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \

make
strip_libs src
make install

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \

make
