#!/bin/sh

. config/options

$SCRIPTS/install ecore
$SCRIPTS/install edje
$SCRIPTS/install eet
$SCRIPTS/install eina
$SCRIPTS/install elementary
$SCRIPTS/install elementary-theme
$SCRIPTS/install embryo
$SCRIPTS/install evas

mkdir -p $INSTALL/usr/bin
cp $BUILD/$1*/src/bin/expedite $INSTALL/usr/bin

mkdir -p $INSTALL/usr/share/expedite/data
cp $BUILD/$1*/data/*.png $INSTALL/usr/share/expedite/data
cp $BUILD/$1*/data/*.ttf $INSTALL/usr/share/expedite/data
cp $BUILD/$1*/data/fonts.dir $INSTALL/usr/share/expedite/data
cp $BUILD/$1*/data/fonts.alias $INSTALL/usr/share/expedite/data
