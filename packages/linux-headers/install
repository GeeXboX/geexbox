#!/bin/sh

. config/options

$SCRIPTS/unpack linux

HEADERS=$SYSROOT_PREFIX/usr/include
mkdir -p $HEADERS

case $TARGET_ARCH in
  i386)
    EXTRA_DIRECTORIES="asm-i386"
    ;;

  x86_64)
    EXTRA_DIRECTORIES="asm-x86_64"
    ;;

  powerpc)
    EXTRA_DIRECTORIES="asm-powerpc"
    ;;
esac

for d in linux asm-generic asm $EXTRA_DIRECTORIES; do
  cp -pPR $(kernel_path)/include/$d $HEADERS/
done
