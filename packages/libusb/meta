PKG_NAME=libusb
PKG_URL="http://freefr.dl.sourceforge.net/sourceforge/libusb/libusb-1.0.1.tar.bz2"
PKG_VERSION=1.0.1
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libusb-compat"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=required
PKG_SECTION=libs
PKG_SHORTDESC="userspace USB programming library"
PKG_LONGDESC="Library for programming USB applications without the knowledge of Linux kernel internals."
