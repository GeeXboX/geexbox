PKG_NAME=xkbcomp
PKG_URL="http://xorg.freedesktop.org/releases/individual/app/xkbcomp-1.1.1.tar.bz2"
PKG_VERSION=1.1.1
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11 libxkbfile"
PKG_RUN_DEPENDS="$TARGET_LIBC libX11 libxkbfile"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORT_DESC="XKB keyboard description compiler"
PKG_LONG_DESC="The  xkbcomp  keymap  compiler  converts a description of an XKB keymap into one of several output formats.   The most common use  for  xkbcomp is  to create a compiled keymap file (.xkm extension) which can be read directly by XKB-capable X servers or utilities."
