#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build module-init-tools

unset LDFLAGS
DEPMOD=`ls -d $ROOT/$BUILD/module-init-tool*/host/depmod`
LINUX=$(kernel_path)
MODDIR=$LINUX/modules

rm -rf $MODDIR
mkdir -p $MODDIR

case $TARGET_ARCH in
  i386|x86_64)  IMAGE=bzImage  ;;
  powerpc)      IMAGE=vmlinux  ;;
esac
make $IMAGE -C "$LINUX"
make modules -C "$LINUX"
make INSTALL_MOD_PATH=$MODDIR DEPMOD=$DEPMOD modules_install -C "$LINUX"
rm -f $MODDIR/lib/modules/*/build
rm -f $MODDIR/lib/modules/*/source
