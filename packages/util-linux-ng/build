#!/bin/sh

. config/options

$SCRIPTS/build toolchain

export gt_cv_func_gnugettext1_libintl=no

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --target=$TARGET_NAME \
            --prefix=$LIB_PREFIX \
            --enable-static \
            --disable-shared

make -C fdisk sfdisk
make -C shlibs/blkid
make -C shlibs/blkid install
make -C shlibs/uuid
make -C shlibs/uuid install
