#!/bin/sh

. config/options

$SCRIPTS/build toolchain

export gt_cv_func_gnugettext1_libintl=no

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --target=$TARGET_NAME

make -C fdisk sfdisk
make -C shlibs/uuid

cp ./shlibs/uuid/uuid.pc $LIB_PREFIX/lib/pkgconfig
