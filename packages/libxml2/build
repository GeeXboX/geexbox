#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build zlib

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-ipv6=no \
            --without-python \
            --with-zlib
make
strip_libs .libs
make install
