#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib
cp -PR $BUILD/$1*/.libs/libxml2*.so* $INSTALL/usr/lib

mkdir -p `ls -d $INSTALL/usr/lib/python*`/site-packages/libxml2
cp $BUILD/$1*/python/libxml2.pyc $INSTALL/usr/lib/python*/site-packages/libxml2
cp $BUILD/$1*/python/drv_libxml2.pyc $INSTALL/usr/lib/python*/site-packages/libxml2
cp $BUILD/$1*/python/__init__.pyc $INSTALL/usr/lib/python*/site-packages/libxml2
cp $LIB_PREFIX/lib/python*/site-packages/libxml2/libxml2mod.so $INSTALL/usr/lib/python*/site-packages/libxml2
