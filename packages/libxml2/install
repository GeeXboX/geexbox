#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib
cp -PR $BUILD/$1*/.libs/libxml2*.so* $INSTALL/usr/lib

mkdir -p `ls -d $INSTALL/usr/lib/python*`/site-packages/libxml2
cp $LIB_PREFIX/lib/python*/site-packages/libxml2.py $INSTALL/usr/lib/python*/site-packages/libxml2
cp $LIB_PREFIX/lib/python*/site-packages/drv_libxml2.py $INSTALL/usr/lib/python*/site-packages/libxml2
cp $LIB_PREFIX/lib/python*/site-packages/libxml2mod.so $INSTALL/usr/lib/python*/site-packages/libxml2
