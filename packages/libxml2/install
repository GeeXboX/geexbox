#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib
cp -PR $BUILD/$1*/.libs/libxml2*.so* $INSTALL/usr/lib

PYTHON_SITE_PACKAGES="`ls -d $INSTALL/usr/lib/python*`/site-packages"

mkdir -p $PYTHON_SITE_PACKAGES/libxml2
cp $BUILD/$1*/python/libxml2.pyc $PYTHON_SITE_PACKAGES/libxml2
cp $BUILD/$1*/python/drv_libxml2.pyc $PYTHON_SITE_PACKAGES/libxml2
cp $LIB_PREFIX/lib/python*/site-packages/libxml2/libxml2mod.so $PYTHON_SITE_PACKAGES/libxml2
echo "from libxml2 import *" > $PYTHON_SITE_PACKAGES/libxml2/__init__.py
