#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib
cp -PR $BUILD/$1*/.libs/libxml2*.so* $INSTALL/usr/lib

SITE_PACKAGES="`ls -d $INSTALL/usr/lib/python*`/site-packages"

mkdir -p $SITE_PACKAGES
cp $BUILD/$1*/python/libxml2.pyc $SITE_PACKAGES
cp $BUILD/$1*/python/drv_libxml2.pyc $SITE_PACKAGES
cp $LIB_PREFIX/lib/python*/site-packages/libxml2/libxml2mod.so $SITE_PACKAGES
