#!/bin/sh

. config/options

$SCRIPTS/build toolchain

apply_patch () {
  cat $PACKAGES/$1/patches.vdpau/$2 | patch -d \
      `echo $BUILD/$1* | cut -f1 -d\ ` -p1
}

if [ "$VDPAU" = yes ]; then
  echo "## Applying VDPAU patches"
  for i in 30_vdpau-r278.diff 40_vdpau-deint-stillimage.diff; do
    apply_patch $1 $i
  done
fi

exit 0
