#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xorg-protocols
$SCRIPTS/build libXrender

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --enable-static \
            --enable-malloc0returnsnull
make
$STRIP src/.libs/libXrandr.so*
make install
