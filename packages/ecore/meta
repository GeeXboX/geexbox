PKG_NAME=ecore
PKG_VERSION=0.9.9.49539
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain eina eet evas GLib curl gnutls"
PKG_DEPENDS="$TARGET_LIBC eina eet evas GLib curl"
if [ "$TARGET_LIBC" = "uClibc" ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libiconv"
  PKG_DEPENDS="$PKG_DEPENDS libiconv"
fi
if [ "$XORG" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libX11"
  PKG_DEPENDS="$PKG_DEPENDS libX11"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="Core abstraction layer for enlightenment DR 0.17"
PKG_LONG_DESC="This is the core event abstraction layer and X abstraction layer that makes doing selections, Xdnd, general X stuff, and event loops, timeouts and idle handlers fast, optimized, and convenient. It's a separate library so anyone can make use of the work put into Ecore to make this job easy for applications."
