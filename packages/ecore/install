#!/bin/sh

. config/options

[ "$UPNP" = yes ] && $SCRIPTS/install GLib

ECORE_LIBS="ecore ecore_evas ecore_config ecore_ipc ecore_imf ecore_imf_evas ecore_input ecore_input_evas ecore_file ecore_con ecore_fb ecore_txt"
[ "$XORG" = yes ] && ECORE_LIBS="$ECORE_LIBS ecore_x"

mkdir -p $INSTALL/usr/lib
for i in $ECORE_LIBS; do
  cp -PR $BUILD/$1*/src/lib/$i/.libs/*.so*[.0-9] $INSTALL/usr/lib
done
