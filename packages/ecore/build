#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build openssl
$SCRIPTS/build curl
$SCRIPTS/build eina
$SCRIPTS/build eet
$SCRIPTS/build evas

if [ "$XORG" = yes ]; then
  $SCRIPTS/build xorg-libs
  WITH_X="--with-x --enable-ecore-evas-software-16-x11 --enable-ecore-evas-opengl-x11"
else
  WITH_X="--disable-ecore-x --with-iconv-link=-liconv"
fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --enable-ecore-fb \
            --disable-ecore-x-xcb \
            --disable-ecore-evas-software-xcb \
            --disable-ecore-evas-xrender-xcb \
            --enable-ecore-evas \
            --with-iconv-link="-liconv" \
            $WITH_X \

make
strip_libs src
make install
