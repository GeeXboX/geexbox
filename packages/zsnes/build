#!/bin/sh

. config/options

require_cxx $1

$SCRIPTS/build toolchain
$SCRIPTS/build SDL
$SCRIPTS/build zlib

export HOST_CXX
export HOST_CXXFLAGS

cd $BUILD/$1*/src
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --sysconfdir=/etc \
            --without-x \
            --disable-release \
            --disable-cpucheck force_arch=$TARGET_ARCH \
            --disable-opengl \
            --disable-jma \
            --disable-libpng \
            --disable-debug \
            --disable-debugger
make
