#!/bin/sh

. config/options

$SCRIPTS/build zlib
$SCRIPTS/build libxml2
$SCRIPTS/build GLib

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug --enable-gst-debug"
else
  DEBUG_CONFIG="--disable-debug --disable-gst-debug"
fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-largefile \
            --disable-nls \
            --disable-rpath \
            --enable-parse \
            --disable-trace \
            --disable-valgrind \
            --disable-docbook \
            --disable-check \
            $DEBUG_CONFIG \

make
strip_libs .
make install
