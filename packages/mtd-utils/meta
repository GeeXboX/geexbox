PKG_NAME=mtd-utils
PKG_VERSION=1.5.0
PKG_URL_PROTO=git
PKG_URL="git://git.infradead.org/mtd-utils.git"
PKG_URL_REV=v${PKG_VERSION}
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC e2fsprogs acl lzo zlib"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=filesystem
PKG_SHORTDESC="Memory Technology Device Utilities"
PKG_LONGDESC="Utilities for manipulating memory technology devices, such as flash memory, Disk-On-Chip, or ROM. Includes mkfs.jffs2, a tool to create JFFS2 (journaling flash file system) filesystems."
