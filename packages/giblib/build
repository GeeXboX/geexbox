#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build imlib2

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --enable-static \

make
make install

cp giblib-config $ROOT/$TOOLCHAIN/bin
sed -i "s%-L/usr/X11R6/lib%%" $ROOT/$TOOLCHAIN/bin/giblib-config
sed -i "s%--rpath $LIB_PREFIX/lib%%" $ROOT/$TOOLCHAIN/bin/giblib-config
