#!/bin/sh

. config/options

$SCRIPTS/install SDL_image
$SCRIPTS/install SDL_ttf
$SCRIPTS/install SDL_mixer

PYTHON_LIB_DIR=`ls -d $INSTALL/usr/lib/python*`

mkdir -p $PYTHON_LIB_DIR/site-packages/pygame
cp $BUILD/$1*/build/lib*/pygame/*.so $PYTHON_LIB_DIR/site-packages/pygame
cp $BUILD/$1*/build/lib*/pygame/*.py $PYTHON_LIB_DIR/site-packages/pygame
