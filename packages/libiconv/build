#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build gettext

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=`ls -d $ROOT/$BUILD/$1*`/objdir \
            --enable-static \
            --disable-shared \
            --disable-nls \
            --enable-extra-encodings
make
make install
