#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build gettext

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --disable-nls \
            --enable-extra-encodings
make
strip_libs lib
make install
