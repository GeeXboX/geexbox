#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1-*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-largefiles \
            --enable-debug=no \
            --disable-man \
            --disable-gtk-doc
make
make install
