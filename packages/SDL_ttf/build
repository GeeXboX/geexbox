#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build freetype

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --with-freetype-prefix=$LIB_PREFIX \
            --without-x
make
$STRIP .libs/*.so*
make install
