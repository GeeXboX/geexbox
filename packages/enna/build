#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build freetype
$SCRIPTS/build evas
$SCRIPTS/build ecore
$SCRIPTS/build embryo
$SCRIPTS/build edje
$SCRIPTS/build curl
$SCRIPTS/build libxml2
$SCRIPTS/build libplayer

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --exec-prefix=/usr \
            --sysconfdir=/etc \
            --datadir=/usr/share \
            --disable-static \
            --enable-shared \
            --disable-emotion-backend \
            --enable-libplayer-backend \
            --enable-libcurl \
            --enable-libxml2 \
            --disable-lms-module \
            --enable-amazon-module \
            --enable-shoutcast-module \

make
