#!/bin/sh

. config/options

[ "$TARGET_LIBC" = "uClibc" ] && EXTRA_LIBS="$EXTRA_LIBS -lintl"

if [ "$GAMES" = yes -o "$EMULATORS" = yes ]; then
  GAMES_OPT="--enable-activity-games"
else
  GAMES_OPT="--disable-activity-games"
fi

if [ "$VDR" = yes ]; then
  VDR_OPT="--enable-activity-tv --enable-libsvdrp"
else
  VDR_OPT="--disable-activity-tv --disable-libsvdrp"
fi

cd $BUILD/$1*
LIBS="$EXTRA_LIBS" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --enable-static-modules \
            --disable-theme \
            --enable-browser-upnp \
            $GAMES_OPT \
            $VDR_OPT
make
make_install
