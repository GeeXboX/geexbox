#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build freetype
$SCRIPTS/build evas
$SCRIPTS/build ecore
$SCRIPTS/build embryo
$SCRIPTS/build edje
$SCRIPTS/build elementary
$SCRIPTS/build curl
$SCRIPTS/build libxml2
$SCRIPTS/build libplayer
$SCRIPTS/build libvalhalla
$SCRIPTS/build libxrandr
$SCRIPTS/build libcddb
$SCRIPTS/build lirc
$SCRIPTS/build gettext

if [ "$GAMES" = yes ]; then
  $SCRIPTS/build efreet
  GAMES_OPT="--enable-activity-games --enable-efreet"
else
  GAMES_OPT="--disable-activity-games --disable-efreet"
fi

if [ "$VDR" = yes ]; then
  $SCRIPTS/build libsvdrp
  VDR_OPT="--enable-activity-tv --enable-libsvdrp"
else
  VDR_OPT="--disable-activity-tv --disable-libsvdrp"
fi

cd $BUILD/$1*
LIBS="-lintl -lavformat -lavutil -lsqlite3 -lexif -lnfo" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --exec-prefix=/usr \
            --sysconfdir=/etc \
            --datadir=/usr/share \
            --disable-static \
            --enable-shared \
            --enable-static-modules \
            --disable-theme \
            --enable-activity-configuration \
            --enable-activity-music \
            --enable-activity-photo \
            --enable-activity-video \
            --enable-activity-weather \
            --enable-browser-cdda \
            --enable-browser-dvd \
            --enable-browser-localfiles \
            --disable-browser-netstreams \
            --disable-browser-shoutcast \
            --disable-browser-upnp \
            --enable-browser-valhalla \
            --enable-input-keyboard \
            --disable-volume-hal \
            --disable-volume-mtab \
            --enable-libcddb \
            --enable-libcurl \
            --enable-libxml2 \
            --enable-libxrandr \
            --enable-shave \
            $GAMES_OPT \
            $VDR_OPT
make
