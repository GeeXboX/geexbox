#!/bin/sh
#
# configure and start Enna
#
# runlevels: geexbox, debug

if [ -f /usr/bin/enna ]; then
  echo "### Starting Enna ###"
  mkdir -p /root/.enna
  cp -f /etc/enna.cfg /root/.enna/

  if [ -f /var/use_xorg ]; then
    DISPLAY=:0.0 enna -f
  else
    sed -i 's%engine=.*%engine=fb%' /root/.enna/enna.cfg
    enna -f
  fi
fi

exit 0
