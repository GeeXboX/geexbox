#!/bin/sh

. config/options

$SCRIPTS/install evas
$SCRIPTS/install ecore
$SCRIPTS/install embryo
$SCRIPTS/install edje
$SCRIPTS/install curl
$SCRIPTS/install libxml2
$SCRIPTS/install libplayer

mkdir -p $INSTALL/usr/bin
cp $BUILD/$1*/src/bin/enna $INSTALL/usr/bin

mkdir -p $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/amazon/.libs/enna_module_amazon.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/backend/libplayer/.libs/enna_module_libplayer.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/browser/localfiles/.libs/enna_module_localfiles.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/browser/shoutcast/.libs/enna_module_shoutcast.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/browser/netstreams/.libs/enna_module_netstreams.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/input/lirc/.libs/enna_module_lirc.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/music/.libs/enna_module_music.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/photo/.libs/enna_module_photo.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/video/.libs/enna_module_video.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/volumes/polling/.libs/enna_module_polling.so \
   $INSTALL/usr/lib/enna/modules

mkdir -p $INSTALL/usr/share/enna/theme
cp $BUILD/$1*/data/theme/default/default.edj $INSTALL/usr/share/enna/theme
