#!/bin/sh

. config/options

$SCRIPTS/install evas
$SCRIPTS/install ecore
$SCRIPTS/install embryo
$SCRIPTS/install edje
$SCRIPTS/install e_dbus
$SCRIPTS/install elementary
$SCRIPTS/install libxml2
$SCRIPTS/install libplayer
$SCRIPTS/install libvalhalla
$SCRIPTS/install enna-theme
$SCRIPTS/install lirc

mkdir -p $INSTALL/usr/bin
cp $BUILD/$1*/src/bin/enna $INSTALL/usr/bin

mkdir -p $INSTALL/usr/lib/enna/modules
if [ "$GAMES" = yes ]; then
cp $BUILD/$1*/src/modules/activity/music/.libs/activity_games.so \
   $INSTALL/usr/lib/enna/modules
fi
cp $BUILD/$1*/src/modules/activity/music/.libs/activity_music.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/activity/photo/.libs/activity_photo.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/activity/video/.libs/activity_video.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/activity/weather/.libs/activity_weather.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/browser/dvd/.libs/browser_dvd.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/backend/libplayer/.libs/backend_libplayer.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/browser/localfiles/.libs/browser_localfiles.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/browser/netstreams/.libs/browser_netstreams.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/browser/valhalla/.libs/browser_valhalla.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/input/lirc/.libs/input_lirc.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/metadata/amazon/.libs/metadata_amazon.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/metadata/tmdb/.libs/metadata_tmdb.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/metadata/tvdb/.libs/metadata_tvdb.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/metadata/localfiles/.libs/metadata_localfiles.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/metadata/libplayer/.libs/metadata_libplayer.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/volume/hal/.libs/volume_hal.so \
   $INSTALL/usr/lib/enna/modules
cp $BUILD/$1*/src/modules/volume/mtab/.libs/volume_mtab.so \
   $INSTALL/usr/lib/enna/modules

mkdir -p $INSTALL/etc
cp $PACKAGES/enna/config/enna.cfg $INSTALL/etc
