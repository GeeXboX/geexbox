PKG_NAME=setxkbmap
PKG_VERSION=1.1.0
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="$TARGET_LIBC xkeyboard-config"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORT_DESC="set the keyboard using the X Keyboard Extension"
PKG_LONG_DESC="The setxkbmap command maps the keyboard to use the layout determined by the options specified on the command line. An XKB keymap is constructed from a number of components which are compiled  only  as  needed."
