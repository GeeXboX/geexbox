PKG_NAME=libxkbfile
PKG_URL="http://xorg.freedesktop.org/releases/individual/lib/libxkbfile-1.0.6.tar.bz2"
PKG_VERSION=1.0.6
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC libX11"
PKG_BUILD_DEPENDS="toolchain kbproto libX11"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="X11 keyboard file manipulation library"
PKG_LONGDESC="libxkbfile provides an interface to read and manipulate description files for XKB, the X11 keyboard configuration extension."
