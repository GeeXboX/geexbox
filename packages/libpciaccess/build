#!/bin/sh

. config/options

$SCRIPTS/build toolchain

export ac_cv_header_asm_mtrr_h=set

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --with-pciids-path=/usr/share \
            --with-zlib \

make
$STRIP src/.libs/libpciaccess.so*
make install
