#!/bin/sh

BACKGROUND=/usr/share/mplayer/background.avi
BACK_WIDE=/usr/share/mplayer/background-wide.avi

# If widescreen and suitable file exists, use a widescreen background
[ -f /tmp/widescreen -a -f "$BACK_WIDE" ] && BACKGROUND="$BACK_WIDE"

mplayer $BACKGROUND -loop 0 >/dev/null 2>&1
echo $? > /tmp/mp_result
