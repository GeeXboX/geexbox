#!/bin/sh
#
# start MPlayer's utilities
#
# runlevels: geexbox, debug, configure

echo "### Starting MPlayer's utilities ###"

# create the mplayer control pipe for external programs
mkfifo /var/mp_control

# start the autolaunching script
. /etc/autoplay
[ $AUTOPLAY == "yes" ] && echo -n "" > /var/autoplay

# proceed to dvdnav setting
. /etc/dvd
[ $DVDNAV == "yes" ] && echo -n "" > /var/dvdnav

# set unrar exec path, if any
[ -x /usr/bin/unrar ] && mp_set_option unrarexec /usr/bin/unrar

# start the file copy daemon
/usr/bin/cpd &

# Dump MPlayer revision/version for creating libmenu info text file
[ ! -e /etc/mp_version ] && mplayer -ao null -vo null | grep MPlayer | cut -f2 -d\  > /etc/mp_version

exit 0
