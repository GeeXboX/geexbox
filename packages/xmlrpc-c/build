#!/bin/sh

. config/options

cd $BUILD/$1*

mv $ROOT/$TOOLCHAIN/bin/xml2-config $ROOT/$TOOLCHAIN/bin/temp-xml2-config
ln -s $LIB_PREFIX/bin/xml2-config $ROOT/$TOOLCHAIN/bin/xml2-config

do_configure --enable-libxml2-backend

make || mv $ROOT/$TOOLCHAIN/bin/temp-xml2-config $ROOT/$TOOLCHAIN/bin/xml2-config
mv $ROOT/$TOOLCHAIN/bin/temp-xml2-config $ROOT/$TOOLCHAIN/bin/xml2-config
make_install

sed -i "s:/usr/include:$LIB_PREFIX/include:g" .install/usr/bin/xmlrpc-c-config
sed -i "s:/usr/lib:$LIB_PREFIX/lib:g" .install/usr/bin/xmlrpc-c-config
