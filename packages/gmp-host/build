#!/bin/sh

. config/options

get_meta gmp 

$SCRIPTS/unpack gmp

export CFLAGS="$CFLAGS -fPIC"
export CPPFLAGS="$CPPFLAGS -fexceptions"

cd $BUILD/${PKG_NAME}-${PKG_VERSION}

mkdir -p objdir-host
cd objdir-host

setup_toolchain host

do_configure host \
	--target=$TARGET_NAME \
	--enable-mpbsd \
	--enable-cxx \

make
#make check
make_install toolchain

