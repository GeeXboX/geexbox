#!/bin/sh

. config/options

get_meta $(echo $1 | sed -e "s/-host//")

$SCRIPTS/unpack $PKG_NAME

export CFLAGS="$CFLAGS -fPIC"
export CPPFLAGS="$CPPFLAGS -fexceptions"

cd $BUILD/${PKG_NAME}-${PKG_VERSION}

mkdir -p objdir-host
cd objdir-host

setup_toolchain host

do_configure host \
	--target=$TARGET_NAME \
	--enable-mpbsd \
	--enable-cxx \

make
#make check
make_install toolchain

