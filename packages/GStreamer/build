#!/bin/sh

. config/options

$SCRIPTS/build liboil
$SCRIPTS/build gstreamer
$SCRIPTS/build gst-plugins-base
$SCRIPTS/build gst-plugins-good
$SCRIPTS/build gst-ffmpeg
pkg_uses $1 xorg && $SCRIPTS/build gst-plugins-gl
if pkg_uses $1 arm; then
  pkg_uses $1 openmax && $SCRIPTS/build gst-openmax
  $SCRIPTS/build gst-dsp
  $SCRIPTS/build gst-omapfb
fi

exit 0
