#!/bin/sh

. config/options

$SCRIPTS/install liboil
$SCRIPTS/install gstreamer
$SCRIPTS/install gst-plugins-base
$SCRIPTS/install gst-plugins-good
$SCRIPTS/install gst-ffmpeg
[ "$XORG" = yes ] && $SCRIPTS/install gst-plugins-gl
if [ "$TARGET_ARCH" = arm ]; then
  [ "$OPENMAX" = yes ] && $SCRIPTS/install gst-openmax
  $SCRIPTS/install gst-dsp
  $SCRIPTS/install gst-omapfb
fi

exit 0
