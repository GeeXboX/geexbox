#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-dri \
            --with-xorg-module-dir=$XORG_PATH_MODULES
sed -i 's%.*XF86DRI_MM.*%%' config.h
make
$STRIP src/ch7017/.libs/ch7017.so
$STRIP src/ch7xxx/.libs/ch7xxx.so
$STRIP src/ivch/.libs/ivch.so
$STRIP src/sil164/.libs/sil164.so
$STRIP src/tfp410/.libs/tfp410.so
