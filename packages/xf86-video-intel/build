#!/bin/sh

. config/options

export CFLAGS="$CFLAGS -I$BUILD/$1*/src/xvmc"

cd $BUILD/$1*
xorg_drv_configure_prepend
do_configure \
            --enable-dri \
            --enable-kms-only \
            --disable-xvmc \
            --enable-shave \
            --disable-debug \
            --disable-video-debug \
            --with-xorg-module-dir=$XORG_PATH_MODULES
make
make_install
