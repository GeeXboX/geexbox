#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libdrm
$SCRIPTS/build libpciaccess
$SCRIPTS/build libXvMC

CFLAGS="$CFLAGS -I$BUILD/$1*/src/xvmc"

cd $BUILD/$1*
xorg_drv_configure_prepend
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --enable-dri \
            --enable-kms-only \
            --disable-xvmc \
            --enable-shave \
            --disable-debug \
            --disable-video-debug \
            --with-xorg-module-dir=$XORG_PATH_MODULES
make
strip_libs src
make_install
