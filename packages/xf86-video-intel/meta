PKG_NAME=xf86-video-intel
PKG_VERSION=2.9.1
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain xorg-server libXvMC libdrm libpciaccess"
PKG_DEPENDS="$TARGET_LIBC xorg-server libXvMC libdrm libpciaccess"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORT_DESC="X.Org X server -- Intel i8xx, i9xx display driver"
PKG_LONG_DESC="This package provides the driver for the Intel i8xx and i9xx family of chipsets, including i810, i815, i830, i845, i855, i865, i915, i945 and i965 series chips. This package also provides XvMC (XVideo Motion Compensation) drivers for i810/i815 and i9xx and newer chipsets."
