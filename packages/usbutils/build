#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build zlib

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --prefix=/usr \

make
sed 's%usbids=.*%usbids=/usr/share/misc/usb.ids%' usbutils.pc > $LIB_PREFIX/lib/pkgconfig/usbutils.pc
cp -f usb.ids $LIB_PREFIX/share/
