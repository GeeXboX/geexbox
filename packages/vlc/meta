PKG_NAME=vlc
PKG_VERSION=1.1.1
PKG_URL="http://sourceforge.net/projects/vlc/files/$PKG_VERSION/vlc-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain zlib ffmpeg freetype alsa-lib faad2 libpng dbus libcddb mpc fontconfig libxml2 udev libgcrypt gnutls sqlite v4l-utils libdvbpsi libcdio zvbi libogg libvorbis libtheora libshout libass libmad libdvdread libdvdnav libva"
PKG_RUN_DEPENDS="$TARGET_LIBC zlib ffmpeg freetype alsa-lib libpng faad2 dbus libcddb fontconfig libxml2 udev libgcrypt gnutls sqlite v4l-utils libdvbpsi libcdio zvbi libogg libvorbis libtheora libshout libass libmad libdvdread libdvdnav libva"

PKG_USE="sdl xorg live555 openmax directfb pulseaudio devtools"
PKG_DEPENDS_sdl="SDL SDL-image"
PKG_DEPENDS_xorg="libX11 libXv libxcb xcb-utils libXxf86vm mesa"
PKG_BUILD_DEPENDS_live555="live"
PKG_DEPENDS_openmax="libomxil-bellagio"
PKG_DEPENDS_directfb="DirectFB"
PKG_DEPENDS_pulseaudio="pulseaudio"

PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="VideoLAN multimedia player and streamer"
PKG_LONGDESC="VLC is the VideoLAN project's media player. It plays MPEG, MPEG2, MPEG4, DivX, MOV, WMV, QuickTime, mp3, Ogg/Vorbis files, DVDs, VCDs, and multimedia streams from various network sources."
