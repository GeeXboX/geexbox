#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib
cp -P $BUILD/$1*/libdrm/.libs/libdrm.so*[.0-9] $INSTALL/usr/lib
cp -P $BUILD/$1*/libdrm/intel/.libs/libdrm_intel.so*[.0-9] $INSTALL/usr/lib
cp -P $BUILD/$1*/libdrm/nouveau/.libs/libdrm_nouveau.so*[.0-9] $INSTALL/usr/lib
cp -P $BUILD/$1*/libdrm/radeon/.libs/libdrm_radeon.so*[.0-9] $INSTALL/usr/lib
