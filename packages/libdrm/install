#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib
cp -P $BUILD/$1*/.libs/libdrm.so*[.0-9] $INSTALL/usr/lib
cp -P $BUILD/$1*/intel/.libs/libdrm_intel.so*[.0-9] $INSTALL/usr/lib
cp -P $BUILD/$1*/radeon/.libs/libdrm_radeon.so*[.0-9] $INSTALL/usr/lib
cp -P $BUILD/$1*/nouveau/.libs/libdrm_nouveau.so*[.0-9] $INSTALL/usr/lib
