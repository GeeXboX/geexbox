#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build udev

export LIBUDEV_CFLAGS="-I`ls -d $ROOT/$BUILD/udev*`"
export LIBUDEV_LIBS="-I`ls -d $ROOT/$BUILD/udev*`"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-intel \
            --enable-radeon-experimental-api \
            --enable-udev \
            --enable-largefile
make
strip_libs .
make install
