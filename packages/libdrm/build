#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --enable-udev \
            --enable-largefile
make -C shared-core
make -C libdrm
strip_libs libdrm
make install -C shared-core
make install -C libdrm
