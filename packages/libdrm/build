#!/bin/sh

. config/options

#export LIBUDEV_CFLAGS="-I`ls -d $ROOT/$BUILD/udev*`"
#export LIBUDEV_LIBS="-I`ls -d $ROOT/$BUILD/udev*`"

cd $BUILD/$1*
do_configure \
            --enable-libkms \
            --enable-intel \
            --enable-radeon \
            --disable-vmwgfx-experimental-api \
            --enable-nouveau-experimental-api \
            --enable-udev \
            --enable-largefile
make
make_install
