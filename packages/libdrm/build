#!/bin/sh

. config/options

#export LIBUDEV_CFLAGS="-I`ls -d $ROOT/$BUILD/udev*`"
#export LIBUDEV_LIBS="-I`ls -d $ROOT/$BUILD/udev*`"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --enable-libkms \
            --enable-intel \
            --enable-radeon \
            --disable-vmwgfx-experimental-api \
            --enable-nouveau-experimental-api \
            --enable-udev \
            --enable-largefile
make
strip_libs .
make_install
