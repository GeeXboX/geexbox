#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
CFLAGS="$CFLAGS -I $LIB_PREFIX/include"
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --with-libxml-prefix=$LIB_PREFIX \
            --with-zlib \

make
strip_libs .libs
make install
