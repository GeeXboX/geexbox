PKG_NAME=elementary
PKG_URL="http://download.enlightenment.org/snapshots/2010-06-07/elementary-0.7.0.49539.tar.bz2"
PKG_VERSION=0.7.0.49539
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain ecore eet eina evas edje"
PKG_DEPENDS="$TARGET_LIBC ecore eet eina evas edje elementary-theme"
if [ "$TARGET_LIBC" = "uClibc" ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libiconv"
  PKG_DEPENDS="$PKG_DEPENDS libiconv"
fi
PKG_KCONFIG_DEPENDS="select PKG_libiconv if TARGET_LIBC_UCLIBC"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="The Elementary widget set library"
PKG_LONG_DESC="Elementary is a widget set based on the Enlightenment Foundation Libraries, primarily aimed at creating graphical user interfaces for mobile and embedded devices."
