#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build eina
$SCRIPTS/build ecore
$SCRIPTS/build efreet
$SCRIPTS/build libiconv

export LDFLAGS="$LDFLAGS -liconv"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --with-edje-cc=/bin/true

make
strip_libs src
make -C src install
cp elementary.pc $LIB_PREFIX/lib/pkgconfig
