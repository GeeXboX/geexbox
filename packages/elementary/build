#!/bin/sh

. config/options

[ "$TARGET_LIBC" = "uClibc" ] && export LDFLAGS="$LDFLAGS -liconv"

cd $BUILD/$1*
do_configure \
            --disable-doc \
            --with-edje-cc=/bin/true \
            --with-eet-eet=/bin/true \

make
make -C src install DESTDIR="$PWD/.install"
make install-pkgconfigDATA DESTDIR="$PWD/.install"
fix_libs $PWD/.install
