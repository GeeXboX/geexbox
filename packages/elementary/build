#!/bin/sh

. config/options

[ "$TARGET_LIBC" = "uclibc" ] && export LDFLAGS="$LDFLAGS -liconv"

cd $BUILD/$1*
do_configure \
            --disable-doc \
            --disable-edbus \
            --enable-efreet \
            --disable-eweather \
            --enable-ethumb \
            --with-edje-cc=/bin/true \
            --with-eet-eet=/bin/true \

make

# fake EDJE file creation
for i in edje_externals/icons objects/test objects/multip themes/default; do
  echo "" > data/$i.edj
done

for i in profile default/base illume/base standard/base; do
  echo "" > config/$i.cfg
done

make_install
