#!/bin/sh

. config/options

$SCRIPTS/build gstreamer
$SCRIPTS/build gst-plugins-base
$SCRIPTS/build glew

cd $BUILD/$1*

LIBS="-lGLU -lGL -lstdc++" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --enable-largefile \
            --disable-examples \
            --disable-valgrind \

make
strip_libs gst
make_install
