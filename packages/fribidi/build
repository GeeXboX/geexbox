#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-debug \
            --enable-malloc \
            --with-glib=no \
            --disable-shared
make
make install
cp -f $ROOT/$PACKAGES/$1/scripts/$1-config $LIB_PREFIX/bin/$1-config
