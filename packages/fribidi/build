#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-debug \
            --enable-malloc \
            --with-glib=no \
            --disable-shared
make
make_install
cp -f $ROOT/$PACKAGES/$1/scripts/$1-config .install/usr/bin/$1-config
