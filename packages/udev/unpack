#!/bin/sh

. config/options

$SCRIPTS/build toolchain

sed -i "s%/lib/firmware%/firmwares%" $BUILD/$1*/extras/firmware/firmware_helper.c

sed -i -e "s|^HOSTCC[[:space:]]*=.*$|HOSTCC = $HOST_CC|" \
       -e "s|^CROSS_COMPILE[[:space:]]*=.*$|CROSS_COMPILE = $TARGET_PREFIX|" \
       $BUILD/$1*/Makefile
