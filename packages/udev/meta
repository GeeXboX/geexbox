PKG_NAME=udev
PKG_URL="http://www.eu.kernel.org/pub/linux/utils/kernel/hotplug/udev-151.tar.bz2"
PKG_VERSION=151
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC GLib libusb usbutils"
PKG_BUILD_DEPENDS="toolchain GLib linux-headers libusb usbutils"
PKG_PRIORITY=required
PKG_SECTION=admin
PKG_SHORTDESC="/dev/ and hotplug management daemon"
PKG_LONGDESC="udev is a daemon which dynamically creates and removes device nodes from /dev/, handles hotplug events and loads drivers at boot time."
