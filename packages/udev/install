#!/bin/sh

. config/options

$SCRIPTS/install usbutils

mkdir -p $INSTALL/lib
cp -P $BUILD/$1-*/libudev/.libs/libudev.so* $INSTALL/lib

mkdir -p $INSTALL/sbin $INSTALL/usr/bin $INSTALL/lib/udev
cp $BUILD/$1-*/udev/udevd $INSTALL/sbin
cp $BUILD/$1-*/udev/udevadm $INSTALL/sbin
ln -sf /sbin/udevadm $INSTALL/usr/bin/udevinfo

cp $BUILD/$1-*/extras/firmware/firmware $INSTALL/lib/udev
for i in ata_id cdrom_id edd_id path_id scsi_id usb_id; do
  cp $BUILD/$1-*/extras/$i/$i $INSTALL/lib/udev
done

mkdir -p $INSTALL/etc/udev/rules.d
cp $PACKAGES/$1/config/udev.conf $INSTALL/etc/udev
cp $PACKAGES/$1/config/rules.d/* $INSTALL/etc/udev/rules.d
