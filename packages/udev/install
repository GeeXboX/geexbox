#!/bin/sh

. config/options

cd $BUILD/$1*

do_install lib/libudev.so*
for i in ata_id cdrom_id edd_id firmware path_id scsi_id usb_id; do
  do_install lib/udev/$i
done

do_install sbin

mkdir -p $INSTALL/usr/bin
ln -sf /sbin/udevadm $INSTALL/usr/bin/udevinfo

mkdir -p $INSTALL/etc/udev/rules.d
cp $ROOT/$PACKAGES/$1/config/udev.conf $INSTALL/etc/udev
cp $ROOT/$PACKAGES/$1/config/rules.d/* $INSTALL/etc/udev/rules.d
