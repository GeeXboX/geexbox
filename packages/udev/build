#!/bin/sh

. config/options

$SCRIPTS/build toolchain

[ "$DEVTOOLS" == yes ] && USE_LOG=true || USE_LOG=false

cd $BUILD/$1*
make OPTFLAGS="$CFLAGS" \
     LDFLAGS="$LDFLAGS" \
     CROSS_COMPILE="$TARGET_PREFIX" \
     USE_LOG=$USE_LOG \
     USE_SELINUX=false \
     DEBUG=false \
     EXTRAS="extras/firmware extras/dvb_device_name" \
     V=true
