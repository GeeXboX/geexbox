#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
make OPTFLAGS="$CFLAGS" \
     LDFLAGS="$LDFLAGS" \
     CROSS_COMPILE="$TARGET_PREFIX" \
     USE_LOG=true \
     USE_SELINUX=false \
     DEBUG=false \
     EXTRAS="extras/firmware extras/dvb_device_name extras/ata_id extras/scsi_id extras/edd_id extras/path_id extras/usb_id extras/volume_id" \
     V=true
