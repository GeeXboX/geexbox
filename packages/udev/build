#!/bin/sh

. config/options

$SCRIPTS/build toolchain

UTILS="firmware dvb_device_name ata_id scsi_id edd_id path_id usb_id volume_id"
for i in $UTILS; do
  EXTRAS="$EXTRAS extras/$i"
done

cd $BUILD/$1*
make OPTFLAGS="$CFLAGS" \
     LDFLAGS="$LDFLAGS" \
     CROSS_COMPILE="$TARGET_PREFIX" \
     USE_LOG=true \
     USE_SELINUX=false \
     DEBUG=false \
     EXTRAS="$EXTRAS" \
     V=true
