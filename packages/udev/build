#!/bin/sh

. config/options

export ac_cv_file__usr_share_pci_ids="no"
export ac_cv_file__usr_share_hwdata_pci_ids="no"
export ac_cv_file__usr_share_misc_pci_ids="yes"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --enable-silent-rules \
            --enable-extras \
            --disable-introspection \
            --prefix=/usr \
            --sysconfdir=/etc \
            --sbindir=/sbin \
            --libdir=/usr/lib \
            --with-rootlibdir=/lib \
            --libexecdir=/lib/udev \
            --mandir=/usr/share/man \
            --infodir=/usr/share/info \
            --without-selinux \
            --disable-static \
            --enable-shared \
            --disable-gtk-doc \

make
make_install
ln -sf ../../../lib/libudev.so.0 .install/usr/lib/libudev.so
