#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xorg-protocols

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --enable-static \
            --with-icondir=$XORG_PATH_ICONS \
            --with-cursorpath=$XORG_PATH_ICONS \

make
strip_libs src
make install
