#!/bin/sh

. config/options

setup_toolchain host

cd $BUILD/$1*
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=/usr \
             --disable-shared \
             --enable-static \

make
make install instroot="`ls -d $ROOT/$BUILD/$1*`/.install"
fix_libs ../.install toolchain
