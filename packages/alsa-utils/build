#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build alsa-lib

if [ "$DEVTOOLS" = yes]; then
  ALSAMIXER_CONFIG="--enable-alsamixer"
else
  ALSAMIXER_CONFIG="--disable-alsamixer"
fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-dependency-tracking \
            $ALSAMIXER_CONFIG
make -C amixer

if [ "$DEVTOOLS" = yes]; then
  make -C alsamixer
  make -C aplay
  make -C iecset
fi

exit 0
