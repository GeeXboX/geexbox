#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build alsa-lib

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-dependency-tracking \
            --disable-alsamixer
make -C amixer

if [ "$DEVTOOLS" = yes ]; then
  make -C aplay
  make -C iecset
fi

exit 0
