#!/bin/sh

. config/options

#export CPPFLAGS="$CPPFLAGS -I$LIB_PREFIX/include/ncurses"
#export LDFLAGS="$LDFLAGS -L$SYSROOT_PREFIX/usr/lib -L$SYSROOT_PREFIX/usr/lib64 -L$LIB_PREFIX/lib"

cd $BUILD/$1*

if [ "$DEVTOOLS" = no ]; then
 (cd amixer; $CC -o amixer amixer.c $CFLAGS -I../include $LDFLAGS -lasound -lm)
 mkdir -p .install/usr/bin
 cp -f amixer/amixer .install/usr/bin
else
  ./configure --host=$TARGET_NAME \
              --build=$HOST_NAME \
              --prefix=/usr \
              --disable-dependency-tracking \
              --enable-alsamixer \
              --with-curses=ncurses \
              --disable-xmlto
  make
  make_install
fi

exit 0
