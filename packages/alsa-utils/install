#!/bin/sh

. config/options

cd $BUILD/$1*

do_install usr/sbin/alsactl
do_install usr/sbin/alsaconf
do_install usr/bin/amixer

if pkg_use $1 devtools; then
  do_install usr/bin/alsamixer
  do_install usr/bin/aplay
  do_install usr/bin/iecset
  
  mkdir -p $INSTALL/usr/share/alsa/samples
  cp speaker-test/samples/*.wav $INSTALL/usr/share/alsa/samples
  cp speaker-test/samples/sample_map.csv $INSTALL/usr/share/alsa/samples
fi

exit 0
