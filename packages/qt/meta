PKG_NAME=qt
PKG_URL="http://get.qt.nokia.com/qt/source/qt-everywhere-opensource-src-4.7.0-beta2.tar.gz"
PKG_VERSION=4.7.0-beta2
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC freetype jpeg libpng tiff zlib dbus GLib sqlite fontconfig"
PKG_BUILD_DEPENDS="toolchain freetype jpeg libpng tiff zlib dbus GLib sqlite fontconfig"
if [ "$XORG" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_DEPENDS libX11 mesa"
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libX11 mesa"
fi
if [ "$PULSEAUDIO" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_DEPENDS pulseaudio"
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS pulseaudio"
fi
if [ "$GSTREAMER" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_DEPENDS gstreamer gst-plugins-base"
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS gstreamer gst-plugins-base"
fi
if [ "$TARGET_ARCH" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_DEPENDS sgx-OpenGLES"
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS sgx-OpenGLES"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Cross-platform application and UI framework"
PKG_LONGDESC="Qt is a cross-platform application and UI framework. It includes a cross-platform class library, integrated development tools and a cross-platform IDE. Using Qt, you can write web-enabled applications once and deploy them across many desktop and embedded operating systems without rewriting the source code."
