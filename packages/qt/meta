PKG_NAME=qt
PKG_URL="http://get.qt.nokia.com/qt/source/qt-everywhere-opensource-src-4.7.0-beta2.tar.gz"
PKG_VERSION=4.7.0-beta2
PKG_REV=1
PKG_DEPENDS="freetype jpeg libpng tiff zlib dbus GLib sqlite fontconfig"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="embedded xorg pulseaudio gstreamer webkit opengl opengles openvg openssl cxx"
PKG_DEPENDS_xorg="libX11 libXv libXcursor libXrandr libXrender mesa"
PKG_DEPENDS_pulseaudio="pulseaudio"
PKG_DEPENDS_gstreamer="gstreamer gst-plugins-base"
PKG_DEPENDS_opengles="sgx-OpenGLES"
PKG_DEPENDS_openvg="sgx-OpenGLES"
PKG_DEPENDS_openssl="openssl"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Cross-platform application and UI framework"
PKG_LONGDESC="Qt is a cross-platform application and UI framework. It includes a cross-platform class library, integrated development tools and a cross-platform IDE. Using Qt, you can write web-enabled applications once and deploy them across many desktop and embedded operating systems without rewriting the source code."
