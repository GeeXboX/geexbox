#!/bin/sh

. config/options

cd $BUILD/$1-*

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --with-plugindir=/usr/lib/alsa \
            --disable-jack \
            --disable-samplerate \
            --disable-avcodec \
            --enable-pulseaudio \
            --with-speex=lib \

make
strip_libs .
make_install
