#!/bin/sh

. config/options

$SCRIPTS/build alsa-lib
$SCRIPTS/build pulseaudio

cd $BUILD/$1-*

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-jack \
            --disable-samplerate \
            --disable-avcodec \
            --enable-pulseaudio \
            --with-speex=lib \

make
strip_libs .
make -C pulse install
