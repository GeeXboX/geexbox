#!/bin/sh

NETFLIX_DESKTOP="${HOME}/.netflix-desktop"

if [ ! -d ${NETFLIX_DESKTOP}/drive_c/netflix-profile ]; then
  echo "Copying browser profile..."
  mkdir -p "${NETFLIX_DESKTOP}/drive_c/netflix-profile"
  cp -a /usr/share/netflix-desktop "${NETFLIX_DESKTOP}/drive_c/netflix-profile"
fi

if [ ! -f "${NETFLIX_DESKTOP}/drive_c/Program Files/Mozilla Firefox/firefox.exe" ]; then
  echo "Installing Mozilla Firefox..."
  WINEPREFIX="${NETFLIX_DESKTOP}" wine "/usr/share/wine/firefox/FirefoxSetup.exe" /S > /dev/null
fi
if [ ! -f "${NETFLIX_DESKTOP}/drive_c/Program Files/Microsoft Silverlight/sllauncher.exe" ]; then
  echo "Installing Microsoft Silverlight..."
  WINEPREFIX="${NETFLIX_DESKTOP}" wine "/usr/share/wine/silverlight/Silverlight.exe" /q > /dev/null
fi

WINEPREFIX="${NETFLIX_DESKTOP}" wine \
  "C:\\Program Files\\Mozilla Firefox\\firefox.exe" \
  -profile "C:\\netflix-profile" 2>/dev/null
