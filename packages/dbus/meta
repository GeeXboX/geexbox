PKG_NAME=dbus
PKG_URL="http://dbus.freedesktop.org/releases/dbus/dbus-1.3.0.tar.gz"
PKG_VERSION=1.3.0
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC expat"
PKG_BUILD_DEPENDS="toolchain expat"
if [ "$XORG" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libX11"
  PKG_DEPENDS="$PKG_DEPENDS libX11"
fi
PKG_PRIORITY=required
PKG_SECTION=admin
PKG_SHORTDESC="simple interprocess messaging system"
PKG_LONGDESC="D-Bus is a message bus, used for sending messages between applications. This package contains the D-Bus daemon and related utilities and the dbus shared library."
