#!/bin/sh

. config/options

export ac_cv_have_abstract_sockets=yes

[ "$XORG" = yes ] && WITH_XORG="--with-x" || WITH_XORG="--without-x"

cd $BUILD/$1*
do_configure \
            --localstatedir=/var \
            --disable-tests \
            --disable-ansi \
            --disable-verbose-mode \
            --disable-asserts \
            --disable-checks \
            --disable-xml-docs \
            --disable-doxygen-docs \
            --disable-gcov  \
            --enable-abstract-sockets \
            --disable-selinux \
            --disable-libaudit \
            --disable-dnotify \
            --enable-inotify \
            --with-xml=expat \
            $WITH_XORG \
            --with-session-socket-dir=/var/run/dbus \
            --with-test-socket-dir=/var/run/dbus \
            --with-system-pid-file=/var/run/dbus/pid \
            --with-system-socket=/var/run/dbus/system_bus_socket \
            --with-dbus-user=root \
            --with-dbus-daemondir=/usr/bin \

make
strip_libs dbus
make_install
