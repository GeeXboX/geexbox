#!/bin/sh

. config/options

require_cxx $1

$SCRIPTS/build toolchain
$SCRIPTS/build SDL
$SCRIPTS/build zlib

cd $BUILD/$1*
./configure --host=geexbox-$TARGET_ARCH \
            --prefix=$LIB_PREFIX \
            --backend=sdl \
            --enable-debug \
            --enable-alsa \
            --disable-mt32emu \
            --disable-vorbis \
            --disable-tremor \
            --disable-mad \
            --disable-flac \
            --enable-zlib \
            --disable-mpeg2 \
            --disable-fluidsynth \
            --disable-nasm
make
