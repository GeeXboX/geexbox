#!/bin/sh

. config/options

$SCRIPTS/build gstreamer
$SCRIPTS/build ti-omxil

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug"
else
  DEBUG_CONFIG="--disable-debug --disable-profiling --disable-gcov"
fi

export LIBS="-L$SYSROOT_PREFIX/usr/lib"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            $DEBUG_CONFIG \

make
make install
