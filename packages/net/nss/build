#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

setup_toolchain target

export MAKEFLAGS=-j1
export CROSS_COMPILE=1
export NATIVE_CC="$HOST_CC"
export BUILD_OPT=1
export LDFLAGS=""

export FREEBL_NO_DEPEND=1
export FREEBL_LOWHASH=1

export LIBDIR=$LIB_PREFIX
export MOZILLA_CLIENT=1
export NS_USE_GCC=1
export NSS_USE_SYSTEM_SQLITE=1
export NSS_ENABLE_ECC=1

export OS_RELEASE=3.4
export OS_TARGET=Linux
export OS_ARCH=Linux

export NSPR_INCLUDE_DIR=$LIB_PREFIX/include/nspr
export NSPR_LIB_DIR=$LIB_PREFIX/lib

OS_TEST="${TARGET_ARCH}"

if [ "$TARGET_ARCH" = "x86_64" ]; then
  export USE_64=1
fi
make -C ./nss CCC="${TARGET_CXX}" OS_TEST=${OS_TEST}


FI="`pwd`/fake-install"
make -C ./nss \
        CCC="${TARGET_CXX}" \
        OS_TEST=${OS_TEST} \
        SOURCE_LIB_DIR="${FI}/usr/lib" \
        SOURCE_BIN_DIR="${FI}/usr/bin" \
        install

echo "Preparing libs, headers and bins ..."

mkdir -p .install/usr/lib
for file in dist/*.OBJ/lib/*.so; do
        cp $file  .install/usr/lib
done

mkdir -p .install/usr/include/nss3
cp dist/public/nss/* .install/usr/include/nss3

mkdir -p .install/usr/bin
cp ${FI}/usr/bin/* .install/usr/bin

for file in libsoftokn3.chk libfreebl3.chk libnssdbm3.chk; do
  touch .install/usr/lib/$file
  chmod 755 .install/usr/lib/$file
done

cp $ROOT/$PACKAGES/$PKG_SECTION/$1/scripts/signlibs.sh .install/usr/bin/signlibs.sh

mkdir -p .install/etc/pki/nssdb/
touch ./empty_password
export LD_LIBRARY_PATH=$ROOT/$TOOLCHAIN/lib
$ROOT/$TOOLCHAIN/bin/certutil -N -d .install/etc/pki/nssdb/ -f ./empty_password
chmod 644 .install/etc/pki/nssdb/*.db
rm ./empty_password