PKG_NAME=libxml++
PKG_VERSION=2.18.2
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC libxml2 glibmm"
PKG_BUILD_DEPENDS="toolchain libxml2 glibmm"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="A C++ interface to the GNOME XML library (libxml2)"
PKG_LONGDESC="libxml++ is a C++ wrapper for the libxml2 XML parser library (otherwise known as the GNOME2 XML library)"
