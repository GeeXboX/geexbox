#!/bin/sh

. config/options

require_cxx $1

cd $BUILD/$1*/

do_configure \
            --with-ssl=no \
            --with-epoll=no \
            --with-sendfile=yes \
            --with-sdk=yes \
            --with-demos=no
make
make_install
sed -i "s:\(['= ]\)/usr:\\1$LIB_PREFIX:g" .install/usr/bin/tntnet-config
