#!/bin/sh

. config/options

require_cxx $1

$SCRIPTS/build cxxtools
$SCRIPTS/build zlib

cd $BUILD/$1*/
autoconf # rebuild configure (we patched configure.in)
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
	    --prefix=$LIB_PREFIX \
	    --disable-dependency-tracking \
	    --disable-shared \
	    --with-ssl=no \
	    --with-epoll=no \
	    --with-sendfile=yes \
	    --with-sdk=yes \
	    --with-demos=no
make
make install
cp -p $LIB_PREFIX/bin/tntnet-config $ROOT/$TOOLCHAIN/bin
