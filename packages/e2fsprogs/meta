PKG_NAME=e2fsprogs
PKG_URL="http://downloads.sourceforge.net/e2fsprogs/e2fsprogs-1.41.12.tar.gz"
PKG_VERSION=1.41.12
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC util-linux-ng"
PKG_BUILD_DEPENDS="toolchain util-linux-ng"
PKG_PRIORITY=optional
PKG_SECTION=filesystem
PKG_SHORTDESC="ext2/ext3/ext4 file system utilities"
PKG_LONGDESC="The ext2, ext3 and ext4 file systems are successors of the original ext ("extended") file system. They are the main file system types used for hard disks on GeeXboX and other Linux systems. This package contains programs for creating ext-based file systems."
