#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib/vdr
cp -a $BUILD/$1*/lib$1*.so.* $INSTALL/usr/lib/vdr

NAME=`echo $1 | sed s/vdr-//`
mkdir -p $INSTALL/etc/vdr/plugins.d
cp $PACKAGES/$1/config/$NAME $INSTALL/etc/vdr/plugins.d

mkdir -p $INSTALL/etc/vdr/plugins/
cp $BUILD/$1*/streamdevhosts.conf.example $INSTALL/etc/vdr/plugins/streamdevhosts.conf
