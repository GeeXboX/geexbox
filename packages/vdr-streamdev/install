#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/lib/vdr
cp -a $BUILD/$1*/lib$1*.so.* $INSTALL/usr/lib/vdr

for loc in $INCLUDED_LOCALES; do
  LOCALE=`echo $loc|cut -f1 -d.`
  if [ -d $BUILD/$1*/locale/$LOCALE ]; then
    mkdir -p $INSTALL/usr/share/locale/$LOCALE
    cp -a $BUILD/$1*/locale/$LOCALE/* $INSTALL/usr/share/locale/$LOCALE/
  fi
done

mkdir -p $INSTALL/etc/vdr/plugins.d
cp $PACKAGES/$1/config/streamdev-server $INSTALL/etc/vdr/plugins.d/50_streamdev-server
cp $PACKAGES/$1/config/streamdev-client $INSTALL/etc/vdr/plugins.d/50_streamdev-client

mkdir -p $INSTALL/etc/vdr/plugins/streamdev
cp $BUILD/$1*/streamdev/streamdevhosts.conf $INSTALL/etc/vdr/plugins/streamdev
if [ "$SERVICES" = yes ]; then
  echo '0.0.0.0/0' >> $INSTALL/etc/vdr/plugins/streamdev/streamdevhosts.conf
fi
