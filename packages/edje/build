#!/bin/sh

. config/options

cd $BUILD/$1*

mkdir -p objdir-host
cd objdir-host
do_configure host \
            --disable-amalgamation \
            --disable-doc \
            --enable-edje-cc \
            --disable-edje-decc \
            --disable-edje-recc \
            --disable-edje-player \
            --disable-edje-convert \

make
make_install toolchain
cd ..

mkdir -p objdir-target
cd objdir-target
do_configure target \
            --disable-amalgamation \
            --disable-doc \
            --disable-edje-cc \
            --disable-edje-decc \
            --disable-edje-recc \
            --disable-edje-player \
            --disable-edje-convert \

make
make_install
