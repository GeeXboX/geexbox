#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build ecore
$SCRIPTS/build embryo
$SCRIPTS/build lua

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --disable-edje-cc \
            --disable-edje-decc \
            --disable-edje-recc

make
strip_libs src
make install
