#!/bin/sh

. config/options

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --enable-amalgamation \
            --disable-doc \
            --disable-edje-cc \
            --disable-edje-decc \
            --disable-edje-recc \
            --disable-edje-player \

make
strip_libs src
make_install
