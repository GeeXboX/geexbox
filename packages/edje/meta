PKG_NAME=edje
PKG_URL_REV=`( get_meta EFL; echo $PKG_URL_REV )`
PKG_VERSION=1.2+${PKG_URL_REV}
PKG_URL_PROTO=svn
PKG_URL="http://svn.enlightenment.org/svn/e/trunk/${PKG_NAME}"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain ecore eet eina evas embryo lua"
PKG_RUN_DEPENDS="$TARGET_LIBC ecore eet eina evas embryo"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Graphical layout and animation library"
PKG_LONGDESC="Edje is a graphical layout and animation library for animated resizable, compressed and scalable themes. It is the theming engine behind Enlightenment DR 0.17."
