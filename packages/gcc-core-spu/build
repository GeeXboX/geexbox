#!/bin/sh

. config/options

$SCRIPTS/build toolchain

setup_toolchain host

cd $BUILD/gcc*
mkdir -p objdir-$1
cd objdir-$1
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=spu \
             --prefix=$ROOT/$TOOLCHAIN \
             --program-prefix=spu- \
             --with-local-prefix=${LIB_PREFIX#$SYSROOT_PREFIX} \
             --with-gmp=$ROOT/$TOOLCHAIN \
             --with-mpfr=$ROOT/$TOOLCHAIN \
             --with-as=$ROOT/$TOOLCHAIN/bin/spu-as \
             --with-ld=$ROOT/$TOOLCHAIN/bin/spu-ld \
             --enable-languages=c \
             --disable-libmudflap \
             --disable-libssp \
             --disable-libgomp \
             --disable-shared \
             --disable-multilib \
             --disable-threads \
             --without-headers \
             --with-newlib \
             --disable-decimal-float \
             --disable-nls \

make
