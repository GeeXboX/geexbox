#!/bin/sh

. config/options

$SCRIPTS/install sqlite

PYTHON_LIB_DIR=`ls -d $INSTALL/usr/lib/python*`

mkdir -p $PYTHON_LIB_DIR/site-packages/pysqlite2
cp $BUILD/$1*/build/lib*/pysqlite2/*.so $PYTHON_LIB_DIR/site-packages/pysqlite2
cp $BUILD/$1*/build/lib*/pysqlite2/*.pyc $PYTHON_LIB_DIR/site-packages/pysqlite2
