PKG_NAME=xf86-input-evdev
PKG_URL="http://xorg.freedesktop.org/archive/individual/driver/xf86-input-evdev-2.3.1.tar.bz2"
PKG_VERSION=2.3.1
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain xorg-server"
PKG_DEPENDS="$TARGET_LIBC xorg-server"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORT_DESC="X.Org X server -- evdev input driver"
PKG_LONG_DESC="This package provides the driver for input devices using evdev, the Linux kernel's event delivery mechanism. This driver allows for multiple keyboards and mice to be treated as separate input devices."
