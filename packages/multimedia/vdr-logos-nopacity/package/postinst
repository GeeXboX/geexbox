#! /bin/sh

if [ "$1" = configure ]; then
  # postinst
  if [ -f /etc/vdr/plugins.d/50_skinflatplus ]; then
    ln -sf /etc/vdr/plugins/skinnopacity/logos /usr/share/vdr/plugins/skinflatplus/logos
  fi
else
  # postrm
  rm -f /usr/share/vdr/plugins/skinflatplus/logos
fi

systemctl restart vdr.service

exit 0
