#!/bin/sh

. config/options

$SCRIPTS/build kodi

get_meta kodi

XBMC_BUILD=$PKG_BUILD_DIR

get_meta $1

cd $XBMC_BUILD
export DESTDIR=$ROOT/$BUILD/$PKG_NAME-$PKG_VERSION/.install
export STAGING_LIBDIR=$LIB_PREFIX/lib
export STAGING_INCDIR=$LIB_PREFIX/include
export BUILD_SYS="$HOST_NAME"
export HOST_SYS="$TARGET_NAME"

make eventclients

cd $DESTDIR
strip_bins ./usr/bin
cp $ROOT/$PACKAGES/$PKG_SECTION/$1/scripts/* ./usr/bin

mkdir -p ./usr/lib
cp -R .$ROOT/$TOOLCHAIN/lib/* ./usr/lib/

mkdir -p ./etc
cp $ROOT/$PACKAGES/$PKG_SECTION/$1/config/* ./etc
