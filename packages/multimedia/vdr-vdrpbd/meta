PKG_NAME=vdr-vdrpbd
PKG_VERSION="1.0.0"
PKG_URL_PROTO=git
PKG_URL_REV="e87f3a9"
PKG_URL="git://projects.vdr-developer.org/vdrpbd.git"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC vdr"
PKG_BUILD_DEPENDS="toolchain vdr"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="vdr-vdrpbd VDR Power Button Daemon"
PKG_LONGDESC="vdrpbd is meant to be used on VDR based HTPC systems as a replacement for th usually used acpid. Its primary task is to forward the hardware power button on mainboards to VDR so VDR can initiate a clean shutdown process."
