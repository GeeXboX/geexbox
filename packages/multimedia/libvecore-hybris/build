#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

out_dir=`pwd`/.install

cd hybris
autoreconf -vif
./configure --host=arm-none-linux --prefix=$out_dir/usr/local
#--enable-alinker=jb

make
make install

# copy only the libs we need
mkdir -p $out_dir/lib
cp -P $out_dir/usr/local/lib/libhybris-common.so* $out_dir/lib
cp $out_dir/usr/local/lib/libvecore.so $out_dir/lib/libvecore-hybris.so
strip_libs $out_dir/lib

# extract android libs / blobs
tar -xjf $ROOT/$PACKAGES/$PKG_SECTION/$1/scripts/vecore-android-libs.tar.bz2 -C $out_dir
