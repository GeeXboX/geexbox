#!/bin/sh

. config/options

$SCRIPTS/build toolchain

export ac_cv_path_SDL_CONFIG=no

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --disable-static \
            --disable-dependency-tracking \
            --disable-assert \
            --disable-sdltest \
            --without-libquicktime \
            --without-libdv \
            --without-libpng \
            --without-x
make
make install
