#!/bin/sh

. config/options

$SCRIPTS/build vdr
$SCRIPTS/build ImageMagick

VDR_DIR=`basename $BUILD/vdr-1*`

cd $BUILD/$1*
make all \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="." \
  LOCALEDIR="./locale" \
  SKINELCHI_HAVE_IMAGEMAGICK=1 \
  SKINELCHI_USE_AVARDS_PLUGIN= \
  SKINELCHI_USE_EPGSEARCH_PLUGIN= \
  SKINELCHI_USE_MAILBOX_PLUGIN= \
  SKINELCHI_DEBUG=
