PKG_NAME=xine-ui
PKG_URL="GEEXBOX_SRCS/xine-ui-cvs+20090315.tar.bz2"
PKG_VERSION="cvs+20090315"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain xine-lib libpng"
PKG_RUN_DEPENDS="$TARGET_LIBC xine-lib libpng"
if [ "$TARGET_LIBC" = "uClibc" ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libiconv gettext"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libiconv gettext"
fi
PKG_PRIORITY=optional
PKG_SECTION=video
PKG_SHORTDESC="the xine video/media player, user interface"
PKG_LONGDESC="This is an X11 based GUI for the libxine video player library. It provides xine, a skin based media player that can play all the audio/video formats that libxine supports. Currently, this includes MPEG1/2, some AVI and Quicktime files, some network streaming methods and disc based media. A more complete list can be found on http://xinehq.de/index.php/features/."
