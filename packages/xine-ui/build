#!/bin/sh

. config/options

$SCRIPTS/build xine-lib
$SCRIPTS/build iconv
$SCRIPTS/build gettext

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug"
else
  DEBUG_CONFIG="--disable-debug"
fi

if [ "$XORG" = yes ]; then
  XORG_CONFIG="--with-x"
else
  XORG_CONFIG="--without-x"
fi

if [ "$VDR" = yes ]; then
  VDR_CONFIG="--enable-vdr-keys"
else
  VDR_CONFIG="--disable-vdr-keys"
fi

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-xinerama \
            --disable-xft \
            --disable-aalibtest \
            --without-aalib \
            --without-curl \
            --disable-lirc \
            --without-readline \
            $DEBUG_CONFIG \
            $XORG_CONFIG \
            $VDR_CONFIG  
make
