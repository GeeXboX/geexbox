#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/bin
[ -f $BUILD/$1*/src/xitk/xine ] && cp $BUILD/$1*/src/xitk/xine $INSTALL/usr/bin

mkdir -p $INSTALL/usr/share/xine/skins
cp $BUILD/$1*/misc/xine_splash.png $INSTALL/usr/share/xine/skins
cp $BUILD/$1*/misc/xine-ui_logo.mpv $INSTALL/usr/share/xine/skins

mkdir -p $INSTALL/usr/share/xine/skins/xinetic
cp $BUILD/$1*/src/xitk/skins/xinetic/*.png \
  $INSTALL/usr/share/xine/skins/xinetic
cp $BUILD/$1*/src/xitk/skins/xinetic/skinconfig \
  $INSTALL/usr/share/xine/skins/xinetic
