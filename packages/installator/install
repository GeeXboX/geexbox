#!/bin/sh

. config/options

mkdir -p $INSTALL/sbin
cp $PACKAGES/$1/scripts/$1.sh $INSTALL/sbin/$1
[ "$CONSOLE" = yes ] && sed -i "s/#_CONSOLE_ //" $INSTALL/sbin/$1
sed -i "s/VERSION=.*/VERSION=$GEEXBOX_VERSION/" $INSTALL/sbin/$1

mkdir -p $INSTALL/etc/installator
for MENU_LANG in $INCLUDED_LANGS; do
  [ -f $PACKAGES/$1/config/$MENU_LANG.install ] && cp $PACKAGES/$1/config/$MENU_LANG.install $INSTALL/etc/installator
done
