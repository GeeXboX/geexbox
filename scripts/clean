#!/bin/sh

. config/options

clean ()
{
  printf "%${INDENT}c CLEAN    $1\n" >&$SILENT_OUT
  export INDENT=$((${INDENT:-1}+$INDENT_SIZE))

  if [ "$CLEAN_SOURCES" = true ]; then
    rm -rf $SOURCES/$1
    return
  fi

  if [ "$FULL" = true ]; then
    rm -rf $BUILD_BASE*/$STAMPS_NOARCH/$1*
    rm -rf $BUILD_BASE*/$1*
    rm -rf $STAMPS_NOARCH/$1
    rm -rf $SOURCES/$1
  else
    [ "$1" != toolchain ] && rm -rf $BUILD/$1* || true
    rm -f $STAMPS/$1*/unpack
    rm -f $STAMPS/$1*/build
    $SCRIPTS/unpackage $1
    [ "$1" != opkg-host ] && $SCRIPTS/unpackagedev $1 || true
  fi

  unset INDENT
}

if [ "$1" = "--full" ]; then
  FULL=true
  shift
elif [ "$1" = "--sources" ]; then
  CLEAN_SOURCES=true
  shift
fi

if [ -z "$1" ]; then
  for i in $PACKAGES/*; do clean ${i#$PACKAGES/}; done
  $SCRIPTS/unpackagedev opkg-host
  rm -rf $BUILD/toolchain
  rm -rf $BUILD/iso
  rm -rf $BUILD/rootfs
  rm -rf $BUILD/packages
  rm -rf $BUILD/devpackages
  rm -rf $BUILD/initrd
  if [ "$FULL" = true ]; then
    rm -rf $CCACHE_DIR
    rm -rf $BUILD_NOARCH
    rm -f $STAMPS_NOARCH/kconfiginit
  fi
else
  clean $1
fi

exit 0
