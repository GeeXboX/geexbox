#!/bin/sh

cat > config/Kconfig.flavours <<EOF
############################################
# This file is autogenerated, do not edit! #
############################################

choice FLAVOUR
  prompt "Flavour"
  default FLAVOUR_geexbox
EOF

cat config/flavours/*/Kconfig >> config/Kconfig.flavours

cat >> config/Kconfig.flavours <<EOF
endchoice

EOF
